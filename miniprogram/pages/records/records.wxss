/* pages/records/records.wxss */
.page-container {
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 游客模式提示样式 */
.guest-tip {
  margin: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 154, 158, 0.3);
}

.tip-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
}

.tip-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

.tab-bar {
  display: flex;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 35rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #667eea;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

.filter-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-bar {
  display: flex;
  gap: 15rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.filter-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.filter-text {
  color: #333;
  font-weight: 500;
}

.filter-arrow {
  color: #999;
  font-size: 20rpx;
}

/* 记录容器 */
.records-container {
  padding: 0 20rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.record-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.record-info {
  flex: 1;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

/* 创建者信息样式 */
.record-creator {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-top: 6rpx;
  display: inline-block;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.record-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: #e9ecef;
}

.action-icon {
  font-size: 24rpx;
}

.record-content {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.record-detail {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

/* 特殊样式 */
.feed-type {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.health-status {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.health-status.healthy {
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.health-status.sick {
  background: linear-gradient(135deg, #f44336, #d32f2f);
}

.health-status.recovering {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.health-status.observation {
  background: linear-gradient(135deg, #2196F3, #1976D2);
}

.cleaning-type {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.record-notes {
  margin-top: 15rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
}

.notes-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.notes-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.add-record-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx;
  width: 100%;
  max-height: 70vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.modal-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.modal-option {
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.modal-option:active {
  background: #e9ecef;
  border-color: #667eea;
}

.modal-cancel {
  margin-top: 20rpx;
  padding: 25rpx;
  background: #f44336;
  color: white;
  border-radius: 15rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 响应式调整 */
