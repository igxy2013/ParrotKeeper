.page {
  padding: 16rpx 24rpx 48rpx;
}
.loading, .error {
  padding: 32rpx;
  text-align: center;
  color: #666;
}
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
  padding: 20rpx;
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.row:last-child { border-bottom: none; }
.label {
  color: #888;
  font-size: 26rpx;
  min-width: 160rpx;
}
.value {
  color: #222;
  font-size: 28rpx;
  text-align: right;
  word-break: break-all;
}
.aggregate {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

/* 照片展示样式 */
.photos {
  margin-top: 16rpx;
}
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 12rpx;
  margin-top: 12rpx;
}
.photo-item {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}
