.page {
  padding: 16rpx 24rpx 48rpx;
}
.loading, .error {
  padding: 32rpx;
  text-align: center;
  color: #666;
}
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
  padding: 20rpx;
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.row:last-child { border-bottom: none; }
.label {
  color: #888;
  font-size: 26rpx;
  min-width: 160rpx;
}
.value {
  color: #222;
  font-size: 28rpx;
  text-align: right;
  word-break: break-all;
}
.aggregate {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

/* 照片展示样式 */
.photos {
  margin-top: 16rpx;
}
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 12rpx;
  margin-top: 12rpx;
}
.photo-item {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.action-bar {
  display: flex;
  gap: 16rpx;
  margin: 20rpx 0;
  padding: 0 20rpx;
}
.btn {
  flex: 1;
  padding: 8rpx 0;
  border-radius: 16rpx;
  font-size: 28rpx;
}
.btn.edit {
  background: #3b82f6;
  color: #fff;
}
.btn.delete {
  background: #ef4444;
  color: #fff;
}

/* 操作记录样式 */
.oplogs-section {
  margin-top: 24rpx;
  padding: 0 20rpx;
}
.oplogs-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  padding-left: 12rpx;
  border-left: 8rpx solid #10b981;
}
.oplogs-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
}
.oplog-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.oplog-item {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
  padding: 16rpx;
  border-left: 8rpx solid #60a5fa;
}
.oplog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.oplog-action {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}
.oplog-time {
  font-size: 24rpx;
  color: #9ca3af;
}
.oplog-meta {
  font-size: 24rpx;
  color: #6b7280;
}
.oplog-notes {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #4b5563;
}
.oplog-diff {
  margin-top: 8rpx;
}
.oplog-diff-item {
  display: block;
  font-size: 26rpx;
  color: #374151;
}
.oplogs-empty {
  font-size: 26rpx;
  color: #9ca3af;
  padding: 12rpx 0 24rpx;
}
