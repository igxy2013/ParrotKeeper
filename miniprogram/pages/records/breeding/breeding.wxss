/* pages/breeding/breeding.wxss */

.page-container {
  min-height: 100vh;
  /* 默认绿色主题背景，与首页繁殖按钮一致 */
  background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 50%, #dcfce7 100%);
  padding-bottom: 40rpx;
}

.page-content {
  padding: 20rpx;
}

/* 游客提示 */
.guest-tip {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tip-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.tip-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* 头部操作按钮 */
.header-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* 统一头部右侧加号按钮样式（与喂食页一致） */
.header-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.header-btn-icon {
  color: #ffffff;
  font-size: 32rpx;
}

/* 统一 app-header 右侧加号图标尺寸（繁殖页） */
.header-btn-icon-img {
  width: 36rpx;
  height: 36rpx;
}

/* 统计卡片 */
.stats-section {
  margin-bottom: 32rpx;
}

/* Feeding-style summary card (green theme) */
.summary-card {
  /* 对齐喂食页统计卡片的圆角、间距与阴影 */
  background: linear-gradient(90deg, #22c55e, #10b981, #0ea5e9);
  color: #ffffff;
  margin-bottom: 24rpx;
}
.summary-title { margin-bottom: 24rpx; }
.summary-grid { display: grid; gap: 24rpx; }
.summary-grid-2 { grid-template-columns: repeat(2, 1fr); }
.summary-metric { 
  text-align: center; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
}
.summary-value { 
  font-size: 48rpx; 
  font-weight: 700; 
  line-height: 1.2; 
  margin-bottom: 8rpx;
}
.summary-label { 
  font-size: 24rpx; 
  color: rgba(255,255,255,0.8); 
  line-height: 1.3;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 32rpx;
}

.chip-scroll { white-space: nowrap; }
.chip {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 24rpx;
  margin-right: 12rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 24rpx;
}
.chip.active {
  background: #10b981; /* green theme */
  color: #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(16, 185, 129, 0.35);
}

/* 记录列表 */
.records-section {
  flex: 1;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-card {
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(8rpx);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 50rpx -24rpx rgba(0, 0, 0, 0.25);
  border: 1rpx solid rgba(17, 24, 39, 0.06);
  transition: all 0.3s ease;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.record-info {
  flex: 1;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.edit-btn {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.delete-btn {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.action-icon-img {
  width: 32rpx;
  height: 32rpx;
}

.parrot-pair {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pairing {
  background: #f3e8ff;
  color: #7c3aed;
}

.status-nesting {
  background: #dbeafe;
  color: #2563eb;
}

.status-laying {
  background: #fef3c7;
  color: #d97706;
}

.status-hatching {
  background: #fed7aa;
  color: #ea580c;
}

.status-brooding {
  background: #dcfce7;
  color: #16a34a;
}

.status-completed {
  background: #f3f4f6;
  color: #6b7280;
}

.record-date {
  text-align: right;
}

.date-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.record-details {
  margin-bottom: 24rpx;
}

.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
}

.detail-label {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

.record-notes {
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx;
}

.notes-text {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: #10b981;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f4f6;
  border-top: 4rpx solid #10b981;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 弹窗样式 */
/* 搜索与日期筛选（对齐健康页样式） */
.search-bar { margin-bottom: 16rpx; }
.search-input {
  width: 100%;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
}

.date-filter {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.date-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
}
.date-label { font-size: 24rpx; color: #6b7280; }
.date-value { flex: 1; font-size: 28rpx; color: #374151; }
.date-clear { color: #10b981; font-size: 26rpx; padding: 12rpx 16rpx; }

/* 虚拟滚动容器 */
.records-scroll {
  max-height: 60vh;
}

/* 搜索与日期筛选（与清洁页一致的风格） */
.search-filter { background: rgba(255,255,255,0.9); border: 1rpx solid rgba(17,24,39,0.06); box-shadow: 0 12rpx 30rpx -16rpx rgba(0,0,0,0.15); border-radius: 32rpx; padding: 24rpx; display: flex; flex-direction: column; gap: 16rpx; }
.search-input { background: #f3f4f6; border-radius: 9999rpx; height: 72rpx; line-height: 72rpx; padding: 0 24rpx; font-size: 26rpx; color: #111827; width: 100%; box-sizing: border-box; }
.date-filter-row { display: flex; align-items: center; gap: 16rpx; }
.date-picker { background: #f3f4f6; border-radius: 9999rpx; padding: 12rpx 20rpx; font-size: 24rpx; color: #111827; }
.range-sep { color: #6b7280; font-size: 24rpx; }
.clear-date { padding: 10rpx 20rpx; border-radius: 9999rpx; background: #fef3c7; color: #b45309; font-size: 24rpx; }
