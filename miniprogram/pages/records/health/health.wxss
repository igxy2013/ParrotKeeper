/* 健康检查页面样式 */
.page-container {
  min-height: 100vh;
  /* 统一为紫色主题背景，与页面头部一致 */
  background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 50%, #ede9fe 100%);
}

.page-content {
  padding: 24rpx;
}

.guest-tip {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1px solid rgba(16, 185, 129, 0.15);
  padding: 32rpx;
  text-align: center;
  color: #4b5563;
}
.tip-text { font-size: 30rpx; font-weight: 600; color: #111827; }
.tip-subtitle { margin-top: 12rpx; font-size: 24rpx; color: #6b7280; }

.filter-section { margin: 24rpx 0 16rpx; }
.chip-scroll { white-space: nowrap; }
.chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  margin-right: 12rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 24rpx;
}
.chip.active { background: #8b5cf6; color: #ffffff; box-shadow: 0 4rpx 10rpx rgba(139, 92, 246, 0.35); }

.overview-card {
  /* 紫色主题渐变，与头部 theme=purple 保持一致 */
  background: linear-gradient(90deg, #a78bfa, #c084fc, #d946ef);
  color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(167, 139, 250, 0.35);
}
.overview-title { font-size: 32rpx; font-weight: 800; margin-bottom: 24rpx; }
.overview-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24rpx; }
.metric { text-align: center; }
.metric-value { font-size: 40rpx; font-weight: 900; }
.metric-label { margin-top: 8rpx; font-size: 24rpx; color: rgba(255,255,255,0.85); }

.record-list { margin-top: 24rpx; }
.record-card {
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(17, 24, 39, 0.06);
  border-radius: 28rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 20rpx 50rpx -24rpx rgba(0, 0, 0, 0.25);
}
.record-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 12rpx; }
.record-title { font-size: 30rpx; font-weight: 700; color: #111827; }
.record-time { font-size: 24rpx; color: #6b7280; }
.record-body { margin-top: 8rpx; }
.record-detail { display: flex; align-items: baseline; margin-top: 8rpx; }
.detail-label { font-size: 24rpx; color: #6b7280; }
.detail-value { font-size: 26rpx; color: #111827; }

.empty-state { margin-top: 40rpx; text-align: center; color: #6b7280; }
.empty-icon { font-size: 56rpx; }
.empty-text { margin-top: 12rpx; font-size: 26rpx; }

.btn { border-radius: 9999rpx; }
.btn-primary { background: #8b5cf6; color: #ffffff; }
.btn-large { padding: 20rpx 28rpx; font-size: 28rpx; }
.mt-20 { margin-top: 20rpx; }
