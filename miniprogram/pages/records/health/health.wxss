/* 健康检查记录页面样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 50%, #ede9fe 100%);
}

.page-content {
  padding: 24rpx;
}

.guest-tip {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1px solid rgba(16, 185, 129, 0.15);
  padding: 32rpx;
  text-align: center;
  color: #4b5563;
}
.tip-text { 
  font-size: 30rpx; 
  font-weight: 600; 
  color: #111827; 
  display: block;
  margin-bottom: 12rpx;
}
.tip-subtitle { 
  font-size: 24rpx; 
  color: #6b7280; 
  display: block;
}

.filter-section { 
  margin: 24rpx 0 16rpx; 
}
.chip-scroll { 
  white-space: nowrap; 
}
.chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  margin-right: 12rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 24rpx;
}
.chip.active { 
  background: #8b5cf6; 
  color: #ffffff; 
  box-shadow: 0 4rpx 10rpx rgba(139, 92, 246, 0.35); 
}

.overview-card {
  background: linear-gradient(90deg, #a78bfa, #c084fc, #d946ef);
  color: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 28rpx 70rpx -24rpx rgba(0, 0, 0, 0.28);
  margin-bottom: 24rpx;
}
.overview-title { 
  margin-bottom: 24rpx; 
  font-size: 32rpx;
  font-weight: bold;
}
.overview-grid { 
  display: grid; 
  grid-template-columns: repeat(3, 1fr); 
  gap: 24rpx; 
}
.metric {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  text-align: center;
}
.metric-value { 
  line-height: 1.1; 
  font-size: 48rpx;
  font-weight: bold;
}
.metric-label { 
  color: rgba(255,255,255,0.9); 
  font-size: 24rpx;
}

.record-list { 
  margin-top: 24rpx; 
}
.record-card {
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(17, 24, 39, 0.06);
  border-radius: 28rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 20rpx 50rpx -24rpx rgba(0, 0, 0, 0.25);
}
.record-header { 
  display: flex; 
  justify-content: space-between; 
  align-items: flex-start; 
  margin-bottom: 12rpx; 
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.record-meta {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
}
.record-weight {
  font-size: 24rpx;
  color: #4b5563;
}
.record-title { 
  font-size: 30rpx; 
  font-weight: 700; 
  color: #111827; 
  display: block;
  margin-bottom: 4rpx;
}
.record-time { 
  font-size: 24rpx; 
  color: #6b7280; 
}
.health-status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.delete-btn {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.action-icon-img {
  width: 32rpx;
  height: 32rpx;
}
.health-status-badge.status-healthy {
  background: #dcfce7;
  color: #166534;
}
.health-status-badge.status-sick {
  background: #fef2f2;
  color: #dc2626;
}
.health-status-badge.status-recovering {
  background: #fef3c7;
  color: #d97706;
}
.health-status-badge.status-observation {
  background: #e0f2fe;
  color: #0369a1;
}
.record-body { 
  margin-top: 8rpx; 
}
.record-detail { 
  display: flex; 
  align-items: baseline; 
  margin-top: 8rpx; 
  justify-content: flex-start;
}
.detail-label { 
  font-size: 24rpx; 
  color: #6b7280; 
  margin-right: 8rpx;
  min-width: 80rpx;
  flex-shrink: 0;
}
.detail-value { 
  font-size: 26rpx; 
  color: #111827; 
  flex: 1;
  text-align: left;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 40rpx;
}
/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.btn-primary {
  background: #d946ef;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 统一头部按钮样式 */
.header-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.header-btn-icon {
  color: #ffffff;
  font-size: 32rpx;
}

/* 统一 app-header 右侧加号图标尺寸 */
.header-btn-icon-img {
  width: 36rpx;
  height: 36rpx;
}

/* 头像容器与集群样式（与其它记录页保持一致） */
.avatar-cell {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-cluster {
  width: 128rpx;
  height: 128rpx;
  border-radius: 15%;
  overflow: hidden;
  position: relative;
  background-color: #f3f4f6;
  border: 2rpx solid #ffffff;
}

.cluster-item { position: absolute; overflow: hidden; }
.cluster-img { width: 100%; height: 100%; object-fit: cover; }

/* 两个头像布局 */
.cluster-item.count-2.pos-0 { left: 0; top: 0; width: 50%; height: 100%; }
.cluster-item.count-2.pos-1 { right: 0; top: 0; width: 50%; height: 100%; }

/* 三个头像布局 */
.cluster-item.count-3.pos-0 { left: 0; top: 0; width: 50%; height: 50%; }
.cluster-item.count-3.pos-1 { right: 0; top: 0; width: 50%; height: 50%; }
.cluster-item.count-3.pos-2 { left: 0; bottom: 0; width: 100%; height: 50%; }

.single-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 15%;
  overflow: hidden;
  background-color: #f3f4f6;
}

.record-notes {
  margin: 12rpx 0 12rpx 148rpx; /* 左边距留出头像空间 */
  padding: 12rpx 16rpx;
  background-color: #f9fafb;
  border-radius: 16rpx;
  border-left: 6rpx solid #c084fc;
}
.notes-label {
  font-size: 24rpx;
  color: #8b5cf6;
  font-weight: 600;
  margin-right: 8rpx;
}
.notes-value {
  font-size: 26rpx;
  color: #111827;
}
