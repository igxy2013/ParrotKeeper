/* 照片上传样式 */
.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.photo-preview {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #ef4444;
  color: white;
  border-radius: 50%;
  border: none;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-add {
  width: 120rpx;
  height: 120rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  background-color: #f9fafb;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b7280;
}

.photo-add-text {
  font-size: 48rpx;
  font-weight: 300;
}

/* 选择器样式 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2002; /* 高于头部和普通弹窗 */
  padding: 32rpx;
  backdrop-filter: blur(10rpx);
}

.picker-content {
  background-color: white;
  border-radius: 32rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.picker-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.picker-close {
  width: 64rpx;
  height: 64rpx;
  background-color: #f3f4f6;
  border-radius: 50%;
  border: none;
  font-size: 32rpx;
  color: #6b7280;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-body {
  flex: 1;
  overflow-y: auto;
  padding: 16rpx 0;
  -webkit-overflow-scrolling: touch;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item-text {
  font-size: 32rpx;
  color: #1f2937;
}

.picker-check {
  font-size: 32rpx;
  color: #f97316;
  font-weight: bold;
}

.picker-footer {
  padding: 32rpx;
  border-top: 1rpx solid #e5e7eb;
}

.picker-confirm {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(90deg, #f97316 0%, #facc15 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 响应式调整 */
