/* 头像集群样式（合并多只鹦鹉头像为一个圆） */
.avatar-cluster {
  width: 128rpx;  /* 约 64px，与单头像一致 */
  height: 128rpx;
  border-radius: 15%;
  overflow: hidden;
  position: relative;
  background-color: #f3f4f6;
  border: 2rpx solid #ffffff;
}

.cluster-item {
  position: absolute;
  overflow: hidden; /* 保持被外部圆裁剪；内部不再做圆角遮罩 */
}

.cluster-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 两个头像时：左右各占一半高度全满 */
.cluster-item.count-2.pos-0 {
  left: 0;
  top: 0;
  width: 50%;
  height: 100%;
}
.cluster-item.count-2.pos-1 {
  right: 0;
  top: 0;
  width: 50%;
  height: 100%;
}

/* 三个头像时：上方左右各一个，下方居中一个 */
.cluster-item.count-3.pos-0 {
  left: 0;
  top: 0;
  width: 50%;
  height: 50%;
}
.cluster-item.count-3.pos-1 {
  right: 0;
  top: 0;
  width: 50%;
  height: 50%;
}
.cluster-item.count-3.pos-2 {
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50%;
}

/* 单头像尺寸（维持与之前单头像一致或稍大） */
.single-avatar {
  width: 128rpx; /* 约 64px */
  height: 128rpx;
