/* Cleaning page styles inspired by reference UI */
.cleaning-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff 0%, #ffffff 50%, #ecfdf5 100%);
}

.header {
  position: sticky;
  top: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx 24rpx 24rpx;
  padding-top: 96rpx;
  background: linear-gradient(90deg, #34d399, #2dd4bf, #22d3ee);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}
.header-left { display: flex; align-items: center; }
.back-btn {
  width: 72rpx; height: 72rpx; border-radius: 100rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(8rpx);
  display: flex; align-items: center; justify-content: center;
  margin-right: 24rpx;
}
.back-icon { color: #fff; font-size: 36rpx; }
.title-wrap {}
.title { color: #fff; font-size: 36rpx; font-weight: 700; }
.subtitle { color: rgba(255,255,255,0.8); font-size: 24rpx; }
.header-right {}
.add-btn {
  width: 72rpx; height: 72rpx; border-radius: 100rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(8rpx);
  display: flex; align-items: center; justify-content: center;
}
.add-icon { color: #fff; font-size: 36rpx; }

.content { padding: 48rpx 24rpx; }

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}
.stat-card {
  background: rgba(255,255,255,0.8);
  backdrop-filter: blur(6rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  border: 2rpx solid rgba(255,255,255,0.5);
}
.stat-icon { width: 96rpx; height: 96rpx; border-radius: 24rpx; margin: 0 auto 16rpx; display:flex; align-items:center; justify-content:center; font-size: 42rpx; }
.stat-blue { background: #e0f2fe; color: #3b82f6; }
.stat-green { background: #dcfce7; color: #22c55e; }
.stat-purple { background: #ede9fe; color: #a78bfa; }
.stat-value { font-size: 36rpx; font-weight: 700; color: #334155; }
.stat-label { font-size: 24rpx; color: #64748b; }

.filter-tabs { background: rgba(255,255,255,0.8); border-radius: 24rpx; padding: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08); border: 2rpx solid rgba(255,255,255,0.5); }
.filter-scroll { white-space: nowrap; }
.filter-row { display: flex; gap: 12rpx; }
.filter-chip { padding: 16rpx 24rpx; border-radius: 20rpx; font-size: 26rpx; color: #475569; background: #f1f5f9; }
.filter-chip.active { background: #10b981; color: #fff; box-shadow: 0 4rpx 12rpx rgba(16,185,129,0.35); }
.chip-text { }

.list { margin-top: 24rpx; display: flex; flex-direction: column; gap: 16rpx; }
.card { display: flex; gap: 24rpx; padding: 24rpx; border-radius: 32rpx; background: rgba(255,255,255,0.85); border: 2rpx solid rgba(255,255,255,0.5); box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08); }
.card-left { width: 120rpx; height: 120rpx; border-radius: 24rpx; overflow: hidden; background: #f1f5f9; box-shadow: inset 0 2rpx 8rpx rgba(0,0,0,0.06); }
.avatar { width: 120rpx; height: 120rpx; }
.card-right { flex: 1; }
.card-head { display: flex; align-items: flex-start; justify-content: space-between; margin-bottom: 12rpx; }
.info { display: flex; align-items: center; gap: 12rpx; }
.name { font-size: 30rpx; font-weight: 700; color: #1f2937; }
.type-badge { font-size: 24rpx; padding: 8rpx 16rpx; border-radius: 20rpx; background: #eef2ff; color: #4f46e5; }
.time { font-size: 24rpx; color: #64748b; }
.card-body { display: flex; flex-direction: column; gap: 8rpx; }
.detail { display: flex; gap: 8rpx; }
.label { font-size: 24rpx; color: #64748b; }
.value { font-size: 24rpx; color: #334155; }

.empty { text-align: center; padding: 64rpx 0; }
.empty-icon { width: 160rpx; height: 160rpx; border-radius: 80rpx; background: #f1f5f9; display:flex; align-items:center; justify-content:center; margin: 0 auto 24rpx; font-size: 56rpx; color: #94a3b8; }
.empty-text { color: #64748b; font-size: 28rpx; margin-bottom: 16rpx; }
.btn.btn-primary { margin-top: 24rpx; }

.loading { text-align: center; color: #64748b; font-size: 26rpx; padding: 24rpx; }
