/* Cleaning page styles inspired by reference UI */
.cleaning-page {
  min-height: 100vh;
  /* 蓝色主题背景，与按钮一致 */
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 50%, #bfdbfe 100%);
}

.header {
  position: sticky;
  top: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx 24rpx 24rpx;
  padding-top: 96rpx;
  background: linear-gradient(90deg, #3b82f6, #2563eb, #1d4ed8);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}
.header-left { display: flex; align-items: center; }
.back-btn {aspectFit
  width: 72rpx; height: 72rpx; border-radius: 100rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(8rpx);
  display: flex; align-items: center; justify-content: center;
  margin-right: 24rpx;
}
.back-icon { color: #fff; font-size: 36rpx; }
.title-wrap {}
.title { color: #fff; font-size: 36rpx; font-weight: 700; }
.subtitle { color: rgba(255,255,255,0.8); font-size: 24rpx; }
.header-right {}
.add-btn {
  width: 72rpx; height: 72rpx; border-radius: 100rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(8rpx);
  display: flex; align-items: center; justify-content: center;
}
.add-icon { color: #fff; font-size: 36rpx; }

/* 统一 app-header 右侧加号图标尺寸 */
.header-btn-icon-img {
  width: 36rpx;
  height: 36rpx;
}

.content { padding: 48rpx 24rpx; box-sizing: border-box; }

.summary-card {
  /* 参考喂食页统计卡片风格：更大圆角、更宽留白、更柔和阴影 */
  background: linear-gradient(90deg, #5996f8ff, #2563eb, #587fe8ff);
  color: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 28rpx 70rpx -24rpx rgba(0, 0, 0, 0.28);
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}
.summary-title { margin-bottom: 24rpx; }
.summary-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24rpx; }
.summary-metric { 
  text-align: center; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
}
.summary-value { 
  font-size: 42rpx; 
  font-weight: 700; 
  line-height: 1.25; 
  margin-bottom: 8rpx;
}
.summary-label { 
  font-size: 24rpx; 
  color: rgba(255,255,255,0.8); 
  line-height: 1.3;
}

.filter-section { margin: 24rpx 0 16rpx; }
.chip-scroll { white-space: nowrap; }
.chip { display: inline-flex; align-items: center; padding: 12rpx 24rpx; margin-right: 12rpx; border-radius: 9999rpx; background: #f3f4f6; color: #4b5563; font-size: 24rpx; }
.chip.active { background: #3b82f6; color: #fff; box-shadow: 0 4rpx 10rpx rgba(59, 130, 246, 0.35); }
.chip-text { }

.list { margin-top: 24rpx; display: flex; flex-direction: column; gap: 4rpx; }
.card { display: flex; gap: 24rpx; padding: 24rpx; border-radius: 32rpx; background: rgba(255,255,255,0.96); backdrop-filter: blur(8rpx); border: 1rpx solid rgba(17,24,39,0.06); box-shadow: 0 20rpx 50rpx -24rpx rgba(0,0,0,0.25); margin-bottom: 0; }
.card-left { width: 128rpx; height: 128rpx; border-radius: 15%; overflow: hidden; background: #f1f5f9; box-shadow: inset 0 2rpx 8rpx rgba(0,0,0,0.06); }
.avatar { width: 128rpx; height: 128rpx; }
.card-right { flex: 1; }
.card-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.head-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.time {
  font-size: 24rpx;
  color: #6b7280;
}

.type-badge { font-size: 24rpx; padding: 8rpx 16rpx; border-radius: 20rpx; background: #dbeafe; color: #3b82f6; }

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.delete-btn {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.action-icon-img {
  width: 32rpx;
  height: 32rpx;
}
.card-body { display: flex; flex-direction: column; gap: 8rpx; }
.detail { display: flex; flex-direction: column; align-items: flex-start; gap: 6rpx; }
.label { font-size: 24rpx; color: #64748b; }
.value { font-size: 24rpx; color: #334155; }

.empty { text-align: center; padding: 64rpx 0; }
.empty-icon { width: 160rpx; height: 160rpx; border-radius: 80rpx; background: #f1f5f9; display:flex; align-items:center; justify-content:center; margin: 0 auto 24rpx; font-size: 56rpx; color: #94a3b8; }
.empty-text { color: #64748b; font-size: 28rpx; margin-bottom: 16rpx; }
.btn.btn-primary { margin-top: 24rpx; }
.btn-primary { background: #3b82f6; color: #ffffff; }

/* 统一头部按钮样式（与其他页面一致） */
.header-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.header-btn-icon {
  color: #ffffff;
  font-size: 32rpx;
}

.loading { text-align: center; color: #64748b; font-size: 26rpx; padding: 24rpx; }

/* 头像集群样式（与喂食页一致，去除子项圆角遮罩） */
.avatar-cluster {
  width: 128rpx;
  height: 128rpx;
  border-radius: 15%;
  overflow: hidden;
  position: relative;
  background-color: #f3f4f6;
  border: 2rpx solid #ffffff;
}

.cluster-item {
  position: absolute;
  overflow: hidden;
}

.cluster-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 两个头像：左右各半 */
.cluster-item.count-2.pos-0 { left: 0; top: 0; width: 50%; height: 100%; }
.cluster-item.count-2.pos-1 { right: 0; top: 0; width: 50%; height: 100%; }

/* 三个头像：上左右 + 下中 */
.cluster-item.count-3.pos-0 { left: 0; top: 0; width: 50%; height: 50%; }
.cluster-item.count-3.pos-1 { right: 0; top: 0; width: 50%; height: 50%; }
.cluster-item.count-3.pos-2 { left: 0; bottom: 0; width: 100%; height: 50%; }

.single-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 15%;
  overflow: hidden;
  background-color: #f3f4f6;
}
