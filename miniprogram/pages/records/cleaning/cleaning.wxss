/* Cleaning page styles inspired by reference UI */
.cleaning-page {
  min-height: 100vh;
  /* 粉色主题背景，与头部一致 */
  background: linear-gradient(135deg, #fff1f5 0%, #fff7fb 50%, #fdf2f8 100%);
}

.header {
  position: sticky;
  top: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx 24rpx 24rpx;
  padding-top: 96rpx;
  background: linear-gradient(90deg, #34d399, #2dd4bf, #22d3ee);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}
.header-left { display: flex; align-items: center; }
.back-btn {
  width: 72rpx; height: 72rpx; border-radius: 100rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(8rpx);
  display: flex; align-items: center; justify-content: center;
  margin-right: 24rpx;
}
.back-icon { color: #fff; font-size: 36rpx; }
.title-wrap {}
.title { color: #fff; font-size: 36rpx; font-weight: 700; }
.subtitle { color: rgba(255,255,255,0.8); font-size: 24rpx; }
.header-right {}
.add-btn {
  width: 72rpx; height: 72rpx; border-radius: 100rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(8rpx);
  display: flex; align-items: center; justify-content: center;
}
.add-icon { color: #fff; font-size: 36rpx; }

.content { padding: 48rpx 24rpx; box-sizing: border-box; }

.summary-card {
  /* 参考喂食页统计卡片风格：更大圆角、更宽留白、更柔和阴影 */
  background: linear-gradient(90deg, #f472b6, #ec4899, #db2777);
  color: #ffffff;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}
.summary-title { margin-bottom: 24rpx; }
.summary-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24rpx; }
.summary-metric { 
  text-align: center; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
}
.summary-value { 
  font-size: 48rpx; 
  font-weight: 700; 
  line-height: 1.2; 
  margin-bottom: 8rpx;
}
.summary-label { 
  font-size: 24rpx; 
  color: rgba(255,255,255,0.8); 
  line-height: 1.3;
}

.filter-section { margin: 24rpx 0 16rpx; }
.chip-scroll { white-space: nowrap; }
.chip { display: inline-flex; align-items: center; padding: 12rpx 24rpx; margin-right: 12rpx; border-radius: 9999rpx; background: #f3f4f6; color: #4b5563; font-size: 24rpx; }
.chip.active { background: #ec4899; color: #fff; box-shadow: 0 4rpx 10rpx rgba(236, 72, 153, 0.35); }
.chip-text { }

.list { margin-top: 24rpx; display: flex; flex-direction: column; gap: 16rpx; }
.card { display: flex; gap: 24rpx; padding: 24rpx; border-radius: 32rpx; background: rgba(255,255,255,0.96); backdrop-filter: blur(8rpx); border: 1rpx solid rgba(17,24,39,0.06); box-shadow: 0 20rpx 50rpx -24rpx rgba(0,0,0,0.25); }
.card-left { width: 120rpx; height: 120rpx; border-radius: 24rpx; overflow: hidden; background: #f1f5f9; box-shadow: inset 0 2rpx 8rpx rgba(0,0,0,0.06); }
.avatar { width: 120rpx; height: 120rpx; }
.card-right { flex: 1; }
.card-head { display: flex; align-items: flex-start; justify-content: space-between; margin-bottom: 12rpx; }
.info { display: flex; align-items: center; gap: 12rpx; }
.name { font-size: 30rpx; font-weight: 700; color: #1f2937; }
.type-badge { font-size: 24rpx; padding: 8rpx 16rpx; border-radius: 20rpx; background: #fce7f3; color: #ec4899; }
.time { font-size: 24rpx; color: #64748b; }
.card-body { display: flex; flex-direction: column; gap: 8rpx; }
.detail { display: flex; flex-direction: column; align-items: flex-start; gap: 6rpx; }
.label { font-size: 24rpx; color: #64748b; }
.value { font-size: 24rpx; color: #334155; }

.empty { text-align: center; padding: 64rpx 0; }
.empty-icon { width: 160rpx; height: 160rpx; border-radius: 80rpx; background: #f1f5f9; display:flex; align-items:center; justify-content:center; margin: 0 auto 24rpx; font-size: 56rpx; color: #94a3b8; }
.empty-text { color: #64748b; font-size: 28rpx; margin-bottom: 16rpx; }
.btn.btn-primary { margin-top: 24rpx; }
.btn-primary { background: #ec4899; color: #ffffff; }

/* 统一头部按钮样式（与其他页面一致） */
.header-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.header-btn-icon {
  color: #ffffff;
  font-size: 32rpx;
}

.loading { text-align: center; color: #64748b; font-size: 26rpx; padding: 24rpx; }
