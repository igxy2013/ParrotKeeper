/* pages/records/add-record/add-record.wxss */
.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  padding: 30rpx 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 记录类型选择器 */
.type-selector {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #fafafa;
  transition: all 0.3s;
}

.type-item.active {
  border-color: #4CAF50;
  background: #e8f5e8;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.type-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 表单项 */
.form-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4CAF50;
  background: white;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1;
  display: flex;
  align-items: center;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  line-height: 1;
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #4CAF50;
  background: white;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 日期时间选择器 */
.datetime-picker {
  display: flex;
  gap: 20rpx;
}

.picker-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  box-sizing: border-box;
}

/* 照片上传 */
.photo-upload {
  padding: 30rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.photo-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #f44336;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.add-photo-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  background: #fafafa;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
}

/* 鹦鹉列表 */
.parrot-list {
  padding: 15rpx 0;
}

.parrot-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
  position: relative;
}

.parrot-item:last-child {
  border-bottom: none;
}

.parrot-item:active {
  background-color: #f5f5f5;
}

/* 鹦鹉头像 */
.parrot-avatar {
  position: relative;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.parrot-image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  border: 2rpx solid #f0f0f0;
}

.status-badge {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.status-badge.status-healthy {
  background: #4CAF50;
}

.status-badge.status-sick {
  background: #f44336;
}

.status-badge.status-recovering {
  background: #ff9800;
}

.status-badge.status-observation {
  background: #2196f3;
}

/* 鹦鹉信息 */
.parrot-info {
  flex: 1;
  min-width: 0;
}

.name-section {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 4rpx;
}

.parrot-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.parrot-gender {
  font-size: 20rpx;
  font-weight: 600;
  padding: 2rpx 5rpx;
  border-radius: 6rpx;
}

.parrot-gender.male {
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
}

.parrot-gender.female {
  color: #E91E63;
  background: rgba(233, 30, 99, 0.1);
}

.parrot-species {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.info-tags {
  display: flex;
  gap: 8rpx;
}

.info-tag {
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  color: #666;
}

.status-tag {
  color: white;
  font-weight: 500;
}

.status-tag.status-healthy {
  background: #4CAF50;
}

.status-tag.status-sick {
  background: #f44336;
}

.status-tag.status-recovering {
  background: #ff9800;
}

.status-tag.status-observation {
  background: #2196f3;
}

/* 健康状态列表 */
.status-list {
  padding: 20rpx 0;
}

.status-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.status-indicator.healthy {
  background: #4CAF50;
}

.status-indicator.sick {
  background: #f44336;
}

.status-indicator.recovering {
  background: #ff9800;
}

.status-indicator.observation {
  background: #2196f3;
}

/* 鹦鹉状态区域 */
.parrot-status-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
  min-width: 80rpx;
  padding: 6rpx;
  border-radius: 10rpx;
  background: rgba(248, 249, 250, 0.8);
  transition: all 0.3s ease;
}

.parrot-status-section:hover {
  background: rgba(248, 249, 250, 1);
  transform: translateY(-1rpx);
}

.status-text {
  font-size: 20rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.2;
  letter-spacing: 0.3rpx;
  transition: all 0.3s ease;
}

.status-text.status-healthy {
  color: #2E7D32;
  background: rgba(76, 175, 80, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.status-text.status-sick {
  color: #C62828;
  background: rgba(244, 67, 54, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.status-text.status-recovering {
  color: #E65100;
  background: rgba(255, 152, 0, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.status-text.status-observation {
  color: #1565C0;
  background: rgba(33, 150, 243, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

/* 饲料类型选择器样式 */
.feed-type-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.feed-type-item:last-child {
  border-bottom: none;
}

.feed-type-item:active {
  background-color: #f5f5f5;
}

.feed-type-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.feed-type-brand {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.feed-type-type {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  align-self: flex-start;
}

/* 清洁类型选择器样式 */
.cleaning-type-list {
  padding: 20rpx 0;
}

.cleaning-type-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.cleaning-type-item:last-child {
  border-bottom: none;
}

.cleaning-type-item:active {
  background-color: #f5f5f5;
}

.cleaning-type-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}