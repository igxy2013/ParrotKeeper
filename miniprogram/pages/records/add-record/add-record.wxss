/* pages/records/add-record/add-record.wxss */
.page-container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

/* 表单内容区域，为顶部导航组件留出空间 */
.form-content {
  padding: 20rpx;
  margin-top: 20rpx;
}

/* 表单区域 */
.form-section {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 48rpx;
  margin-bottom: 48rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.section-title {
  padding: 30rpx 30rpx 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  border-bottom: 1rpx solid #f3f4f6;
  background: transparent;
}

/* 记录类型选择器 */
.type-selector {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border: none;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8fafc, #f1f5f9);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.type-item.active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 记录类型卡片主题背景（与首页快捷操作一致） */
.type-item.feeding.active {
  background: linear-gradient(135deg, #FFF4DF, #FEE8BF);
  border-color: transparent;
}
.type-item.cleaning.active {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
  border-color: transparent;
}
.type-item.health.active {
  background: linear-gradient(135deg, #faf5ff, #f3e8ff);
  border-color: transparent;
}
.type-item.breeding.active {
  background: linear-gradient(135deg, #E9FFF4, #D7F8E7);
  border-color: transparent;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.type-icon-img {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.type-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

/* 表单项 */
.form-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #1f2937;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #ef4444;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #111827;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-input:focus {
  border-color: #26A69A;
  background: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06), 0 0 0 6rpx rgba(38, 166, 154, 0.15);
}

.form-input:active {
  border-color: #26A69A;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-picker:active {
  border-color: #26A69A;
}

.picker-text {
  font-size: 28rpx;
  color: #111827;
  flex: 1;
  line-height: 1;
  display: flex;
  align-items: center;
}

.picker-text.placeholder {
  color: #9ca3af;
}

.picker-arrow {
  font-size: 24rpx;
  color: #9ca3af;
  margin-left: 20rpx;
  line-height: 1;
  display: none;
}

.picker-arrow-img {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #111827;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-textarea:focus {
  border-color: #26A69A;
  background: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06), 0 0 0 6rpx rgba(38, 166, 154, 0.15);
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 10rpx;
}

/* 日期时间选择器 */
.datetime-picker {
  display: flex;
  gap: 20rpx;
}

.picker-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.picker-item:active {
  border-color: #26A69A;
}

/* 照片上传 */
.photo-upload {
  padding: 30rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.photo-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
}

.photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.photo-delete:active {
  border-color: #26A69A;
  box-shadow: 0 6rpx 16rpx rgba(38, 166, 154, 0.18);
}

.photo-delete-icon {
  width: 24rpx;
  height: 24rpx;
}

.add-photo-btn {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #cbd5e1;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  transition: all 0.2s ease;
}

.add-photo-btn:hover {
  border-color: #26A69A;
  background: #ffffff;
}

.add-photo-icon {
  width: 64rpx;
  height: 64rpx;
}

.add-icon {
  font-size: 60rpx;
  color: #26A69A;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #cbd5e1;
  border-radius: 24rpx;
  background: #ffffff;
  transition: all 0.2s ease;
}

.upload-area:hover {
  border-color: #26A69A;
  background: #ffffff;
}

.upload-icon-img {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #111827;
  margin-bottom: 10rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: center;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx 0;
  margin-top: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.8);
  color: #374151;
  border: 2rpx solid rgba(16, 185, 129, 0.2);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(16, 185, 129, 0.4);
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.btn-primary:hover {
  background: linear-gradient(135deg, #059669, #047857);
  box-shadow: 0 6rpx 20rpx rgba(16, 185, 129, 0.4);
}

.btn-primary:disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(16, 185, 129, 0.1);
  background: linear-gradient(90deg, rgba(16, 185, 129, 0.05) 0%, rgba(6, 182, 212, 0.05) 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #6b7280;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:hover {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
}

/* 模态框底部 */
.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid rgba(16, 185, 129, 0.1);
  background: rgba(248, 250, 252, 0.8);
  display: flex;
  justify-content: flex-end;
}

/* 椭圆形确认按钮样式覆盖 */
.modal-footer .confirm-btn {
  border-radius: 9999rpx;
}

.confirm-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  min-width: 120rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.confirm-btn:active {
  background: linear-gradient(135deg, #059669, #047857);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.4);
}

/* 鹦鹉列表 */
.parrot-list {
  padding: 0;
}

.parrot-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border: 1rpx solid #e5e7eb;
  transition: all 0.2s ease;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.parrot-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  border-color: #d1d5db;
}

.parrot-item.selected {
  border: 2rpx solid #26A69A;
  box-shadow: 0 8rpx 24rpx rgba(38, 166, 154, 0.2);
}

.parrot-item:last-child {
  border-bottom: none;
}

.parrot-item:active {
  transform: scale(0.98);
  border-color: #26A69A;
}

/* 鹦鹉卡片的选中标记，固定在右上角 */
.parrot-item .selection-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.35);
}

/* 鹦鹉头像 */
.parrot-avatar {
  position: relative;
  flex-shrink: 0;
  margin-right: 16rpx;
}

/* 鹦鹉选择项左侧内容分组 */
.parrot-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 右侧复选框对齐 */
.parrot-checkbox {
  margin-left: auto;
}

.parrot-image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #e5e7eb;
}

.status-badge {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.status-badge.status-healthy {
  background: #4CAF50;
}

.status-badge.status-sick {
  background: #f44336;
}

.status-badge.status-recovering {
  background: #ff9800;
}

.status-badge.status-observation {
  background: #2196f3;
}

/* 鹦鹉信息 */
.parrot-info {
  flex: 1;
  min-width: 0;
}

.name-section {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 4rpx;
}

.parrot-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.parrot-gender {
  font-size: 20rpx;
  font-weight: 600;
  padding: 2rpx 5rpx;
  border-radius: 6rpx;
}

.parrot-gender.male {
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
}

.parrot-gender.female {
  color: #E91E63;
  background: rgba(233, 30, 99, 0.1);
}

.parrot-species {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.info-tags {
  display: flex;
  gap: 8rpx;
}

.info-tag {
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  color: #666;
}

.status-tag {
  color: white;
  font-weight: 500;
}

.status-tag.status-healthy {
  background: #4CAF50;
}

.status-tag.status-sick {
  background: #f44336;
}

.status-tag.status-recovering {
  background: #ff9800;
}

.status-tag.status-observation {
  background: #2196f3;
}

/* 多选样式 */
.parrot-item.selected,
.feed-type-item.selected {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(6, 182, 212, 0.1));
  border: 2rpx solid #10b981;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.2);
}

.selection-indicator {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.4);
  transition: all 0.3s ease;
}

.feed-type-item {
  position: relative;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(16, 185, 129, 0.1);
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
}

.feed-type-item:hover {
  background: rgba(16, 185, 129, 0.05);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.1);
}

/* 健康状态列表 */
.status-list {
  padding: 20rpx 0;
}

.status-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(16, 185, 129, 0.1);
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.status-item:hover {
  background: rgba(16, 185, 129, 0.05);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.1);
}

.status-item:last-child {
  border-bottom: none;
}

.status-indicator {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.status-indicator.healthy {
  background: linear-gradient(135deg, #10b981, #059669);
}

.status-indicator.sick {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.status-indicator.recovering {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.status-indicator.observation {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

/* 鹦鹉状态区域 */
.parrot-status-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
  min-width: 80rpx;
  padding: 6rpx;
  border-radius: 10rpx;
  background: rgba(248, 249, 250, 0.8);
  transition: all 0.3s ease;
}

.parrot-status-section:hover {
  background: rgba(248, 249, 250, 1);
  transform: translateY(-1rpx);
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.2;
  letter-spacing: 0.3rpx;
  transition: all 0.3s ease;
}

.status-text.status-healthy {
  color: #2E7D32;
  background: rgba(76, 175, 80, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.status-text.status-sick {
  color: #C62828;
  background: rgba(244, 67, 54, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.status-text.status-recovering {
  color: #E65100;
  background: rgba(255, 152, 0, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

.status-text.status-observation {
  color: #1565C0;
  background: rgba(33, 150, 243, 0.1);
  padding: 3rpx 6rpx;
  border-radius: 6rpx;
}

/* 胶囊状态徽章（新设计） */
.status-pills {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.status-pill {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  line-height: 1;
  border: 1rpx solid rgba(0,0,0,0.08);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.pill-icon {
  font-size: 20rpx;
}

.pill-text {
  letter-spacing: 0.3rpx;
}

.pill-healthy {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.9), rgba(5, 150, 105, 0.9));
  color: white;
  border-color: rgba(16, 185, 129, 0.35);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.3);
}

.pill-sick {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.9), rgba(220, 38, 38, 0.9));
  color: white;
  border-color: rgba(239, 68, 68, 0.35);
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.pill-recovering {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.9), rgba(217, 119, 6, 0.9));
  color: white;
  border-color: rgba(245, 158, 11, 0.35);
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

.pill-observation {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.9), rgba(37, 99, 235, 0.9));
  color: white;
  border-color: rgba(59, 130, 246, 0.35);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* 食物类型选择器样式 */
.feed-type-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
  position: relative;
}

.feed-type-item:last-child {
  border-bottom: none;
}

.feed-type-item:active {
  background-color: #f5f5f5;
}

.feed-type-item.selected {
