<view class="container">
  <view class="register-box">
    <view class="title">用户注册</view>
    <view class="subtitle">创建您的账号</view>
    
    <view class="form">
      <view class="input-group">
        <input 
          class="input-field" 
          placeholder="请输入用户名" 
          value="{{username}}" 
          bindinput="onUsernameInput"
          maxlength="20"
        />
      </view>
      
      <view class="input-group">
        <input 
          class="input-field" 
          placeholder="请输入密码" 
          password="{{true}}" 
          value="{{password}}" 
          bindinput="onPasswordInput"
          maxlength="50"
        />
      </view>
      
      <view class="input-group">
        <input 
          class="input-field" 
          placeholder="请再次输入密码" 
          password="{{true}}" 
          value="{{confirmPassword}}" 
          bindinput="onConfirmPasswordInput"
          maxlength="50"
        />
      </view>
      
      <view class="input-group">
        <input 
          class="input-field" 
          placeholder="请输入昵称（可选）" 
          value="{{nickname}}" 
          bindinput="onNicknameInput"
          maxlength="20"
        />
      </view>
      
      <button 
        class="register-btn" 
        bindtap="onRegister"
        disabled="{{!canRegister}}"
      >
        注册
      </button>
    </view>
    
    <view class="login-link">
      <text bindtap="onBackToLogin">已有账号？立即登录</text>
    </view>
  </view>
</view>