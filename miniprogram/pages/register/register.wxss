.page-container { min-height: 100vh; background: #f8f9fa; }
.page-content { padding: 32rpx; }

.register-card { background: #fff; border-radius: 24rpx; padding: 48rpx 36rpx; box-shadow: 0 16rpx 32rpx rgba(0,0,0,0.06); }
.logo { width: 100rpx; height: 100rpx; border-radius: 24rpx; margin: 0 auto 16rpx; display: block; }
.form-title { text-align: center; font-size: 36rpx; font-weight: 700; color: #111827; margin-bottom: 32rpx; }

.form { margin-bottom: 20rpx; }
.input-group { position: relative; margin-bottom: 24rpx; }
.input-field { width: 100%; height: 88rpx; border: 2rpx solid #e5e7eb; border-radius: 20rpx; padding: 0 30rpx; font-size: 30rpx; background: #f9fafb; color: #111827; box-sizing: border-box; transition: all 0.2s ease; }
.input-field:focus { border-color: #10b981; background: #fff; }

.input-icon-img { width: 30rpx; height: 30rpx; position: absolute; left: 22rpx; top: 50%; transform: translateY(-50%); opacity: 0.85; }
.input-with-icon { padding-left: 68rpx; }
.input-with-right-icon { padding-right: 68rpx; }
.password-toggle { position: absolute; right: 22rpx; top: 50%; transform: translateY(-50%); width: 36rpx; height: 36rpx; opacity: 0.9; }

.btn { width: 100%; height: 88rpx; border-radius: 20rpx; font-size: 30rpx; font-weight: 600; border: none; display: flex; align-items: center; justify-content: center; }
.btn-primary { background: #10b981; color: #fff; }
.btn-large { height: 96rpx; border-radius: 24rpx; font-size: 32rpx; }
.btn:disabled { opacity: 0.6; }

.login-link { text-align: center; margin-top: 28rpx; color: #10b981; font-size: 28rpx; }
