/* 通知功能测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.test-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.test-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  background-color: #ffffff;
  color: #333333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.test-btn.small {
  height: 60rpx;
  font-size: 24rpx;
  flex: none;
  padding: 0 20rpx;
  margin: 5rpx;
}

.test-btn.loading {
  opacity: 0.6;
}

.test-sections {
  margin-bottom: 40rpx;
}

.section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.results-container {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.results-header {
  padding: 30rpx;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.results-list {
  max-height: 600rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-content {
  flex: 1;
}

.result-message {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.result-time {
  font-size: 24rpx;
  color: #999999;
}

.result-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.result-indicator.success {
  background-color: #28a745;
}

.result-indicator.error {
  background-color: #dc3545;
}

.result-indicator.warning {
  background-color: #ffc107;
}

.result-indicator.info {
  background-color: #17a2b8;
}

.result-item.success .result-message {
  color: #155724;
}

.result-item.error .result-message {
  color: #721c24;
}

.result-item.warning .result-message {
  color: #856404;
}

.result-item.info .result-message {
  color: #0c5460;
}

.empty-results {
  padding: 60rpx;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}