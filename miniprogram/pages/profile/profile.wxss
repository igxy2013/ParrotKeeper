  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08); /* 中性阴影 */
