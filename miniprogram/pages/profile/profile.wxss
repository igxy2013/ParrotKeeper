  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

/* 头像选择区域 */
.avatar-section {
  margin: 30rpx 0;
}

.section-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  text-align: left;
}

.avatar-btn {
