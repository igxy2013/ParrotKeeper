/* pages/profile/profile.wxss */
.page-container {
  padding: 20rpx;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(76, 175, 80, 0.3);
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
}

.edit-nickname-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin-left: 20rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.edit-nickname-btn:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(1.05);
}

.edit-nickname-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.edit-icon {
  font-size: 28rpx;
  line-height: 1;
}

.nickname-edit {
  margin-bottom: 15rpx;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.nickname-edit-input {
  background: rgba(255, 255, 255, 0.95);
  color: #333;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.nickname-edit-input:focus {
  border-color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.2);
}

.edit-actions {
  display: flex;
  gap: 20rpx;
}

.save-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #4CAF50;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  flex: 1;
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  flex: 1;
  transition: all 0.3s ease;
}

.cancel-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
}

.join-date {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 未登录状态 */
.login-prompt {
  padding: 0 20rpx;
}

.login-card {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.login-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.3);
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 头像选择区域 */
.avatar-section {
  margin: 30rpx 0;
}

.section-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  text-align: left;
}

.avatar-btn {
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
}

.preview-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 10rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 昵称输入区域 */
.nickname-section {
  margin: 30rpx 0;
  text-align: left;
}

.nickname-input {
  width: 100%;
  background: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx 20rpx;
  font-size: 28rpx;
  margin-top: 15rpx;
  box-sizing: border-box;
  min-height: 80rpx;
}

/* 功能卡片区域 */
.function-cards {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.function-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #f8f9ff, #e8ecff);
  border-radius: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

/* 卡片内容 */
.card-content {
  display: flex;
  flex-direction: column;
}

/* 模式设置卡片样式 */
.mode-card .card-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.mode-display {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.current-mode {
  font-size: 28rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: #666;
}

.card-action {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.card-action:active {
  background: #e8ecff;
  transform: scale(0.95);
}

.action-text {
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: 500;
  margin-right: 8rpx;
}

.action-arrow {
  font-size: 20rpx;
  color: #4CAF50;
}

/* 团队协作卡片样式 */
.team-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.team-action-item.info-only {
  background: #f0f4ff;
  cursor: default;
}

.team-action-item.info-only:active {
  background: #f0f4ff;
  transform: none;
}

.team-action-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.team-action-item:active {
  background: #e8ecff;
  transform: scale(0.98);
}

.action-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

.action-subtitle {
  font-size: 24rpx;
  color: #666;
}

.team-action-item .action-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 应用设置卡片样式 */
.settings-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
}

.setting-grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 25rpx 15rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  min-height: 120rpx;
}

.setting-grid-item:active {
  background: #e8ecff;
  transform: scale(0.95);
}

.setting-grid-item.logout-item {
  background: #fff5f5;
  color: #ff4757;
}

.setting-grid-item.logout-item:active {
  background: #ffe8e8;
}

.grid-item-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid-item-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

.logout-item .grid-item-text {
  color: #ff4757;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .settings-grid {
    grid-template-columns: 1fr 1fr;
    gap: 12rpx;
  }
  
  .setting-grid-item {
    padding: 20rpx 10rpx;
    min-height: 100rpx;
  }
  
  .grid-item-icon {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .grid-item-text {
    font-size: 22rpx;
  }
}

/* 模式切换弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 90%;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
}

.mode-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mode-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.mode-option.active {
  border-color: #4CAF50;
  background: #f8fff8;
}

.mode-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.mode-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.mode-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: #666;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #4CAF50;
  color: white;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr 1fr;
    gap: 15rpx;
  }
  
  .stat-item {
    padding: 25rpx 15rpx;
  }
  
  .stat-number {
    font-size: 32rpx;
  }
}

/* 团队信息弹窗样式 */
.modal-container {
  background: white;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 90%;
  overflow: hidden;
  position: relative;
}

.team-info-modal {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-close {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
  z-index: 1001;
}

.team-info-section {
  padding: 20rpx 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  min-width: 120rpx;
  margin-right: 20rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

.btn-danger {
  background: #ff4757;
  color: white;
}

.btn-danger:active {
  background: #ff3838;
}

/* 当前团队菜单可点击样式 */
.team-action-item.info-only {
  cursor: pointer;
  transition: all 0.3s ease;
}

.team-action-item.info-only:active {
  transform: scale(0.98);
  background: #e8f4fd;
}

/* 加入团队弹窗样式 */
.join-team-modal {
  width: 90%;
  max-width: 500rpx;
}

.join-form {
  padding: 20rpx 0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4CAF50;
  outline: none;
}

.form-tips {
  margin-top: 15rpx;
}

.form-tips text {
  font-size: 24rpx;
  color: #999;
}

/* 创建团队弹窗样式 */
.create-team-modal {
  max-height: 80vh;
}

.create-form {
  padding: 20rpx 0;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f8f9fa;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #007aff;
  background-color: #fff;
}

/* 头像编辑相关样式 */
.avatar-container {
  position: relative;
  cursor: pointer;
}

.avatar-image.editable {
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.avatar-container:hover .avatar-image.editable {
  opacity: 0.6;
}

.avatar-edit-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 60rpx;
  transition: all 0.3s ease;
}

.avatar-edit-text {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

/* 头像选择弹窗样式 */
.avatar-modal {
  width: 90%;
  max-width: 600rpx;
}

.avatar-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx 0;
  justify-content: center;
}

.avatar-option {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.avatar-option:hover {
  transform: scale(1.05);
}

.option-avatar {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.option-avatar.selected {
  border: 4rpx solid #4CAF50;
  box-shadow: 0 0 20rpx rgba(76, 175, 80, 0.5);
}