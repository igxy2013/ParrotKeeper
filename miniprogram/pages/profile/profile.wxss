
/* pages/profile/profile.wxss */
.page-container {
  padding: 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  /* 统一字体家族，增强中英文显示一致性 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, 'Noto Sans', 'PingFang SC', 'Microsoft YaHei', sans-serif;
  /* 兼容内容模块可能溢出 page-content 的情况，整体底部预留空间（缩小留白，含安全区） */
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.page-content {
  padding: 20rpx;
  /* 为底部固定导航预留空间，避免底部卡片被遮挡（缩小留白，含安全区） */
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  border-radius: 32rpx;
  padding: 32rpx; /* 参考APP p-6 对齐 */
  margin: 0 20rpx 24rpx; /* 与其他卡片左右 20rpx 对齐 */
  display: flex;
  align-items: center;
  color: #1f2937;
  overflow: hidden;
  backdrop-filter: blur(16rpx); /* 与参考APP的 blur-sm 接近 */
  background: transparent; /* 使用覆盖层统一渐变 */
  border: 1rpx solid rgba(255, 255, 255, 0.45);
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.10);
}

.card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* 渐变颜色与参考APP对齐：#10b981 → #06b6d4，并加入亮斑 */
  background:
    radial-gradient(140rpx 140rpx at 18% 78%, rgba(255,255,255,0.18) 0%, rgba(255,255,255,0.00) 60%),
    radial-gradient(180rpx 180rpx at 95% 6%, rgba(255,255,255,0.24) 0%, rgba(255,255,255,0.00) 65%),
    linear-gradient(135deg, #10b981 0%, #06b6d4 100%);
  z-index: -1;
}

.user-avatar {
  margin-right: 24rpx;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden; /* 确保覆盖层裁剪与头像一致，消除边缘错位 */
  display: inline-block; /* 与图片尺寸对齐，避免容器尺寸波动 */
}

.avatar-edit-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.avatar-edit-overlay .edit-icon {
  font-size: 32rpx;
}

.avatar-edit-text {
  font-size: 20rpx;
  color: white;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 800;
  flex: 1;
  color: #ffffff;
  line-height: 1.25;
}

.user-role {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.92);
  margin-bottom: 8rpx;
  font-weight: 500;
  line-height: 1.25;
}

/* 团队信息行 */
.team-info-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.team-name-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

.team-name-value {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
}

.team-role-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.25);
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  border-radius: 12rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
  backdrop-filter: blur(8rpx);
  margin-left: 4rpx;
}

.edit-nickname-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin-left: 20rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  backdrop-filter: blur(10rpx);
}

.edit-nickname-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.edit-nickname-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.4);
}

/* 信息行：加入时间 + 积分，同线对齐且不换行 */
.info-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.join-date,
.user-points {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.92);
  white-space: nowrap;
  line-height: 1.25;
  font-weight: 400;
}

.user-points { margin-left: 16rpx; }

/* 积分值加粗以与参考APP一致 */
.points-row { display: flex; align-items: baseline; }
.user-points-val { font-size: 26rpx; color: #fff; font-weight: 700; line-height: 1.25; }

.edit-icon {
  font-size: 24rpx;
  line-height: 1;
}

.nickname-edit {
  margin-bottom: 15rpx;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.nickname-edit-input {
  background: rgba(255, 255, 255, 0.95);
  color: #333;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.nickname-edit-input:focus {
  border-color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.2);
}

.edit-actions {
  display: flex;
  gap: 20rpx;
}

.save-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #4CAF50;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  flex: 1;
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  flex: 1;
  transition: all 0.3s ease;
}

.cancel-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
}

.join-date {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 登录提示卡片样式 */
