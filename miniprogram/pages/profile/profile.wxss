.nickname-section {
  margin: 30rpx 0;
  text-align: left;
}

.nickname-input {
  width: 100%;
  background: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx 20rpx;
  font-size: 28rpx;
  margin-top: 15rpx;
  box-sizing: border-box;
