/* pages/profile/profile.wxss */
.page-container {
  padding: 20rpx;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(76, 175, 80, 0.3);
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
}

.edit-nickname-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.nickname-edit {
  margin-bottom: 15rpx;
}

.nickname-edit-input {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 80rpx;
}

.edit-actions {
  display: flex;
  gap: 15rpx;
}

.save-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #4CAF50;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  flex: 1;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  flex: 1;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
}

.join-date {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 未登录状态 */
.login-prompt {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.prompt-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
}

.login-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}

/* 头像选择区域 */
.avatar-section {
  margin: 30rpx 0;
}

.section-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  text-align: left;
}

.avatar-btn {
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
}

.preview-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 10rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 昵称输入区域 */
.nickname-section {
  margin: 30rpx 0;
  text-align: left;
}

.nickname-input {
  width: 100%;
  background: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx 20rpx;
  font-size: 28rpx;
  margin-top: 15rpx;
  box-sizing: border-box;
  min-height: 80rpx;
}





/* 设置选项 */
.settings-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.settings-list {
  display: flex;
  flex-direction: column;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item.logout {
  color: #ff4757;
}

.setting-text {
  font-size: 28rpx;
}

.setting-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr 1fr;
    gap: 15rpx;
  }
  
  .stat-item {
    padding: 25rpx 15rpx;
  }
  
  .stat-number {
    font-size: 32rpx;
  }
}