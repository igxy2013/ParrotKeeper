}

.card-action:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.action-text {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
  margin-right: 8rpx;
}

.action-arrow {
  font-size: 20rpx;
  color: #6b7280;
}

/* 团队协作卡片样式 */
.team-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.team-action-item.info-only {
  background: rgba(255, 255, 255, 0.1);
  cursor: default;
}

.team-action-item.info-only:active {
  background: rgba(255, 255, 255, 0.1);
  transform: none;
}

.team-action-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.team-action-item:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.action-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.action-title {
  color: #1f2937;
}

.action-desc,
.action-subtitle {
  color: #6b7280;
}

.team-action-item .action-arrow {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 胶囊模式切换样式（按截图排版：上部图标+标题，下部按钮） */
.mode-card .card-content { display: flex; flex-direction: column; gap: 16rpx; }
.mode-header { display: flex; flex-direction: row; align-items: center; gap: 16rpx; }
.mode-text { display: flex; flex-direction: column; gap: 6rpx; }
.mode-icon { width: 56rpx; height: 56rpx; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; font-size: 30rpx; color: #ffffff; background: linear-gradient(135deg, #93c5fd, #60a5fa); box-shadow: 0 12rpx 24rpx rgba(96, 165, 250, 0.25); flex-shrink: 0; }
.mode-display .mode-title { font-size: 32rpx; font-weight: 700; color: #111827; line-height: 1.2; }
.mode-display .current-mode { font-weight: 700; color: #111827; font-size: 28rpx; }
.mode-display .mode-desc { font-size: 24rpx; color: #6b7280; font-weight: 500; }
.mode-toggle { display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx; margin-left: 0; }
.mode-pill { width: 100%; height: 80rpx; padding: 0 24rpx; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; background: #eef2f7; color: #1f2937; font-weight: 700; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06); box-sizing: border-box; }
.mode-pill.active { background: #10b981; color: #ffffff; box-shadow: 0 10rpx 24rpx rgba(16,185,129,0.35); }

/* 暗色主题适配 */
.theme-dark .mode-display .current-mode { color: #e5e7eb; }
.theme-dark .mode-display .mode-title { color: #e5e7eb; }
.theme-dark .mode-display .mode-desc { color: #9ca3af; }
.theme-dark .mode-icon { color: #ffffff; box-shadow: 0 12rpx 24rpx rgba(96, 165, 250, 0.35); }

/* 覆盖旧的横向布局，确保按钮位于下方 */
.mode-card .card-content { align-items: stretch; }
.mode-toggle { display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx; margin-left: 0; }
.theme-dark .mode-pill { background: rgba(255,255,255,0.12); color: #e5e7eb; }
.theme-dark .mode-pill.active { background: #10b981; color: #ffffff; box-shadow: 0 10rpx 24rpx rgba(16,185,129,0.45); }

/* 应用设置卡片样式 */
