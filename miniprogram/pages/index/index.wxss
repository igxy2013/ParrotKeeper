/* pages/index/index.wxss */

.page-container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  /* 为固定底部导航预留空间（含安全区） */
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* 固定头部样式 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%);
  padding: 24rpx 32rpx;
  padding-top: 88rpx;
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.3);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  align-items: center;
}

.app-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  backdrop-filter: blur(10rpx);
}

.icon-heart {
  color: #ffffff;
  font-size: 36rpx;
}

.app-info {
  display: flex;
  flex-direction: column;
}

.app-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.2;
}

.app-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 4rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 统一：与个人中心一致的头部通知按钮样式 */
.header-action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.25);
  backdrop-filter: blur(12rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-action-btn:active { transform: scale(0.96); }
.header-action-icon { width: 36rpx; height: 36rpx; }
.header-action-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 18rpx;
  height: 18rpx;
  background: #ef4444;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.85);
  box-shadow: 0 4rpx 8rpx rgba(239, 68, 68, 0.35);
}

.icon-notification,
.icon-more {
  color: #ffffff;
  font-size: 32rpx;
}

/* Image-based icons sizing */
.icon-notification-img { width: 32rpx; height: 32rpx; }
.stat-icon-img { width: 40rpx; height: 40rpx; display: block; }
.stat-icon-mask {
  width: 40rpx;
  height: 40rpx;
  display: block;
  background-color: #ffffff; /* 默认白色，确保在彩色背景上清晰可见 */
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-position: center;
  mask-position: center;
  -webkit-mask-size: contain;
  mask-size: contain;
}
.inline-title-icon { width: 28rpx; height: 28rpx; margin-right: 12rpx; vertical-align: -4rpx; }
.action-icon-img { width: 44rpx; height: 44rpx; display: block; }
.action-icon-mask {
  width: 44rpx;
  height: 44rpx;
  display: block;
  background-color: #ffffff; /* 默认填充色，可被内联覆盖 */
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-position: center;
  mask-position: center;
  -webkit-mask-size: contain;
  mask-size: contain;
}
.activity-icon-img { 
  width: 48rpx; 
  height: 48rpx; 
  display: block; /* 避免内联元素被基线裁剪 */
}

/* 背景图方式渲染活动图标，避免 <image> 对 SVG 的裁剪问题 */
.activity-icon-bg {
  width: 48rpx;
  height: 48rpx;
  display: block;
  /* 使用 mask 渲染矢量图标，避免 iOS 对 background-image 的裁剪/解析问题 */
  background-color: #ffffff; /* 图标填充色 */
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-position: center;
  mask-position: center;
  -webkit-mask-size: contain;
  mask-size: contain;
  transform: translateY(-1rpx); /* 修复部分设备底部像素裁剪 */
}
.alert-icon-img { width: 40rpx; height: 40rpx; }
.modal-close-icon-img { width: 32rpx; height: 32rpx; }
.label-icon-img { width: 28rpx; height: 28rpx; margin-right: 12rpx; vertical-align: -4rpx; }
.upload-icon-img { width: 48rpx; height: 48rpx; }
.photo-action-icon-img { width: 28rpx; height: 28rpx; }
.login-icon-img { width: 120rpx; height: 120rpx; }

/* 主要内容区域 */
.main-content {
  padding-top: 32rpx;
  padding-left: 32rpx; /* 恢复全局左右边距为24rpx */
  padding-right: 32rpx; /* 避免影响其它卡片 */
}

/* 欢迎卡片样式 */
.welcome-card {
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%);
  color: #ffffff;
  padding: 48rpx;
  border-radius: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(76, 175, 80, 0.3);
  position: relative;
  overflow: hidden;
  min-height: 220rpx; /* 与鹦鹉页顶部卡片统一高度 */
}

.welcome-bg-circle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.circle-1 {
  width: 256rpx;
  height: 256rpx;
  top: -128rpx;
  right: -128rpx;
}

.circle-2 {
  width: 192rpx;
  height: 192rpx;
  bottom: -96rpx;
  left: -96rpx;
}

.welcome-content {
  position: relative;
  z-index: 10;
}

.welcome-greeting {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.welcome-message {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  margin-bottom: 32rpx;
}

.status-indicator {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ffffff;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: pulse 2s infinite;
  flex-shrink: 0;
}

.status-dot-healthy {
  background: #4CAF50;
  box-shadow: 0 0 8rpx rgba(76, 175, 80, 0.5);
}

.status-dot-warning {
  background: #FF9800;
  box-shadow: 0 0 8rpx rgba(255, 152, 0, 0.5);
  animation: pulse-warning 1.5s infinite;
}

.status-dot-recovering {
  background: #2196F3;
  box-shadow: 0 0 8rpx rgba(33, 150, 243, 0.5);
  animation: pulse-recovering 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes pulse-warning {
  0%, 100% { 
    opacity: 1; 
    transform: scale(1);
  }
  50% { 
    opacity: 0.7; 
    transform: scale(1.1);
  }
}

@keyframes pulse-recovering {
  0%, 100% { 
    opacity: 1; 
    transform: scale(1);
  }
  33% { 
    opacity: 0.8; 
    transform: scale(1.05);
  }
  66% { 
    opacity: 0.6; 
    transform: scale(1.1);
  }
}

.status-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 30rpx;
}

.stat-card {
  background: #ffffff; /* 不透明白底 */
  padding: 48rpx; /* 保持体量感 */
  border-radius: 32rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08); /* 轻柔阴影 */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  text-align: left; /* 卡片内文字左对齐 */
}

.stat-card:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12); /* 活跃态阴影稍加强 */
}

.stat-icon-container {
  width: 64rpx; /* 小徽章尺寸 */
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.stat-icon-container.emerald {
