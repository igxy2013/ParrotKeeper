/* pages/index/index.wxss */

.page-container {
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header-section {
  margin-bottom: 20rpx;
}

.welcome-card {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 50%, #81C784 100%);
  color: #ffffff;
  padding: 48rpx 40rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(76, 175, 80, 0.3);
  position: relative;
  overflow: hidden;
}

.welcome-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { transform: rotate(0deg); opacity: 0.3; }
  50% { transform: rotate(180deg); opacity: 0.1; }
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
}

.weather-info {
  text-align: right;
}

.temperature {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.weather-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.stats-section {
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin: 0 20rpx;
}

.stat-item {
  background: linear-gradient(135deg, #ffffff 0%, #f8fffe 100%);
  padding: 36rpx 30rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(76, 175, 80, 0.12);
  border: 1rpx solid rgba(76, 175, 80, 0.08);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #4CAF50, #66BB6A, #81C784);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.stat-item:hover::before {
  transform: translateX(0);
}

.stat-item:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.16);
}

.stat-number {
  font-size: 42rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 12rpx;
  transition: transform 0.3s ease;
}

.stat-item:hover .stat-number {
  transform: scale(1.05);
}

.stat-label {
  font-size: 26rpx;
  color: #555555;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.quick-actions {
  margin-bottom: 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 24rpx;
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.15);
  border: 1rpx solid rgba(76, 175, 80, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4CAF50, #66BB6A);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-item:hover::before {
  opacity: 1;
}

.action-item:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(76, 175, 80, 0.2);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  transition: transform 0.3s ease;
}

.action-item:hover .action-icon {
  transform: scale(1.1);
}

.action-text {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
  font-weight: 500;
  line-height: 1.2;
}

.recent-records {
  margin-bottom: 20rpx;
}

.more-link {
  font-size: 24rpx;
  color: #4CAF50;
}

.record-list {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.record-content {
  flex: 1;
}

.record-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 6rpx;
}

.record-subtitle {
  font-size: 24rpx;
  color: #666666;
}

.health-alerts {
  margin-bottom: 20rpx;
}

.alert-list {
  margin-top: 20rpx;
}

.alert-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background-color: #fff3cd;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.alert-item:last-child {
  margin-bottom: 0;
}

.alert-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.alert-content {
  flex: 1;
}

.alert-title {
  font-size: 28rpx;
  color: #856404;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.alert-subtitle {
  font-size: 24rpx;
  color: #856404;
  opacity: 0.8;
}

.login-prompt {
  margin: 40rpx 20rpx;
}

.login-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.login-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 10rpx;
  text-align: center;
}

.login-subtitle {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 禁用状态样式 */
.action-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.action-item.disabled .action-icon {
  filter: grayscale(100%);
}

.action-item.disabled .action-text {
  color: #999999;
}