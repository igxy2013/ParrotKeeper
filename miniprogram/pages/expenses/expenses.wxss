/* pages/expenses/expenses.wxss */

/* 页面容器 */
.page-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 筛选器样式 */
.filter-container {
  background: white;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

/* 类别网格样式 */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.category-item {
  width: calc((100% - 60rpx) / 4);
  text-align: center;
  padding: 20rpx 10rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #667eea;
  color: white;
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 22rpx;
  color: #666;
}

.category-item.active .category-name {
  color: white;
}

/* 记录列表样式 */
.records-container {
  background: white;
  margin-bottom: 20rpx;
}

.records-header {
  padding: 30rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.records-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.records-list {
  padding: 0 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.record-type {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  margin-right: 12rpx;
}

.record-type.income {
  background: #e8f5e8;
  color: #52c41a;
}

.record-type.expense {
  background: #fff2e8;
  color: #fa8c16;
}

.record-category {
  font-size: 24rpx;
  color: #666;
}

.record-description {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.record-meta {
  font-size: 22rpx;
  color: #999;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
  text-align: right;
}

.record-amount.income {
  color: #52c41a;
}

.record-amount.expense {
  color: #fa8c16;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载状态样式 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 添加记录模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.modal-content {
  width: 100%;
  max-width: 700rpx;
  max-height: 82vh;
  background: #ffffff;
  border-radius: 48rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.18);
  font-family: 'Microsoft YaHei','PingFang SC','Hiragino Sans GB','Heiti SC','SimHei',system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Noto Sans',sans-serif;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  color: #333;
  font-size: 32rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.type-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.type-option {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.type-option.active {
  background: #667eea;
  color: white;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.form-picker {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  color: #333;
}

/* 弹窗滚动内容区（按 82vh 预留头部与底部） */
.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.modal-actions {
  display: flex;
  gap: 12rpx;
  padding: 20rpx 28rpx;
  border-top: 2rpx solid #f3f4f6;
  background: #f9fafb;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.modal-btn.cancel {
  background: #f8f9fa;
  color: #666;
}

.modal-btn.confirm {
  background: #667eea;
  color: white;
}

/* 浮动添加按钮样式 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background: #667eea;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .category-item {
    width: calc((100% - 40rpx) / 3);
  }
}
/* 头部加号按钮样式 */
.header-actions {
  display: flex;
  align-items: center;
}

.header-add-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
}

.header-add-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.add-icon {
  color: #ffffff;
  font-size: 36rpx;
  line-height: 1;
}

/* ===== 以下为参考APP像素级对齐覆盖样式 ===== */
/* 页面背景与内容间距（覆盖原有） */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff7ed 0%, #ffffff 50%, #ffedd5 100%);
  padding-bottom: 40rpx;
}
.page-content {
  padding-left: 12rpx;
  padding-right: 12rpx;
  display: flex;
  flex-direction: column;
}

/* 统计卡片（玻璃质感白卡） */
.stats-grid { display: flex; gap: 24rpx;  }
.stat-card {
  flex: 1;
  background: #ffffff; /* 改为纯白色背景 */
  backdrop-filter: blur(12rpx);
  border-radius: 32rpx; /* rounded-2xl */
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.08); /* shadow-lg */
  border: 1rpx solid rgba(0,0,0,0.05); /* 调整边框颜色以适配白色背景 */
}
.stat-card .stat-icon {
  width: 60rpx; height: 60rpx; border-radius: 16rpx;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 12rpx;
}
.stat-card .stat-value { font-size: 44rpx; font-weight: 700; } /* 增大数值字体 */
.stat-card .stat-label { font-size: 28rpx; color: #6b7280; } /* 增大标签字体 */
/* 图标底色 */
.stat-card.income .stat-icon { background: #e6ffed; }
.stat-card.expense .stat-icon { background: #fee2e2; }
.stat-card.net .stat-icon { background: #e0f2fe; }
.stat-card.monthly .stat-icon { background: #ede9fe; }
/* 数值配色（与参考） */
.stat-card.income .stat-value { color: #16a34a; }
.stat-card.expense .stat-value { color: #dc2626; }
.stat-card.net.positive .stat-value { color: #0ea5e9; }
.stat-card.net.negative .stat-value { color: #fb923c; }
.stat-card.monthly .stat-value { color: #8b5cf6; }

/* 卡片与筛选区 */
.card { 
  background: #ffffff; /* 改为纯白色背景 */
  backdrop-filter: blur(12rpx); 
  border-radius: 32rpx; 
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.06); 
  border: 1rpx solid rgba(0,0,0,0.05); /* 调整边框颜色 */
}
/* 筛选条件卡片紧凑化优化 */
.card-header { 
  padding: 20rpx 28rpx 12rpx; /* 减少底部间距 */
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
}

.card-content { 
  padding: 12rpx 28rpx 20rpx; /* 减少顶部和底部间距 */
}

.filter-section { 
  margin-bottom: 16rpx; /* 从24rpx减少到16rpx */
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-label { 
  font-size: 28rpx; /* 增大标题字体 */
  color: #333333; /* 更深的标题颜色 */
  margin-bottom: 16rpx; /* 增加标题与chips的间距 */
  display: block; 
  font-weight: 500; /* 增加字重 */
}

.chip-group { 
  display: flex; 
  flex-wrap: wrap; 
  gap: 12rpx; /* 增加间距 */
  justify-content: flex-start; /* 左对齐 */
}

.chip-group-tight { 
  gap: 12rpx; /* 统一间距 */
  justify-content: flex-start; /* 左对齐 */
}

.chip { 
  padding: 8rpx 20rpx; /* 增加内边距 */
  background: #f5f5f5; /* 更浅的默认背景 */
  color: #666666; /* 默认文字颜色 */
  border-radius: 24rpx; /* 更大的圆角，更椭圆 */
  font-size: 24rpx; /* 增大字体 */
  border: none; /* 移除边框 */
  transition: all 0.2s ease;
  min-width: auto;
  white-space: nowrap;
  font-weight: 500; /* 增加字重 */
}

.chip.active { 
  font-weight: 600; 
  color: white; /* 选中时文字为白色 */
}

/* 记录类型 - 紫色系 */
.chip.active.all, 
.chip.active.income, 
.chip.active.expense { 
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%); /* 紫色渐变 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3); /* 添加阴影 */
}

/* 选择鹦鹉 - 橙色系 */
.chip.active.parrot { 
  background: linear-gradient(135deg, #f97316 0%, #fb923c 100%); /* 橙色渐变 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(249, 115, 22, 0.3);
}

/* 记录类别 - 蓝色系 */
.chip.active.category { 
  background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%); /* 蓝色渐变 */
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 悬停效果 */
.chip:not(.active):hover {
  background: #e5e5e5;
  transform: translateY(-1rpx);
}

.chip.active:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 类别网格（参考APP） */
.category-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 24rpx; }
.category-item { background: #f8fafc; border-radius: 24rpx; padding: 24rpx; display: flex; flex-direction: column; align-items: center; transition: transform 0.2s ease; }
.category-item:active { transform: scale(0.97); }
.category-item.active { box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.06); }
.category-icon { width: 56rpx; height: 56rpx; border-radius: 16rpx; background: #fff; display: flex; align-items: center; justify-content: center; margin-bottom: 8rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1); }
.category-name { font-size: 22rpx; color: #333; }
.category-type { font-size: 20rpx; margin-top: 6rpx; padding: 4rpx 10rpx; border-radius: 999rpx; }
.category-type.income { background: #dcfce7; color: #16a34a; }
.category-type.expense { background: #fee2e2; color: #dc2626; }

/* 记录列表（白卡风格） */
.list-container { padding: 0 20rpx; }
.list-item { background: rgba(255,255,255,0.8); backdrop-filter: blur(12rpx); border-radius: 32rpx; margin-bottom: 24rpx; box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.06); border: 1rpx solid rgba(255,255,255,0.5); }
.list-item-content { display: flex; align-items: center; justify-content: space-between; padding: 28rpx; }
.list-item-title { display: flex; gap: 12rpx; align-items: center; margin-bottom: 8rpx; }
.type-tag { font-size: 22rpx; padding: 6rpx 12rpx; border-radius: 999rpx; }
.type-tag.income { background: #dcfce7; color: #16a34a; }
.type-tag.expense { background: #fee2e2; color: #dc2626; }
.category-tag { font-size: 24rpx; color: #374151; }
.list-item-desc { font-size: 28rpx; color: #111827; margin-bottom: 6rpx; }
.list-item-meta { font-size: 22rpx; color: #6b7280; display: flex; gap: 12rpx; }
.list-item-value { font-size: 34rpx; font-weight: 700; }
.list-item-value.income { color: #16a34a; }
.list-item-value.expense { color: #dc2626; }