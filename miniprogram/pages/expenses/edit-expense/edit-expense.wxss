/* pages/expenses/edit-expense/edit-expense.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: flex-start;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  flex-shrink: 0;
}

.label.required::after {
  content: '*';
  color: #e74c3c;
  margin-left: 4rpx;
}

.picker {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 44rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.input {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
}

.unit {
  font-size: 28rpx;
  color: #666;
  line-height: 84rpx;
}

.textarea {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
  min-height: 120rpx;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.delete-btn, .submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn {
  background: #e74c3c;
  color: white;
}

.submit-btn {
  background: #3498db;
  color: white;
}

.submit-btn[disabled] {
  background: #bdc3c7;
  color: #7f8c8d;
}