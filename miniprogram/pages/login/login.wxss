.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-box {
  width: 320px;
  padding: 40px;
  background: white;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 30px;
}

/* 模式选择区域 */
.mode-selection {
  margin-bottom: 30px;
}

.mode-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 15px;
}

.mode-options {
  display: flex;
  gap: 15px;
}

.mode-option {
  flex: 1;
  padding: 20px 15px;
  border: 2px solid #e1e5e9;
  border-radius: 15px;
  background: transparent;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.mode-option.active {
  transform: translateY(-2px);
}

.mode-icon {
  font-size: 24px;
  margin-bottom: 8px;
}

.mode-name {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 5px;
}

.mode-desc {
  font-size: 12px;
  color: #666;
  line-height: 1.3;
}

/* 模式卡片背景增强 */
.mode-option.mode-personal {
  background: transparent;
  border-color: #e1e5e9;
}
.mode-option.mode-team {
  background: transparent;
  border-color: #e1e5e9;
}
.mode-option.mode-personal.active .mode-name,
.mode-option.mode-team.active .mode-name {
  color: #ffffff;
}
.mode-option.mode-personal.active .mode-desc,
.mode-option.mode-team.active .mode-desc {
  color: rgba(255, 255, 255, 0.9);
}
.mode-option.mode-personal.active .mode-icon-img,
.mode-option.mode-team.active .mode-icon-img {
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.15)) brightness(0) invert(1);
}

/* 表单区域 */
.form-section {
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.login-input {
  width: 100%;
  height: 50px;
  padding: 0 20px;
  border: 2px solid #e1e5e9;
  border-radius: 25px;
  font-size: 16px;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.login-input:focus {
  border-color: #10b981;
  background: white;
  outline: none;
}

.login-input::placeholder {
  color: #999;
}

/* 用户名输入居中 */
.login-input.center-text {
  text-align: center;
  padding-right: 48px; /* 与左侧图标对称，实现视觉居中 */
}
.login-input.center-text::placeholder {
  text-align: center;
}

/* WeChat input 的占位符类，保证居中 */
.placeholder-center {
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 50px;
  border-radius: 25px;
  font-size: 16px;
  margin-bottom: 15px;
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
}

.account-btn {
  background: #10b981;
  color: white;
}

.account-btn:hover {
  background: #11b981;
}

.wechat-btn {
  background: #10b981;
  color: white;
}

.wechat-btn:hover {
  background: #11b981;
}

.login-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.register-link {
  color: #10b981;
  font-size: 14px;
  margin-top: 10px;
  cursor: pointer;
  transition: color 0.3s ease;
}

.register-link:hover {
  color: #10b981;
  text-decoration: underline;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 30px 0;
}

.divider-line {
  flex: 1;
  height: 1px;
  background: #e1e5e9;
}

.divider-text {
  margin: 0 15px;
  color: #999;
  font-size: 14px;
}

/* 现代化增强样式 */
.logo {
  width: 60px;
  height: 60px;
  border-radius: 12px;
  margin: 0 auto 12px;
  display: block;
}

.mode-icon-img {
  width: 24px;
  height: 24px;
  display: block;
  margin: 0 auto 8px;
}

.input-group {
  position: relative;
}

.input-icon-img {
  width: 20px;
  height: 20px;
  position: absolute;
  left: 16px;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.8;
}

.input-with-icon {
  padding-left: 48px;
}

.password-group .password-toggle {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  opacity: 0.9;
  z-index: 2;
  cursor: pointer;
}
/* 为右侧图标在输入框内预留空间 */
.input-with-right-icon {
  padding-right: 48px;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-icon-img {
  width: 20px;
  height: 20px;
}
