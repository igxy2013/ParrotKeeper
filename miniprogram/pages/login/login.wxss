.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-box {
  width: 320px;
  padding: 40px;
  background: white;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 30px;
}

/* 表单区域 */
.form-section {
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.login-input {
  width: 100%;
  height: 50px;
  padding: 0 20px;
  border: 2px solid #e1e5e9;
  border-radius: 25px;
  font-size: 16px;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.login-input:focus {
  border-color: #667eea;
  background: white;
  outline: none;
}

.login-input::placeholder {
  color: #999;
}

.login-btn {
  width: 100%;
  height: 50px;
  border-radius: 25px;
  font-size: 16px;
  margin-bottom: 15px;
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.account-btn {
  background: #667eea;
  color: white;
}

.account-btn:hover {
  background: #5a6fd8;
}

.wechat-btn {
  background: #07c160;
  color: white;
}

.wechat-btn:hover {
  background: #06ad56;
}

.login-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.register-link {
  color: #667eea;
  font-size: 14px;
  margin-top: 10px;
  cursor: pointer;
  transition: color 0.3s ease;
}

.register-link:hover {
  color: #5a6fd8;
  text-decoration: underline;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 30px 0;
}

.divider-line {
  flex: 1;
  height: 1px;
  background: #e1e5e9;
}

.divider-text {
  margin: 0 15px;
  color: #999;
  font-size: 14px;
}