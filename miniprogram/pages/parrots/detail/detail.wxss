/* pages/parrots/detail/detail.wxss */

/* 页面容器 - 使用柔和的浅灰色背景 */
.page-container {
  background: #f3f4f6;
  min-height: 100vh;
  position: relative;
}

/* 自定义头部 - 保持与整体风格一致 */
.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(90deg, #10b981 0%, #059669 100%);
  padding: 88rpx 32rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.back-icon-img {
  width: 36rpx;
  height: 36rpx;
}

.title-block {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding-top: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #10b981;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #9ca3af;
}

/* 主内容容器 */
.content-container {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 鹦鹉信息卡片 */
.parrot-info-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  position: relative;
}

.parrot-main-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.parrot-avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  background: #f5f5f5;
}

.parrot-avatar {
  width: 100%;
  height: 100%;
}

.parrot-details {
  flex: 1;
}

/* 菜单按钮样式 */
.menu-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.menu-btn:active {
  background: #e5e7eb;
}

.menu-icon-img { width: 32rpx; height: 32rpx; }

/* 菜单遮罩层样式 */
.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background: transparent;
}

/* 弹出菜单样式 */
.popup-menu {
  position: absolute;
  top: 80rpx;
  right: 0;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  opacity: 0;
  transform: translateY(-10rpx) scale(0.95);
  transition: all 0.2s ease;
  z-index: 1000;
  min-width: 240rpx;
}

.popup-menu.show {
  opacity: 1;
  transform: translateY(0) scale(1);
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f9fafb;
}

.menu-item.delete-item:active {
  background: #fef2f2;
}

.menu-item-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.delete-item .menu-item-text {
  color: #ef4444;
}

.parrot-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 4rpx;
}

/* 名称与性别徽章容器 */
.parrot-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

/* 性别徽章样式 */
.gender-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-left: 8rpx;
}

.gender-icon-img {
  width: 24rpx;
  height: 24rpx;
}

.gender-male { background: #e0f2fe; }
.gender-female { background: #fce7f3; }
.gender-unknown { background: #f3f4f6; }

.parrot-species {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.parrot-status-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

/* 健康徽章样式 */
.health-badge {
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  color: #ffffff;
}

.health-badge.health-healthy { background: #10b981; }
.health-badge.health-sick { background: #ef4444; }
.health-badge.health-recovering { background: #f59e0b; }
.health-badge.health-observation { background: #3b82f6; }

/* 快速操作按钮 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.action-btn {
  padding: 24rpx 16rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.2s ease;
  background: #f9fafb;
}

.action-btn:active {
  transform: scale(0.96);
  background: #f3f4f6;
}

.action-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-icon-img { width: 40rpx; height: 40rpx; }

.action-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #4b5563;
}

/* 按钮特定颜色 */
.feeding-btn .action-icon-wrapper { background: #fff7ed; }
.health-btn .action-icon-wrapper { background: #fdf4ff; }
.cleaning-btn .action-icon-wrapper { background: #eff6ff; }
.breeding-btn .action-icon-wrapper { background: #ecfdf5; }

.last-feed-info {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

/* 选项卡容器 */
.tabs-container {
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.tabs-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-bottom: 1rpx solid #f3f4f6;
  padding: 12rpx 64rpx;
}

.tab-item {
  flex: none;
  padding: 16rpx 4rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #6b7280;
}

.tab-item.active {
  color: #10b981;
  font-weight: 600;
}

.tab-sep {
  color: #9ca3af;
  margin: 0 6rpx;
}

.tab-content {
  padding: 32rpx;
}

.tab-panel {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.info-grid-item {
  border-radius: 20rpx;
  padding: 24rpx;
  position: relative;
  overflow: hidden;
  background: #f9fafb;
  border: 1px solid #f3f4f6;
}

.grid-label-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.grid-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.8;
}

.grid-label {
  font-size: 24rpx;
  color: #6b7280;
}

.grid-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 特征卡片 */
.characteristics-card {
  background: #fffbeb;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1px solid #fef3c7;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

/* 仅备注卡片的头部，避免被全局 .card-header 的 space-between 推到右侧 */
.characteristics-card .card-header {
  justify-content: flex-start;
}

.notes-content {
  display: block;
  margin-top: 8rpx;
}

.card-icon-img { width: 32rpx; height: 32rpx; }

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.card-actions {
  margin-left: auto;
}

/* 照片区域 */
.photo-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1px solid #f3f4f6;
}

.photo-container {
  border-radius: 16rpx;
  overflow: hidden;
  background: #f9fafb;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200rpx;
}

.parrot-photo {
  width: 100%;
  height: 400rpx;
}

.modern-action-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #fff;
}

.modern-action-icon {
  width: 28rpx;
  height: 28rpx;
}

.modern-action-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 备注信息 */
.notes-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
}

.notes-empty {
  font-size: 28rpx;
  color: #9ca3af;
  font-style: italic;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid #f3f4f6;
  border-left-width: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.feeding-record { border-left-color: #f59e0b; }
.health-record { border-left-color: #10b981; }
.training-record { border-left-color: #8b5cf6; }

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.record-food, .record-skill {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.record-amount {
  font-size: 24rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.record-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.health-status-badge {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-good { background: #dcfce7; color: #16a34a; }
.status-fair { background: #fef3c7; color: #d97706; }
.status-poor { background: #fee2e2; color: #dc2626; }

.record-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1px solid #f9fafb;
}

.record-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.record-details {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 12rpx 0;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: #f9fafb;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #6b7280;
}

.detail-value {
  font-size: 24rpx;
  color: #374151;
  font-weight: 600;
}

.record-notes {
  font-size: 26rpx;
  color: #4b5563;
  background: #f9fafb;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-top: 12rpx;
}

/* 空状态 */
.empty-tip {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon-img {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 弹窗样式保留 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1999;
  backdrop-filter: blur(4px);
}

.transfer-code-modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 86vw;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  z-index: 2000;
  box-shadow: 0 24rpx 48rpx rgba(0,0,0,0.15);
}

.modal-header {
  padding: 32rpx;
  background: #f9fafb;
  border-bottom: 1px solid #f3f4f6;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  text-align: center;
}

.modal-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
  margin-top: 8rpx;
}

.modal-body {
  padding: 48rpx 32rpx;
}

.code-box {
  background: #f3f4f6;
  padding: 32rpx;
  border-radius: 16rpx;
  text-align: center;
}

.code-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #10b981;
  letter-spacing: 4rpx;
}

.modal-actions {
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1px solid #f3f4f6;
}

.modal-btn {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 0;
  border-radius: 999rpx;
  text-align: center;
}

.cancel-btn {
  background: #fff;
  border: 1px solid #e5e7eb;
  color: #374151;
}

.submit-btn {
  background: #10b981;
  color: #fff;
  border: none;
}

/* 体重趋势图表样式 */
.weight-chart-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1px solid #f3f4f6;
}

.chart-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.chart-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #6b7280;
}

.meta-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
}

.meta-value + .meta-value {
  font-weight: 600;
  color: #6b7280;
}

.weight-chart-container {
  margin: 0 -16rpx;
  height: 400rpx;
}

/* 自定义时间范围滑块样式 */
.weight-range-control {
  margin-top: 16rpx;
  padding: 8rpx 4rpx 0;
}

.range-labels {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.range-slider-container {
  position: relative;
  height: 60rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 10rpx;
}

.slider-area {
  width: 100%;
  height: 100%;
  position: relative;
}

.slider-track-bg {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 8rpx;
  margin-top: -4rpx;
  background-color: #e9ecef;
  border-radius: 4rpx;
}

.slider-track-active {
  position: absolute;
  top: 50%;
  height: 8rpx;
  margin-top: -4rpx;
  background-color: #7c3aed;
  border-radius: 4rpx;
}

.slider-handle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  margin-left: -20rpx;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid #7c3aed;
  top: 50%;
  margin-top: -20rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-handle::after {
  content: '';
  width: 12rpx;
  height: 12rpx;
  background-color: #7c3aed;
  border-radius: 50%;
}
