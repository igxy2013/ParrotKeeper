/* pages/parrots/detail/detail.wxss */
.page-container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 头部信息卡片 */
.header-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  margin-bottom: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.parrot-avatar-section {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 32rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.parrot-avatar {
  width: 100%;
  height: 100%;
}

.status-overlay {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
}

.health-badge {
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.health-badge.status-healthy {
  background: linear-gradient(135deg, #10b981, #059669);
}

.health-badge.status-sick {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.health-badge.status-recovering {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.health-badge.status-observation {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

.parrot-info {
  flex: 1;
}

.parrot-name {
  font-size: 44rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.parrot-species {
  font-size: 30rpx;
  color: #6b7280;
  margin-bottom: 20rpx;
}

.parrot-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.gender-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.gender-icon {
  font-size: 32rpx;
  color: #10b981;
}

.gender-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.age-info {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  border-radius: 20rpx;
  align-self: flex-start;
}

.age-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 信息卡片区域 */
.info-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  padding: 32rpx 40rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.card-icon {
  font-size: 28rpx;
}

.view-all-btn {
  font-size: 26rpx;
  color: #10b981;
  font-weight: 600;
  padding: 8rpx 16rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 20rpx;
}

.card-content {
  padding: 24rpx 40rpx 40rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 500;
  width: 200rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
  flex: 1;
  text-align: right;
}

.health-status-display {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.status-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.status-dot.status-healthy {
  background: linear-gradient(135deg, #10b981, #059669);
}

.status-dot.status-sick {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.status-dot.status-recovering {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.status-dot.status-observation {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

.status-text {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  position: relative;
  background: linear-gradient(135deg, #f8fafc, #f1f5f9);
  border-radius: 32rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 2rpx solid rgba(16, 185, 129, 0.1);
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #10b981, #06b6d4);
}

.stat-number {
  font-size: 40rpx;
  font-weight: 800;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.stat-icon {
  font-size: 32rpx;
  opacity: 0.6;
}

/* 记录时间线 */
.records-timeline {
  position: relative;
}

.record-timeline-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.record-timeline-item:last-child {
  margin-bottom: 0;
}

.record-timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 32rpx;
  top: 64rpx;
  bottom: -32rpx;
  width: 4rpx;
  background: linear-gradient(180deg, rgba(16, 185, 129, 0.3), rgba(6, 182, 212, 0.3));
  border-radius: 2rpx;
}

.timeline-dot {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.timeline-dot.type-feeding {
  background: linear-gradient(135deg, #10b981, #059669);
}

.timeline-dot.type-cleaning {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
}

.timeline-dot.type-health {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.timeline-icon {
  font-size: 28rpx;
  color: white;
}

.timeline-content {
  flex: 1;
  padding-top: 8rpx;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.record-time {
  font-size: 24rpx;
  color: #6b7280;
}

.record-notes {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 快速操作卡片 */
.quick-actions-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.quick-action-btn {
  background: linear-gradient(135deg, #f8fafc, #f1f5f9);
  border: 2rpx solid rgba(16, 185, 129, 0.1);
  border-radius: 32rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.quick-action-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e2e8f0, #cbd5e1);
}

.quick-action-btn.feeding {
  border-color: rgba(16, 185, 129, 0.2);
}

.quick-action-btn.cleaning {
  border-color: rgba(59, 130, 246, 0.2);
}

.quick-action-btn.health {
  border-color: rgba(239, 68, 68, 0.2);
}

.quick-action-btn.records {
  border-color: rgba(107, 114, 128, 0.2);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
}

/* 管理操作卡片 */
.manage-actions-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.manage-actions-list {
  display: flex;
  flex-direction: column;
}

.manage-action-btn {
  background: transparent;
  border: none;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.manage-action-btn:last-child {
  border-bottom: none;
}

.manage-action-btn:active {
  background: rgba(0, 0, 0, 0.02);
}

.manage-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  font-size: 28rpx;
  flex-shrink: 0;
}

.manage-icon.danger {
  background: linear-gradient(135deg, #fef2f2, #fee2e2);
  color: #ef4444;
}

.manage-content {
  flex: 1;
  text-align: left;
}

.manage-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.manage-title.danger {
  color: #ef4444;
}

.manage-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.manage-arrow {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: 300;
}

/* 照片显示 */
.photo-display {
  text-align: center;
}

.detail-photo {
  width: 100%;
  max-width: 600rpx;
  height: 400rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .parrot-avatar-section {
    flex-direction: column;
    text-align: center;
    gap: 24rpx;
  }
  
  .avatar-container {
    align-self: center;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .quick-actions-grid {
    grid-template-columns: 1fr;
  }
}