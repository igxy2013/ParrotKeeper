<!--pages/parrots/add/add.wxml-->
<view class="page-container">
  <app-header title="添加鹦鹉" subtitle="创建新的鹦鹉档案" showBack="{{true}}">
    <view slot="actions" class="header-btn" bindtap="saveParrot">
      <text class="header-btn-icon">✓</text>
    </view>
  </app-header>

  <view class="page-content">
    <view class="form-card">
      <view class="form-group">
        <text class="form-label">名称</text>
        <input class="form-input" placeholder="请输入鹦鹉名称" bindinput="onNameInput" />
      </view>
      <view class="form-group">
        <text class="form-label">品种</text>
        <input class="form-input" placeholder="请输入品种" bindinput="onSpeciesInput" />
      </view>
    </view>
    <view class="form-actions">
      <button class="btn-cancel" bindtap="goBack">取消</button>
      <button class="btn-submit" bindtap="saveParrot">保存</button>
    </view>
  </view>
</view>

