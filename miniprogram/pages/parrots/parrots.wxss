/* 页面容器 */
.page-container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  /* 为固定底部导航预留空间（含安全区） */
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 固定头部样式 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%);
  padding: 24rpx 32rpx;
  padding-top: 88rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12); /* 中性阴影 */
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
}

.back-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

.header-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.header-title {
  font-size: 36rpx;
  color: #1f2937;
  font-weight: bold;
  display: block;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.header-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
}

.header-btn-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 统一 app-header 右侧加号图标尺寸（我的鹦鹉页） */
.header-btn-icon-img {
  width: 36rpx;
  height: 36rpx;
}

/* 图片化的头部按钮图标尺寸 */
.header-btn-icon-img { width: 36rpx; height: 36rpx; }

/* 统计概览卡片 */
.stats-overview-card {
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%);
  border-radius: 48rpx;
  padding: 48rpx;
  margin: 32rpx 32rpx 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.16); /* 中性阴影 */
  position: relative;
  overflow: hidden;
  min-height: 220rpx; /* 与首页统一高度 */
}

.background-circles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.bg-circle-1 {
  width: 256rpx;
  height: 256rpx;
  top: -128rpx;
  right: -128rpx;
}

.bg-circle-2 {
  width: 192rpx;
  height: 192rpx;
  bottom: -96rpx;
  left: -96rpx;
}

.stats-content {
  position: relative;
  z-index: 10;
}

.stats-title {
  font-size: 40rpx;
  color: #ffffff; /* 与APP一致，白色标题 */
  font-weight: bold;
  margin-bottom: 32rpx;
  display: block;
}

.stats-grid-overview {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.stat-overview-item {
  text-align: center;
  padding: 16rpx 12rpx;
  border-radius: 24rpx;
  transition: all 0.2s ease;
}

.stat-overview-value {
  font-size: 48rpx;
  color: #ffffff; /* 与APP一致，白色数值 */
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stat-overview-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9); /* 提升可读性 */
  display: block;
}

/* 总览筛选高亮 */
.stat-overview-item.active {
  background: rgba(255, 255, 255, 0.22);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08) inset;
}

/* 搜索筛选卡片 */
.search-filter-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  padding: 48rpx;
  margin: 0 32rpx 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(76, 175, 80, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 48rpx;
  padding: 0 32rpx;
  height: 96rpx;
  margin-bottom: 32rpx;
