}

/* 图片化的筛选箭头尺寸与透明度 */
.filter-arrow-img { width: 20rpx; height: 20rpx; opacity: 0.7; }

.view-toggle {
  margin-top: 24rpx;
  display: flex;
  background: #f1f3f5;
  border-radius: 18rpx;
  padding: 6rpx;
  width: fit-content;
  margin-left: auto;
}

.view-mode-segment {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 32rpx;
  border-radius: 14rpx;
  font-size: 26rpx;
  color: #9ca3af;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  gap: 8rpx;
  position: relative;
}

.view-mode-segment.active {
  background: #ffffff;
  color: #10a876ff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  font-weight: 600;
}

.view-mode-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  transition: all 0.3s;
}

.view-mode-segment.active .view-mode-icon {
  opacity: 1;
  filter: invert(56%) sepia(86%) saturate(289%) hue-rotate(107deg) brightness(93%) contrast(88%);
}

