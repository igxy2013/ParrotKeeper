}

.search-icon {
  font-size: 32rpx;
  color: #4CAF50;
  margin-right: 24rpx;
}

/* 图片化的搜索图标尺寸与间距 */
.search-icon-img { width: 32rpx; height: 32rpx; margin-right: 24rpx; }

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 24rpx;
  overflow-x: auto;
  padding: 8rpx 0;
}

.filter-item {
  flex-shrink: 0;
  padding: 10rpx 22rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 48rpx;
  font-size: 24rpx;
