/* pages/statistics/statistics.wxss */
.page-container {
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 游客模式提示样式 */
.guest-tip {
  margin: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.tip-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
}

.tip-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

.overview-section {
  margin-bottom: 30rpx;
}

.section-title {
  padding: 40rpx 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.title-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 0 30rpx;
}

.overview-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 35rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.overview-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.card-icon {
  font-size: 44rpx;
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 6rpx;
}

.card-label {
  font-size: 24rpx;
  color: #666666;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-unit {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 通用卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.health-section,
.feeding-trends-section,
.expense-section,
.care-frequency-section,
.species-section {
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 35rpx 35rpx 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
}

.manage-btn {
  background: #3498db;
  color: white;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
}

.card-content {
  padding: 35rpx;
}

.time-filter {
  display: flex;
  gap: 10rpx;
}

.filter-btn {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #666666;
  background-color: #f8f9fa;
  border-radius: 20rpx;
}

.filter-btn.active {
  color: #ffffff;
  background-color: #4CAF50;
}

/* 健康状态分布 */
.health-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25rpx;
}

.health-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border-left: 4rpx solid transparent;
}

.health-item:nth-child(1) {
  border-left-color: #4CAF50;
}

.health-item:nth-child(2) {
  border-left-color: #f44336;
}

.health-item:nth-child(3) {
  border-left-color: #ff9800;
}

.health-item:nth-child(4) {
  border-left-color: #2196F3;
}

.health-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.health-indicator.healthy {
  background: #4CAF50;
}

.health-indicator.sick {
  background: #f44336;
}

.health-indicator.recovering {
  background: #ff9800;
}

.health-indicator.observation {
  background: #2196F3;
}

.health-label {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.health-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 时间筛选器 */
.time-filter {
  display: flex;
  gap: 10rpx;
}

.filter-btn {
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 图表样式 */
.chart-container {
  height: 320rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 20rpx 0;
}

.chart-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  background: #f8f9ff;
  border-radius: 15rpx;
  border: 2rpx dashed #ddd;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.trend-chart {
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
  height: 100%;
  width: 100%;
  overflow-x: auto;
  padding: 0 15rpx;
}

.chart-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 70rpx;
}

.chart-bar {
  height: 220rpx;
  width: 36rpx;
  background: linear-gradient(to top, #e9ecef, #f8f9fa);
  border-radius: 18rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 15rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.bar-fill {
  width: 100%;
  background: linear-gradient(to top, #667eea, #764ba2);
  border-radius: 18rpx;
  min-height: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.chart-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.chart-value {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

/* 支出和品种分析 */
.expense-list,
.species-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.expense-item,
.species-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
}

.expense-info,
.species-info {
  min-width: 160rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.expense-category,
.species-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.expense-amount,
.species-count {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.expense-bar,
.species-bar {
  flex: 1;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 0 15rpx;
}

.expense-fill,
.species-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.8s ease;
}

.expense-percentage {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
  min-width: 50rpx;
  text-align: right;
}
/* 护理频率网格 */
.frequency-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25rpx;
}

.frequency-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 25rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border-left: 4rpx solid #667eea;
}

.frequency-icon {
  font-size: 40rpx;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.frequency-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.frequency-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.frequency-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 空状态 */
.empty-placeholder {
  text-align: center;
  padding: 80rpx 40rpx;
  background: #f8f9ff;
  border-radius: 15rpx;
  border: 2rpx dashed #ddd;
}

.empty-placeholder .placeholder-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .overview-grid {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .health-stats {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .frequency-grid {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .trend-chart {
    gap: 15rpx;
  }
  
  .chart-item {
    min-width: 50rpx;
  }
  
  .chart-bar {
    width: 28rpx;
    height: 180rpx;
  }
}

.expense-percentage {
  font-size: 24rpx;
  color: #666666;
  min-width: 60rpx;
  text-align: right;
}

.frequency-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.frequency-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 25rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.frequency-icon {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-radius: 50%;
}

.frequency-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.frequency-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 6rpx;
}

.frequency-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.empty-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}