<view class="fullscreen-page" catchtouchmove="true">
  <view class="top-bar">
    <view class="back-btn" bindtap="goBack">返回</view>
    <image class="title-icon" src="/images/remix/ri-line-chart-fill-purple.png" mode="widthFix"/>
    <view class="title">体重趋势曲线</view>
    <view class="spacer"></view>
  </view>
  <scroll-view class="legend-scroll" wx:if="{{weightLegend.length > 0}}" scroll-x="true" enable-flex="true" show-scrollbar="false">
    <view class="legend-track">
      <view class="legend-item" wx:for="{{weightLegend}}" wx:key="parrot_id">
        <view class="legend-dot" style="background: {{item.color}};"></view>
        <text class="legend-label">{{item.parrot_name}}</text>
      </view>
    </view>
  </scroll-view>
  <view class="canvas-wrap">
    <canvas type="2d" id="weightFullscreenCanvas" style="width: 100%; height: 100%;" bindtouchstart="onCanvasTap"></canvas>
  </view>
</view>
