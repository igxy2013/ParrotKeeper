.fullscreen-page {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  background: #0b1220;
  color: #e5e7eb;
}
.top-bar {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #0f172a;
  border-bottom: 1rpx solid rgba(255,255,255,0.08);
}
.back-btn {
  padding: 8rpx 16rpx;
  background: #1f2937;
  border-radius: 8rpx;
}
.title {
  margin-left: 20rpx;
  font-size: 28rpx;
}
.spacer { flex: 1; }
.canvas-wrap {
  flex: 1;
}
