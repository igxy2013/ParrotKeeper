.page-container { min-height: 100vh; background: #f5f7fb; }
.page-content { padding: 24rpx; }
.no-access { color: #ef4444; padding: 24rpx; text-align: center; }
.tips { color: #6b7280; margin: 16rpx 0; }
.empty { color: #9ca3af; padding: 40rpx 0; text-align: center; }
.
.count { color: #64748b; font-size: 24rpx; margin: 0 0 16rpx; }
.count-grid { display: flex; gap: 18rpx; color: #64748b; font-size: 22rpx; margin: 0 0 16rpx; }

/* 搜索栏与列表样式 */
.search-bar { display: flex; align-items: center; gap: 12rpx; margin: 16rpx 0 24rpx; }
.search-input { flex: 1; border: 1rpx solid #e5e7eb; padding: 16rpx 20rpx; border-radius: 16rpx; background: #ffffff; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04); font-size: 26rpx; }
.search-placeholder { font-size: 24rpx; color: #9ca3af; }
.search-actions { display: flex; gap: 12rpx; }

.user-list { display: flex; flex-direction: column; gap: 16rpx; }
.user-item { display: flex; align-items: center; background: #fff; border-radius: 16rpx; padding: 20rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); border: 1rpx solid #eef2f7; }
.avatar { width: 92rpx; height: 92rpx; border-radius: 50%; margin-right: 20rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.info { flex: 1; display: flex; flex-direction: column; gap: 6rpx; }
.name { font-size: 30rpx; color: #0f172a; font-weight: 600; }
.meta { font-size: 24rpx; color: #64748b; }
.points { font-size: 24rpx; color: #f59e0b; font-weight: 600; }

.role-picker { display: flex; align-items: center; gap: 12rpx; padding: 12rpx 16rpx; border: 1rpx solid #e5e7eb; border-radius: 20rpx; color: #111827; background: #f9fafb; }
.role-label { font-size: 24rpx; color: #6b7280; }
.role-chip { font-size: 24rpx; padding: 8rpx 16rpx; border-radius: 999rpx; background: #e2e8f0; color: #0f172a; }

/* 适配深色模式（跟随全局主题类） */
.theme-dark .page-container { background: #0b1220; }
.theme-dark .search-input { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.12); color: #e5e7eb; }
.theme-dark .user-item { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.12); box-shadow: none; }
.theme-dark .name { color: #e5e7eb; }
.theme-dark .meta { color: #9ca3af; }
.theme-dark .points { color: #fbbf24; }
.theme-dark .count { color: #9ca3af; }
.theme-dark .count-grid { color: #9ca3af; }
.theme-dark .role-picker { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.12); color: #e5e7eb; }
.theme-dark .role-label { color: #9ca3af; }
.theme-dark .role-chip { background: rgba(255,255,255,0.12); color: #e5e7eb; }
.theme-dark .search-placeholder { color: #9ca3af; }

/* 排序条样式 */
.sort-bar { display: flex; align-items: center; justify-content: space-between; padding: 12rpx 20rpx; background: #ffffff; border: 1rpx solid #eef2f7; border-radius: 16rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04); margin-bottom: 16rpx; }
.sort-picker { display: flex; align-items: center; }
.sort-label { font-size: 26rpx; color: #6b7280; margin-right: 16rpx; }
.sort-chip { font-size: 26rpx; color: #0f172a; padding: 8rpx 16rpx; border: 1rpx solid #e5e7eb; border-radius: 12rpx; background: #f9fafb; }
.order-toggle { padding: 8rpx 16rpx; border: 1rpx solid #e5e7eb; border-radius: 12rpx; background: #f9fafb; }
.order-label { font-size: 26rpx; color: #0f172a; }

/* 深色模式适配 */
.theme-dark .sort-bar { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.12); box-shadow: none; }
.theme-dark .sort-label { color: #9ca3af; }
.theme-dark .sort-chip { background: rgba(255,255,255,0.12); border-color: rgba(255,255,255,0.12); color: #e5e7eb; }
.theme-dark .order-toggle { background: rgba(255,255,255,0.12); border-color: rgba(255,255,255,0.12); }
.theme-dark .order-label { color: #e5e7eb; }
