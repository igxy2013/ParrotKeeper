.page-container { min-height: 100vh; background: #f8f9fa; }
.page-content { padding: 24rpx; }
.no-access { color: #ef4444; padding: 24rpx; text-align: center; }
.tips { color: #6b7280; margin: 16rpx 0; }
.empty { color: #9ca3af; padding: 40rpx 0; text-align: center; }

/* 表单样式 */
.form { background: #fff; border-radius: 16rpx; padding: 20rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.03); margin-bottom: 20rpx; }
.form-item { margin-bottom: 16rpx; }
.form-label { font-size: 26rpx; color: #374151; margin-bottom: 10rpx; display: block; }
.form-input { width: 100%; height: 72rpx; border: 1rpx solid #e5e7eb; border-radius: 12rpx; padding: 0 16rpx; background: #fafafa; }
.form-textarea { width: 100%; min-height: 180rpx; border: 1rpx solid #e5e7eb; border-radius: 12rpx; padding: 16rpx; background: #fafafa; }
.form-picker { height: 72rpx; display: flex; align-items: center; padding: 0 16rpx; border: 1rpx solid #e5e7eb; border-radius: 12rpx; background: #fafafa; }
.form-actions { margin-top: 8rpx; }

/* 取消编辑按钮统一为同款样式（灰色系） */
.cancel-edit-wrap { margin-top: 12rpx; }
.cancel-edit-btn {
  width: 100%;
  height: 84rpx;
  border: none;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #6B7280 0%, #9CA3AF 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(107, 114, 128, 0.28);
}
.cancel-edit-btn:active { opacity: 0.92; }
.cancel-edit-icon { display: none; }
.cancel-edit-text { font-size: 28rpx; font-weight: 600; }

/* 创建公告按钮美化 */
.create-btn {
  width: 100%;
  height: 84rpx;
  border: none;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #4F46E5 0%, #6366F1 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 24rpx rgba(99, 102, 241, 0.35);
}
.create-btn:active {
  opacity: 0.9;
}

/* 列表样式 */
.list-title { font-size: 28rpx; color: #111827; margin: 8rpx 0 16rpx; font-weight: 600; }
.ann-item { display: flex; align-items: center; justify-content: space-between; background: #fff; border-radius: 12rpx; padding: 16rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.03); margin-bottom: 12rpx; }
.ann-title { font-size: 28rpx; color: #111827; }
.ann-meta { font-size: 24rpx; color: #6b7280; margin-top: 6rpx; }
.ann-info { display: flex; flex-direction: column; }
.ann-actions { display: flex; align-items: center; gap: 12rpx; }

/* 列表图标按钮（参考清洁记录页） */
.action-buttons { display: flex; gap: 12rpx; }
.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.edit-btn { background: linear-gradient(135deg, #3b82f6, #1d4ed8); }
.delete-btn { background: linear-gradient(135deg, #ef4444, #dc2626); }
.action-btn:active { transform: scale(0.95); box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15); }
.action-icon-img { width: 32rpx; height: 32rpx; }
