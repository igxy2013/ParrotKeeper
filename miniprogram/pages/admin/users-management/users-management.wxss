.page-container { background: #f8f9fa; min-height: 100vh; padding-bottom: 40rpx; }
.page-content { padding: 24rpx; }
.no-access { color: #ef4444; padding: 32rpx; text-align: center; font-weight: 500; }
.loading { color: #6b7280; padding: 32rpx; text-align: center; }

/* Cards */
.card { 
  background: #fff; 
  border: 2rpx solid #eef2f7; 
  border-radius: 32rpx; 
  padding: 32rpx; 
  margin-bottom: 24rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04); 
}
.card-header { 
  padding-bottom: 24rpx; 
  border-bottom: 1rpx solid #f0f2f5; 
  margin-bottom: 24rpx;
}
.card-title { 
  font-weight: 700; 
  font-size: 32rpx; 
  color: #111827; 
}
.card-content { 
  /* Padding is handled by parent .card */
}

/* ÁªüËÆ°Âç°Áâá */
.stats-card { 
  background: #ffffff;
}
.stats-grid { 
  display: grid; 
  grid-template-columns: 1fr 1fr; 
  gap: 20rpx; 
}
.stats-grid.three { 
  grid-template-columns: 1fr 1fr 1fr; 
}
.stat-item { 
  display: flex; 
  align-items: center; 
  gap: 20rpx; 
  background: #fbfdff; 
  border: 1rpx solid #eef2f7; 
  border-radius: 24rpx; 
  padding: 24rpx; 
  transition: all 0.3s ease;
}
.stat-item:active {
  transform: scale(0.98);
  background: #f3f4f6;
}
.stat-icon { 
  width: 72rpx; 
  height: 72rpx; 
  border-radius: 20rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  flex-shrink: 0;
}
.stat-icon-img { 
  width: 36rpx; 
  height: 36rpx; 
}
.stat-content { 
  display: flex; 
  flex-direction: column; 
  min-width: 0; /* Fix flex text overflow */
}
.stat-value { 
  font-size: 36rpx; 
  font-weight: 800; 
  color: #111827; 
  line-height: 1.2;
}
.stat-label { 
  font-size: 24rpx; 
  color: #6b7280; 
  margin-top: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.actions { display: flex; gap: 12rpx; }
.btn { 
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%); 
  color: #fff; 
  border-radius: 999rpx; 
  padding: 20rpx 48rpx; 
  font-size: 28rpx; 
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(38, 166, 154, 0.3);
  border: none;
}
.btn:active { 
  opacity: 0.9; 
  transform: translateY(2rpx);
}
.btn[disabled] {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

.filter-row, .chips-row, .chip, .chip.active {
  display: none;
}

.search-container {
  margin-bottom: 24rpx;
}
.search-box {
  background: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  border-radius: 24rpx;
}
.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}
.search-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #111827;
  border: none;
  background: transparent;
  box-shadow: none;
  padding: 0;
  border-radius: 0;
}
.search-clear-btn {
  padding: 16rpx;
  margin-right: -16rpx;
  opacity: 0.6;
}

.filter-dropdowns-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}
.filter-picker {
  flex: 1;
}
.dropdown-item {
  background: #fff;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #374151;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
  border: 1rpx solid #f3f4f6;
}
.dropdown-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.user-card-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}
.user-card-item:active {
  background: #f9fafb;
  transform: scale(0.995);
  transition: all 0.2s;
}
.avatar { 
  width: 88rpx; 
  height: 88rpx; 
  border-radius: 50%; 
  background: #f3f4f6; 
  border: 2rpx solid #ffffff; 
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  flex-shrink: 0;
}
.loading-more, .no-more {
  padding: 24rpx;
  text-align: center;
  color: #9ca3af;
  font-size: 26rpx;
} 
.user-main { 
  flex: 1; 
  min-width: 0;
}
.row { 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  flex-wrap: wrap;
}
.name { 
  font-size: 30rpx; 
  font-weight: 700; 
  color: #111827; 
}
.tag { 
  padding: 6rpx 18rpx; 
  border-radius: 999rpx; 
  font-size: 22rpx; 
  font-weight: 600;
  border: 1rpx solid transparent;
}
.tag.role { background: #f3f4f6; color: #4b5563; } /* Fallback */
.tag.role.super_admin { background: #fdf2f8; color: #db2777; border-color: #fbcfe8; }
.tag.role.admin { background: #eff6ff; color: #2563eb; border-color: #bfdbfe; }
.tag.role.user { background: #f3f4f6; color: #4b5563; border-color: #e5e7eb; }

.tag.mode { background: #f3f4f6; color: #4b5563; } /* Fallback */
.tag.mode.team { background: #ecfdf5; color: #059669; border-color: #a7f3d0; }
.tag.mode.personal { background: #fff7ed; color: #ea580c; border-color: #fed7aa; }
.meta { 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  margin-top: 10rpx; 
  color: #9ca3af; 
  font-size: 24rpx; 
}
.meta-text {
  position: relative;
}
/* Separator for meta text */
.meta-text:not(:last-child)::after {
  content: "";
  display: inline-block;
  width: 2rpx;
  height: 16rpx;
  background: #e5e7eb;
  position: absolute;
  right: -10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.empty { 
  text-align: center; 
  color: #9ca3af; 
  font-size: 28rpx; 
  padding: 60rpx 0; 
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}
.empty::before {
  content: "üçÉ"; 
  font-size: 80rpx;
  opacity: 0.5;
}

.load-more { 
  display: flex; 
  justify-content: center; 
  margin-top: 24rpx; 
}

