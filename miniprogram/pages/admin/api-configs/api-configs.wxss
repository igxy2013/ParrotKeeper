.page-container { min-height: 100vh; background: #f5f7fb; }
.page-content { padding: 24rpx; }
.no-access { padding: 40rpx; text-align: center; color: #888; }
.loading { padding: 40rpx; text-align: center; color: #555; }
.card { background: #fff; border-radius: 24rpx; box-shadow: 0 12rpx 30rpx rgba(0,0,0,0.06); margin-bottom: 24rpx; border: 1rpx solid #eef2f7; }
.card-header { padding: 24rpx 28rpx; border-bottom: 1rpx solid #f0f2f5; }
.card-title { font-size: 30rpx; font-weight: 700; color: #111827; }
.card-content { padding: 24rpx 28rpx; }
.form-item { margin-bottom: 20rpx; }
.form-label { display: block; font-size: 24rpx; color: #6b7280; margin-bottom: 8rpx; }
.form-input { background: #f9fafb; border: 1rpx solid #e5e7eb; padding: 20rpx 24rpx; border-radius: 14rpx; font-size: 28rpx; min-height: 72rpx; line-height: 72rpx; }
.form-row { display: flex; align-items: flex-end; gap: 16rpx; margin-bottom: 16rpx; }
.flex-1 { flex: 1; }
.row-actions { margin-top: 8rpx; }
.btn.secondary { background: #e5e7eb; color: #111827; }
.icon-btn { background: #ef4444; color: #fff; border-radius: 12rpx; padding: 18rpx 22rpx; font-size: 26rpx; }
.actions { padding: 12rpx 28rpx 28rpx; }
.btn { background: #10b981; color: #fff; border-radius: 999rpx; padding: 18rpx 24rpx; font-size: 28rpx; }
.btn:active { opacity: 0.9; }

/* 列表展示样式 */
.api-item { display: flex; align-items: center; justify-content: space-between; padding: 18rpx 20rpx; border: 1rpx solid #eef2f7; border-radius: 16rpx; margin-bottom: 14rpx; background: #fbfdff; }
.api-item-info { display: flex; align-items: center; gap: 12rpx; flex-wrap: wrap; }
.badge { background: #e2f7f1; color: #0f766e; border-radius: 999rpx; padding: 6rpx 14rpx; font-size: 22rpx; }
.api-url { color: #111827; font-size: 26rpx; }
.api-model { color: #6b7280; font-size: 24rpx; }
.api-key-mask { color: #9ca3af; font-size: 22rpx; }
.quota { color: #10b981; font-size: 22rpx; }
.api-item-actions { display: flex; align-items: center; }
.icon-action-btn { width: 64rpx; height: 64rpx; border-radius: 14rpx; display: inline-flex; align-items: center; justify-content: center; margin-left: 12rpx; }
.icon-action-btn.edit { background: linear-gradient(135deg, #4CAF50 0%, #26A69A 100%); box-shadow: 0 6rpx 16rpx rgba(76,175,80,0.28); }
.icon-action-btn.delete { background: linear-gradient(135deg, #ef4444 0%, #f97316 100%); box-shadow: 0 6rpx 16rpx rgba(239,68,68,0.28); }
.action-icon-img { width: 32rpx; height: 32rpx; }

/* 添加API按钮，参考添加鹦鹉按钮但更窄 */
.add-api-btn { height: 72rpx; border-radius: 36rpx; background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%); display: inline-flex; align-items: center; justify-content: center; gap: 12rpx; padding: 0 20rpx; box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.25); }
.add-api-btn:active { transform: translateY(2rpx) scale(0.98); box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.35); }
.add-api-btn-icon { width: 30rpx; height: 30rpx; line-height: 30rpx; text-align: center; color: #fff; font-size: 30rpx; }
.add-api-btn-text { color: #fff; font-size: 28rpx; font-weight: 600; }

/* 弹窗样式（简化版） */
.modal-overlay { position: fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.35); z-index: 1000; }
.modal-content { position: fixed; left: 0; right: 0; top: 0; bottom: 0; display: flex; align-items: center; justify-content: center; z-index: 1001; }
.modal-card { width: 88%; background: #fff; border-radius: 24rpx; box-shadow: 0 20rpx 48rpx rgba(0,0,0,0.18); }
.modal-header { display: flex; align-items: center; justify-content: space-between; padding: 24rpx 28rpx; border-bottom: 1rpx solid #f0f2f5; }
.modal-title { font-size: 30rpx; font-weight: 700; color: #111827; }
.modal-close { font-size: 36rpx; color: #6b7280; }
.modal-body { padding: 20rpx 28rpx; }
.modal-actions { display: flex; justify-content: flex-end; gap: 16rpx; padding: 12rpx 28rpx 24rpx; }
.modal-btn { padding: 0 36rpx; height: 72rpx; border-radius: 36rpx; font-size: 26rpx; display: inline-flex; align-items: center; justify-content: center; min-width: 240rpx; }
.cancel-btn { background: #f1f5f9; color: #0f172a; }
.submit-btn { background: linear-gradient(135deg, #4CAF50 0%, #26A69A 100%); color: #ffffff; }
