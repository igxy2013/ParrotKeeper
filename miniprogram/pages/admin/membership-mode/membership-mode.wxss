/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

.page-content {
  padding: 24rpx 32rpx;
}

/* 无权限提示 */
.no-access {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #9ca3af;
  font-size: 28rpx;
  gap: 24rpx;
}

.no-access-icon {
  width: 96rpx;
  height: 96rpx;
  opacity: 0.5;
}

/* 卡片通用样式 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 32rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* 区块头部 */
.section-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  gap: 16rpx;
}

.section-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-icon-img {
  width: 32rpx;
  height: 32rpx;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 渐变背景 */
.bg-gradient-orange { background: linear-gradient(135deg, #f97316, #fb7185); }
.bg-gradient-blue { background: linear-gradient(135deg, #3b82f6, #06b6d4); }
.bg-gradient-purple { background: linear-gradient(135deg, #8b5cf6, #d946ef); }
.bg-gradient-pink { background: linear-gradient(135deg, #ec4899, #f43f5e); }
.bg-gradient-green { background: linear-gradient(135deg, #10b981, #34d399); }

/* 开关行 */
.toggle-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.toggle-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.toggle-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
}

.toggle-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 菜单列表 */
.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9fafb;
}

.menu-item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.menu-item-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.menu-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.menu-item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
}

.menu-item-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 弹窗样式 - 对齐 parrot-modal */
.modal-overlay {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.modal-card {
  width: 100%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.18);
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

.modal-header-gradient {
  background: linear-gradient(135deg, #10b981, #0ea5e9);
  padding: 24rpx 32rpx;
  flex-shrink: 0;
}

.modal-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  color: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.modal-close-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.modal-close-btn:active {
  background: rgba(255,255,255,0.3);
}

.modal-close-icon-img {
  width: 32rpx;
  height: 32rpx;
}

.modal-body {
  flex: 1;
  min-height: 0;
}

.form-section {
  padding: 32rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.group-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #10b981;
  line-height: 1;
}

.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 8rpx 0;
}

.form-row:last-child {
  margin-bottom: 0;
}

.switch-row {
  padding-right: 8rpx;
}

.label {
  font-size: 28rpx;
  color: #374151;
}

.number-display {
  min-width: 120rpx;
  text-align: center;
  padding: 16rpx 24rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
  transition: all 0.2s;
}

.number-display:active {
  background: #f3f4f6;
  border-color: #d1d5db;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f3f4f6;
  background: #f9fafb;
  flex-shrink: 0;
}

.btn-secondary, .btn-primary {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border: none;
}

.btn-secondary {
  background: #e5e7eb;
  color: #4b5563;
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #0ea5e9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(1rpx);
}

/* 动画 */
.fade-in {
  animation: fadeIn 0.4s ease-out forwards;
  opacity: 0;
}

.slide-up {
  animation: slideUp 0.3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  transform: translateY(20px);
  opacity: 0;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40px) scale(0.95); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}
