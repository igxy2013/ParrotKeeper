.page-container { min-height: 100vh; background: #f8f9fa; }
.page-content { padding: 16rpx; }
.no-access { color: #ef4444; padding: 24rpx; text-align: center; }
.card { background: #fff; border: 2rpx solid #eef2f7; border-radius: 24rpx; padding: 24rpx; margin: 20rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06); }
.section-title { font-weight: 700; font-size: 30rpx; color: #111827; margin-bottom: 24rpx; border-left: 8rpx solid #10b981; padding-left: 12rpx; }
.form-row { display: flex; align-items: center; margin-bottom: 24rpx; }
.label { font-size: 28rpx; color: #374151; width: 160rpx; }
.number-input { flex: 1; height: 80rpx; border-radius: 16rpx; border: 1rpx solid #e5e7eb; padding: 0 24rpx; font-size: 30rpx; background: #ffffff; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03); }
.tier-switch { flex: 1; display: flex; gap: 12rpx; }
.tier-btn { flex: 1; text-align: center; padding: 16rpx 0; border-radius: 999rpx; border: 1rpx solid #d1d5db; font-size: 26rpx; color: #4b5563; background: #f9fafb; }
.tier-btn.active { background: linear-gradient(135deg, #10b981, #059669); color: #ffffff; border-color: transparent; box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.4); }
.preset-switch { flex: 1; display: flex; gap: 12rpx; }
.preset-btn { flex: 1; text-align: center; padding: 12rpx 0; border-radius: 999rpx; border: 1rpx solid #d1d5db; font-size: 26rpx; color: #374151; background: #ffffff; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03); }
.preset-btn.active { background: #111827; color: #ffffff; border-color: #111827; }
.form-actions { margin-top: 32rpx; display: flex; justify-content: flex-end; }
.btn-primary { padding: 12rpx 48rpx; border-radius: 40rpx; background: linear-gradient(135deg, #10b981, #059669); color: #ffffff; font-size: 30rpx; box-shadow: 0 10rpx 24rpx rgba(16, 185, 129, 0.35); font-weight: 600; }
.btn-primary:active { opacity: 0.9; }
.loading { color: #6b7280; font-size: 26rpx; text-align: center; padding: 40rpx 0; }
.empty { color: #9ca3af; font-size: 26rpx; text-align: center; padding: 40rpx 0; }
.code-list { display: flex; flex-direction: column; gap: 20rpx; }
.code-item { display: flex; justify-content: space-between; align-items: center; padding: 24rpx; border-radius: 20rpx; border: 1rpx solid #e5e7eb; background: #f9fafb; }
.code-main { flex: 1; display: flex; flex-direction: column; gap: 12rpx; }
.code-line { display: flex; align-items: center; gap: 16rpx; }
.code-text { font-size: 34rpx; font-weight: 700; color: #111827; font-family: monospace; letter-spacing: 2rpx; }
.tier-tag { padding: 4rpx 12rpx; border-radius: 999rpx; font-size: 22rpx; font-weight: 600; }
.tier-tag.pro { background: #fee2e2; color: #b91c1c; }
.tier-tag.team { background: #dbeafe; color: #1d4ed8; }
.status-tag { padding: 4rpx 16rpx; border-radius: 999rpx; font-size: 22rpx; font-weight: 600; }
.status-tag.active { background: #dcfce7; color: #16a34a; }
.status-tag.inactive { background: #e5e7eb; color: #6b7280; }
.meta-line { display: flex; align-items: center; gap: 20rpx; font-size: 24rpx; color: #6b7280; }
.actions { display: flex; flex-direction: column; gap: 12rpx; margin-left: 24rpx; }
.btn-secondary { padding: 12rpx 28rpx; border-radius: 999rpx; font-size: 24rpx; background: #e5e7eb; color: #111827; font-weight: 600; }
.btn-secondary:active { opacity: 0.9; }
