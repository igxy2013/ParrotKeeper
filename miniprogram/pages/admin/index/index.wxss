.page-container { background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); min-height: 100vh; }
.page-content { padding: 12rpx; }

.no-access { margin: 24rpx 20rpx; padding: 40rpx; border-radius: 32rpx; background: rgba(255,255,255,0.9); text-align: center; color: #ef4444; font-size: 28rpx; border: 1rpx solid rgba(255,255,255,0.6); }

.menu-card { background: rgba(255,255,255,0.92); border: 1rpx solid rgba(255,255,255,0.6); border-radius: 32rpx; margin: 24rpx 20rpx; padding: 24rpx; box-shadow: 0 12rpx 28rpx rgba(0,0,0,0.06); }
.section-title { display: flex; align-items: center; gap: 12rpx; margin-bottom: 12rpx; font-weight: 700; color: #111827; }
.section-icon-img { width: 30rpx; height: 30rpx; }
.menu-list { display: flex; flex-direction: column; gap: 16rpx; }
.menu-item { display: flex; align-items: center; gap: 20rpx; padding: 20rpx; background: linear-gradient(135deg, #fff, #f8fafc); border: 1rpx solid #eef2f7; border-radius: 24rpx; }
.menu-item-icon { width: 64rpx; height: 64rpx; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; }
.menu-item-icon-img { width: 30rpx; height: 30rpx; }
.menu-item-title { font-weight: 700; color: #111827; font-size: 28rpx; }
.menu-item-desc { font-size: 24rpx; color: #6b7280; margin-top: 4rpx; font-weight: 500; }
.arrow-icon { width: 32rpx; height: 32rpx; margin-left: auto; }

.bg-amber { background: linear-gradient(135deg, #f59e0b, #f97316); }
.bg-green { background: linear-gradient(135deg, #22c55e, #10b981); }
.bg-purple { background: linear-gradient(135deg, #a855f7, #7c3aed); }
.bg-indigo { background: linear-gradient(135deg, #3b82f6, #2563eb); }
.bg-gray { background: linear-gradient(135deg, #9ca3af, #6b7280); }
.bg-orange { background: linear-gradient(135deg, #fb923c, #ea580c); }
.bg-pink { background: linear-gradient(135deg, #f43f5e, #ec4899); }
