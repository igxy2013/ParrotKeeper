.page-container{background:#fff;min-height:100vh}
.page-content{padding:12px}
.toolbar{display:flex;align-items:center;justify-content:space-between;margin-bottom:12px}
.toolbar-left{flex:1}
.toolbar-right{margin-left:12px}
.picker-display{display:flex;align-items:center;justify-content:space-between;padding:24rpx;border:2rpx solid #e5e7eb;border-radius:32rpx;font-size:26rpx;background:#ffffff}
.picker-display:active{border-color:#26A69A}
.species-multi{display:flex;flex-wrap:wrap;gap:8px;margin-top:8px}
.species-option{padding:6px 10px;border-radius:999px;border:2rpx solid #e5e7eb;background:#f9fafb;color:#374151;font-size:24rpx}
.species-option.selected{background:#ecfdf5;border-color:#10b981;color:#065f46}
.btn-primary{background:#10b981;color:#fff;border-radius:12px;padding:10px 20px;font-size:14px;box-shadow:0 2px 6px rgba(16,185,129,.25)}
.btn-primary.lg{padding:12px 22px;font-size:15px}
.quick-add-btn{display:flex;align-items:center;gap:10px;background:linear-gradient(135deg,#E9FFF4,#D7F8E7);border:none;border-radius:32rpx;padding:8px 12px;box-shadow:0 8px 24px rgba(0,0,0,0.06)}
.quick-add-btn:active{transform:translateY(2px) scale(0.98);box-shadow:0 4px 16px rgba(0,0,0,0.14)}
.action-icon-wrapper.small{width:28px;height:28px;border-radius:10px;background:#fff;display:flex;align-items:center;justify-content:center;box-shadow:0 4px 16px rgba(0,0,0,0.1)}
.plus-icon{color:#10b981;font-size:18px;line-height:1}
.quick-add-label{font-size:14px;color:#374151;font-weight:500}
.list{display:flex;flex-direction:column;gap:10px}
.item{background:#ffffff;border:1px solid #e5e7eb;border-radius:16px;padding:16px;box-shadow:0 12px 32px rgba(0,0,0,0.08)}
.item-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:8px}
.range{font-weight:700;color:#111827}
.species-chips{display:flex;gap:6px;flex-wrap:wrap;max-width:50%}
.species-chip{margin-left:0;color:#10b981;background:#ecfdf5;border-radius:999px;padding:4px 8px;font-size:12px}
.actions{display:flex;gap:8px}
.action{font-size:12px;color:#2563eb}
.action.delete{color:#dc2626}
.empty{text-align:center;color:#6b7280}
.modal-mask{position:fixed;left:0;top:0;right:0;bottom:0;background:rgba(0,0,0,.2);display:flex;align-items:flex-start;justify-content:center;z-index:2000;padding:16rpx;padding-top:160rpx}
.modal{width:96%;max-width:730rpx;background:#fff;border-radius:48rpx;overflow:hidden;box-shadow:0 20rpx 60rpx rgba(0,0,0,0.18)}
.modal-header-gradient{background:linear-gradient(135deg,#4CAF50 0%,#26A69A 50%,#00BCD4 100%);padding:24rpx 32rpx;position:relative}
.modal-header-row{display:flex;align-items:center;justify-content:space-between}
.modal-title{color:#fff;font-size:36rpx;font-weight:bold}
.modal-close-btn{width:56rpx;height:56rpx;border-radius:50%;background:rgba(255,255,255,0.2);display:flex;align-items:center;justify-content:center}
.modal-close-text{color:#fff;font-size:32rpx;line-height:1}
.modal-content{padding:24rpx;display:flex;flex-direction:column;gap:16rpx}
.form-row{display:flex;gap:16rpx}
.form-input{flex:1;height:88rpx;padding:0 24rpx;border:2rpx solid #e5e7eb;border-radius:32rpx;font-size:26rpx;background:#ffffff;box-sizing:border-box}
.form-input:focus{border-color:#26A69A;background:#ffffff}
.switch-row{flex:1;display:flex;align-items:center;justify-content:space-between;background:#ffffff;border:2rpx solid #e5e7eb;border-radius:32rpx;padding:0 24rpx;height:88rpx;box-sizing:border-box}
.switch-label{color:#374151;font-size:26rpx}
.modal-actions{display:flex;gap:12rpx;padding:20rpx 28rpx;border-top:2rpx solid #f3f4f6;justify-content:space-between;background:#f9fafb}
.btn-secondary,.btn-primary{padding:18rpx 24rpx;border-radius:28rpx;font-size:26rpx}
.modal-actions .btn-secondary,.modal-actions .btn-primary{flex:1;min-width:0}
.btn-secondary{background:#e5e7eb;color:#374151}
.btn-primary{background:linear-gradient(135deg,#4CAF50,#26A69A,#00BCD4);color:#ffffff}
.modal-actions .btn-secondary{padding:6px 26px;border-radius:12px}
.modal-actions .btn-primary{padding:6px 26px;border-radius:12px}
.item-body{display:flex;flex-direction:column;gap:8px}
.group-details{margin-top:8px;border-top:1px solid #f1f5f9;padding-top:8px;display:flex;flex-direction:column;gap:6px}
.detail-row{display:flex;justify-content:space-between;align-items:center}
.detail-species{color:#374151;font-size:13px}
.detail-actions{display:flex;gap:8px}
.kv-row{display:flex;justify-content:space-between;align-items:center}
.kv-label{color:#374151;font-size:14px}
.kv-value{display:flex;gap:8px;align-items:center}
.chip{display:inline-block;padding:4px 8px;border-radius:999px;font-size:12px}
.chip.green{background:#ecfdf5;color:#065f46}
.chip.blue{background:#eef2ff;color:#3730a3}
.badge-group{display:flex;gap:8px}
.badge{padding:4px 8px;border-radius:999px;font-size:12px}
.badge.on{background:#d1fae5;color:#065f46}
.badge.off{background:#fee2e2;color:#991b1b}
.tips-text{color:#374151;font-size:13px}
.loading,.no-access{text-align:center;color:#6b7280;padding:20px}
