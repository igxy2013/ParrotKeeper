/* 页面基础 */
.page-container { padding-bottom: 20px; }
.page-content { padding: 12px; }
.no-access { background: #fff; border-radius: 8px; padding: 16px; color: #909399; }

/* 卡片 */
.card { background: #fff; border-radius: 12px; padding: 12px; margin-bottom: 12px; }
.section-title { font-weight: 600; color: #303133; margin-bottom: 8px; display: flex; align-items: center; gap: 8px; }

/* 过滤 */
.filters { display: flex; gap: 8px; align-items: center; }
.search-input { flex: 1; height: 36px; border: 1px solid #e5e7eb; border-radius: 8px; padding: 0 10px; }
.tier-picker { width: 140px; height: 36px; border: 1px solid #e5e7eb; border-radius: 8px; display: flex; align-items: center; justify-content: center; }
.picker-display { color: #606266; }

/* 列表 */
.member-list { display: flex; flex-direction: column; gap: 10px; }
.member-item { display: flex; gap: 12px; align-items: center; justify-content: space-between; padding: 12px; border: 1px solid #eef2f7; border-radius: 16px; background: linear-gradient(135deg, #fff, #f8fafc); }
.member-item.is-expired { opacity: 0.9; border-color: #f3f4f6; }
.member-icon { width: 44px; height: 44px; border-radius: 12px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
.member-icon-img { width: 24px; height: 24px; }
.member-main { flex: 1; display: flex; flex-direction: column; gap: 4px; }
.line1 { display: flex; align-items: center; gap: 10px; flex-wrap: wrap; }
.nickname { font-weight: 700; color: #111827; font-size: 16px; }
.tag { font-size: 12px; padding: 2px 8px; border-radius: 12px; }
.tag.pro { background: #fee2e2; color: #b91c1c; }
.tag.team { background: #dbeafe; color: #1d4ed8; }
.badge-expired { font-size: 12px; padding: 2px 6px; border-radius: 10px; background: #f3f4f6; color: #6b7280; }
.line2 { display: flex; gap: 12px; color: #909399; font-size: 12px; }
.meta { color: #909399; }

.actions { display: flex; gap: 8px; flex-wrap: wrap; justify-content: flex-end; }
.btn-secondary { background: #f3f4f6; color: #111827; padding: 6px 10px; border-radius: 10px; border: 1px solid #e5e7eb; }
.btn-danger { background: #fee2e2; color: #b91c1c; padding: 6px 10px; border-radius: 10px; border: 1px solid #fecaca; }
.actions-readonly { display: flex; justify-content: flex-end; }
.hint-readonly { font-size: 12px; color: #6b7280; }
.load-more { display: flex; justify-content: center; margin-top: 8px; }
.no-more { text-align: center; color: #909399; margin-top: 8px; }

/* 颜色类与图标容器复用（与其他页面保持一致） */
.bg-pink { background-color: #f43f5e; }
.bg-pro { background: linear-gradient(135deg, #f43f5e, #ec4899); }
.bg-team { background: linear-gradient(135deg, #3b82f6, #2563eb); }
