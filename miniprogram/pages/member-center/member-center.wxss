.page-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
}

.content {
  padding: 20rpx 30rpx;
}

/* Status Card */
.status-card {
  border-radius: 32rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  position: relative;
  overflow: hidden;
}

.pro-card {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  box-shadow: 0 12rpx 32rpx rgba(255, 165, 0, 0.3);
}

.free-card {
  background: linear-gradient(135deg, #a8c0ff 0%, #3f2b96 100%);
  box-shadow: 0 12rpx 32rpx rgba(63, 43, 150, 0.3);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-box { display: flex; align-items: center; gap: 12rpx; }

.status-title {
  font-size: 44rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
}

.status-icon {
  width: 64rpx;
  height: 64rpx;
}

.tier-tag { font-size: 24rpx; font-weight: 700; padding: 6rpx 14rpx; border-radius: 999rpx; border: 1rpx solid rgba(255,255,255,0.3); background: rgba(255,255,255,0.25); color: #fff; }
.tier-tag.pro { background: #fff7ed; color: #b45309; border-color: #fed7aa; }
.tier-tag.team { background: #eff6ff; color: #1d4ed8; border-color: #93c5fd; }

.expire-info {
  font-size: 28rpx;
  opacity: 0.95;
  background: rgba(255, 255, 255, 0.2);
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(5rpx);
}

/* Benefits */
.benefits-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
}

.pricing-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
}

.pricing-grid { display: grid; grid-template-columns: 1fr; gap: 20rpx; }
.pricing-col { background: #f9fafb; border: 1rpx solid #eef2f7; border-radius: 20rpx; padding: 20rpx; }
.pricing-header { font-size: 28rpx; font-weight: 700; margin-bottom: 16rpx; }
.pricing-header.pro { color: #b45309; }
.pricing-header.team { color: #1d4ed8; }
.pricing-item { display: flex; align-items: center; justify-content: space-between; padding: 12rpx 0; border-bottom: 1rpx dashed #e5e7eb; }
.pricing-item:last-child { border-bottom: none; }
.pricing-name { font-size: 26rpx; color: #374151; }
.price-box { display: flex; align-items: center; gap: 12rpx; }
.original-price { font-size: 24rpx; color: #9ca3af; text-decoration: line-through; }
.sale-badge { font-size: 22rpx; font-weight: 700; padding: 6rpx 14rpx; border-radius: 999rpx; background: linear-gradient(135deg, #ffedd5, #fed7aa); color: #b45309; border: 1rpx solid #fdba74; animation: pulseBadge 2.2s ease-in-out infinite; }
.sale-price { font-size: 30rpx; font-weight: 800; background: linear-gradient(135deg, #ef4444, #f59e0b); -webkit-background-clip: text; background-clip: text; color: transparent; letter-spacing: 1rpx; }

@keyframes pulseBadge { 0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(253, 186, 116, 0.6); } 50% { transform: scale(1.06); box-shadow: 0 0 12rpx 8rpx rgba(253, 186, 116, 0.25); } 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(253, 186, 116, 0.0); } }

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #1f2937;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 32rpx;
  background: #4A90E2;
  margin-right: 12rpx;
  border-radius: 4rpx;
}

/* Matrix */
.matrix { display: grid; grid-template-columns: 1.2fr 1fr 1fr 1fr; gap: 12rpx; }
.matrix-header { display: contents; }
.h-feature, .h-free, .h-pro, .h-team { font-size: 26rpx; font-weight: 700; color: #374151; background: #f3f4f6; padding: 16rpx; border-radius: 12rpx; }
.h-pro { background: #fff7ed; color: #b45309; }
.h-team { background: #eff6ff; color: #1d4ed8; }
.matrix-row { display: contents; }
.c-feature, .c-free, .c-pro, .c-team { font-size: 26rpx; color: #374151; background: #f9fafb; padding: 16rpx; border-radius: 12rpx; border: 1rpx solid #f3f4f6; }
.c-pro { background: #fffbeb; color: #92400e; }
.c-team { background: #f0f9ff; color: #1e40af; }

/* Redeem */
.redeem-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
}

.redeem-input-group {
  display: flex;
  gap: 24rpx;
  align-items: center;
  margin-top: 16rpx;
}

.redeem-input {
  flex: 1;
  height: 88rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #f9fafb;
  transition: all 0.2s;
}

.redeem-input:focus {
  border-color: #4A90E2;
  background: #fff;
}

.redeem-btn {
  width: 180rpx !important;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357abd 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
  padding: 0;
  margin: 0;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
}

.redeem-btn[disabled] {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

.apply-btn {
  width: 220rpx !important;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
  padding: 0;
  margin: 0;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(16,185,129,0.3);
}

.apply-row { margin-top: 16rpx; display: flex; }
.apply-row .apply-btn { margin-left: 0; }

/* Apply Code Modal */
.modal-overlay { position: fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.45); z-index: 3000; }
.apply-modal { position: fixed; left: 24rpx; right: 24rpx; bottom: 24rpx; background: #fff; border-radius: 24rpx; z-index: 3001; box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.2); }
.modal-header { padding: 28rpx 28rpx 0; }
.modal-title { font-size: 32rpx; font-weight: 800; color: #111827; }
.modal-subtitle { margin-top: 8rpx; font-size: 26rpx; color: #6b7280; }
.contact-id { font-weight: 700; color: #10b981; }
.modal-body { padding: 20rpx 28rpx; }
.hint-text { font-size: 24rpx; color: #9ca3af; }
.modal-actions { display: flex; gap: 16rpx; padding: 24rpx 28rpx 28rpx; }
.modal-btn { flex: 1; height: 88rpx; line-height: 88rpx; border-radius: 20rpx; font-size: 30rpx; font-weight: 700; }
.cancel-btn { background: #f3f4f6; color: #374151; }
.submit-btn { background: linear-gradient(135deg, #10b981, #059669); color: #fff; box-shadow: 0 8rpx 20rpx rgba(16,185,129,0.3); }
