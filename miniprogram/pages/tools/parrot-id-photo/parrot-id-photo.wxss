.content { padding: 24rpx; }
.upload-card { background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.upload-row { display: flex; gap: 16rpx; }
.preview-row { display: flex; gap: 24rpx; margin-top: 24rpx; }
.preview-col { flex: 1; }
.preview-title { font-size: 28rpx; color: #374151; margin-bottom: 12rpx; display: block; }
.preview-image { width: 100%; height: 360rpx; border-radius: 12rpx; background: #f3f4f6; }
.btn { height: 80rpx; line-height: 80rpx; border-radius: 12rpx; font-size: 28rpx; }
.btn-primary { background: #10b981; color: #fff; }
.btn-secondary { background: #e5e7eb; color: #111827; }
.btn-success { background: #3b82f6; color: #fff; margin-top: 16rpx; }
