.page-container { background: #f8f9fa; min-height: 100vh; padding-bottom: 40rpx; }
.page-content { padding: 16rpx; }
.card { background: #fff; border: 2rpx solid #eef2f7; border-radius: 24rpx; padding: 24rpx; margin: 20rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06); }
.section-title { font-weight: 700; font-size: 30rpx; color: #111827; margin-bottom: 16rpx; border-left: 8rpx solid #10b981; padding-left: 12rpx; }

.form-row { display: flex; align-items: center; justify-content: space-between; padding: 16rpx 0; border-bottom: 2rpx solid #f1f5f9; }
.form-row:last-child { border-bottom: none; }
.form-label { color: #374151; font-size: 28rpx; font-weight: 500; }
.picker-value { color: #111827; font-size: 28rpx; font-weight: 600; }

.hint { margin-top: 16rpx; color: #6b7280; font-size: 24rpx; line-height: 1.4; }
.hint.warn { color: #d97706; }

/* Parent Section */
.parent-section { margin-top: 24rpx; padding-top: 16rpx; border-top: 2rpx dashed #e2e8f0; }
.parent-title { font-size: 28rpx; font-weight: 700; margin-bottom: 12rpx; display: flex; align-items: center; line-height: 1; gap: 8rpx; }
.parent-title.male { color: #2563eb; }
.parent-title.female { color: #db2777; }

.gender-icon-img { width: 24rpx; height: 24rpx; display: inline-block; vertical-align: middle; }

.form-col { display: flex; flex-direction: column; padding: 12rpx 0; }
.form-label-sm { font-size: 24rpx; color: #64748b; margin-bottom: 12rpx; }

.split-group { display: flex; flex-wrap: wrap; gap: 20rpx; }
.checkbox-label { display: flex; align-items: center; font-size: 26rpx; color: #334155; background: #f8fafc; padding: 6rpx 12rpx; border-radius: 12rpx; border: 2rpx solid #e2e8f0; }
.checkbox-label .checkbox { transform: scale(0.7); margin-right: 4rpx; }

.suggestion-card { margin-top: 16rpx; padding: 16rpx; background: #f0f7ff; border: 2rpx solid #dbeafe; border-radius: 14rpx; }
.suggestion-title { font-size: 26rpx; font-weight: 700; color: #1e3a8a; }
.suggestion-detail { margin-top: 8rpx; font-size: 26rpx; color: #0f172a; }

/* Results */
.results { display: flex; flex-direction: column; gap: 12rpx; }
.result-item { display: flex; align-items: center; justify-content: space-between; padding: 20rpx; background: linear-gradient(135deg, #fff, #f0fdf4); border: 2rpx solid #d1fae5; border-radius: 16rpx; }
.result-label { font-weight: 600; color: #064e3b; font-size: 28rpx; }
.result-prob { font-weight: 800; color: #059669; font-size: 30rpx; }
.empty { color: #9ca3af; font-size: 26rpx; padding: 12rpx 0; text-align: center; }

/* Sex Breakdown */
.sex-section { margin-top: 24rpx; }
.sex-title { font-weight: 700; margin: 12rpx 0; font-size: 28rpx; display: flex; align-items: center; gap: 8rpx; line-height: 1; }
.sex-title.male { color: #2563eb; }
.sex-title.female { color: #db2777; }

.result-item.sm { padding: 16rpx; font-size: 26rpx; background: #f8fafc; border: 2rpx solid #e2e8f0; margin-bottom: 8rpx; }
.result-item.sm .result-label { color: #334155; font-size: 26rpx; }
.result-item.sm .result-prob { color: #475569; font-size: 26rpx; }
.empty-sm { font-size: 24rpx; color: #94a3b8; font-style: italic; padding-left: 8rpx; }

/* Average Price */
.avg-box { display: flex; flex-direction: column; align-items: flex-start; gap: 8rpx; padding: 12rpx 4rpx; }
.avg-value { font-size: 36rpx; font-weight: 800; color: #0f766e; }
.avg-hint { font-size: 22rpx; color: #64748b; }
