.page-container { background: #f8f9fa; min-height: 100vh; }
.page-content { padding: 16rpx; }
.empty { color: #9ca3af; font-size: 26rpx; padding: 20rpx; text-align: center; }

.switch-bar { position: relative; display: flex; gap: 12rpx; background: rgba(255,255,255,0.35); padding: 8rpx; border-radius: 9999rpx; backdrop-filter: blur(16rpx); margin: 0 20rpx 12rpx; box-shadow: 0 8rpx 24rpx rgba(16,185,129,0.12) inset, 0 4rpx 12rpx rgba(0,0,0,0.06); }
.switch-bar .switch-item { flex: 1; text-align: center; padding: 14rpx 22rpx; border-radius: 9999rpx; color: #0f766e; font-size: 26rpx; position: relative; z-index: 2; }
.switch-bar .switch-item.active { color: #0b4f4a; font-weight: 700; }
.switch-bar .switch-text { color: currentColor; }
.switch-bar .switch-thumb { position: absolute; top: 6rpx; bottom: 6rpx; width: calc(50% - 12rpx); border-radius: 9999rpx; background: linear-gradient(135deg, #e6fff7 0%, #d5f5f0 100%); box-shadow: 0 8rpx 24rpx rgba(76,175,80,0.16); z-index: 1; transition: left 200ms ease; }
.switch-bar .switch-thumb.left { left: 6rpx; }
.switch-bar .switch-thumb.right { left: calc(50% + 6rpx); }

.list { display: flex; flex-direction: column; gap: 16rpx; padding: 12rpx; }
.item { background: #fff; border: 2rpx solid #eef2f7; border-radius: 24rpx; padding: 24rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06); }
.item-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; }
.species { font-size: 30rpx; font-weight: 700; color: #111827; }
.date { font-size: 24rpx; color: #6b7280; }
.item-body { display: flex; flex-direction: column; gap: 12rpx; }
.pair-row { display: flex; align-items: center; justify-content: space-between; }
.label { color: #374151; font-size: 26rpx; }
.value { color: #111827; font-size: 26rpx; font-weight: 600; }

.avg-box { display: flex; flex-direction: column; align-items: flex-start; gap: 6rpx; padding-top: 6rpx; }
.avg-value { font-size: 32rpx; font-weight: 800; color: #0f766e; }
.avg-hint { font-size: 22rpx; color: #64748b; }

.results { display: flex; flex-direction: column; gap: 8rpx; margin-top: 6rpx; }
.result-item { display: flex; align-items: center; justify-content: space-between; padding: 16rpx; background: #f8fafc; border: 2rpx solid #e2e8f0; border-radius: 14rpx; }
.result-label { font-weight: 600; color: #334155; font-size: 26rpx; }
.result-prob { font-weight: 700; color: #475569; font-size: 26rpx; }

.item-actions { display: flex; justify-content: flex-end; margin-top: 12rpx; }
.action-btn.delete { background: #ef4444; color: #fff; padding: 10rpx 18rpx; border-radius: 12rpx; font-size: 24rpx; }

.clear-btn { align-self: center; margin-top: 8rpx; background: #e5e7eb; color: #111827; padding: 12rpx 20rpx; border-radius: 12rpx; }
.clear-text { font-size: 26rpx; }
