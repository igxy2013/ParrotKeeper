/* pages/account-management/account-management.wxss */
.page-container {
  min-height: 100vh;
  background-color: #f3f4f6;
  padding-bottom: 40rpx;
}

.page-content {
  padding: 30rpx;
}

/* Status Card */
.status-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.status-badge {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: #f3f4f6;
  color: #6b7280;
}

.status-badge.active {
  background: #d1fae5;
  color: #059669;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #6b7280;
}

.value {
  color: #374151;
  font-weight: 500;
}

.value.highlight {
  color: #059669;
}

/* Action List */
.action-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
}

.action-card:active {
  transform: scale(0.98);
  background: #f9fafb;
}

.action-icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.bind-bg {
  background: #e0f2fe;
  color: #0284c7;
}

.setup-bg {
  background: #dcfce7;
  color: #16a34a;
}

.action-icon {
  font-size: 40rpx;
}

.action-text {
  flex: 1;
}

.action-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.action-arrow {
  color: #d1d5db;
  font-size: 32rpx;
}

.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0 0 8rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.section-header {
  padding: 24rpx 30rpx 12rpx;
}

.section-title {
  font-size: 26rpx;
  color: #9ca3af;
}

.cell-list {
  border-top: 1rpx solid #f3f4f6;
}

.cell-item {
  display: flex;
  align-items: center;
  padding: 26rpx 30rpx;
  border-top: 1rpx solid #f3f4f6;
}

.cell-label {
  font-size: 30rpx;
  color: #111827;
}

.cell-value {
  margin-left: auto;
  font-size: 28rpx;
  color: #4b5563;
}

.cell-value.placeholder {
  color: #9ca3af;
}

.cell-arrow {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #d1d5db;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.modal-container {
  background: #ffffff;
  width: 85%;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalPop 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

@keyframes modalPop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 600;
  font-size: 32rpx;
  color: #1f2937;
}

.close-btn {
  font-size: 40rpx;
  color: #9ca3af;
  line-height: 1;
  padding: 0 10rpx;
}

.modal-body {
  padding: 40rpx 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input.error-border {
  border-color: #ef4444;
  background: #fef2f2;
}

.error-text {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 12rpx;
  background: #fef2f2;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  animation: slideDown 0.2s ease-out;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.warning-text {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 20rpx;
  line-height: 1.4;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background: #fff;
  border-radius: 0;
  padding: 0;
}

.btn::after {
  border: none;
}

.btn.cancel {
  color: #6b7280;
  border-right: 1rpx solid #f0f0f0;
}

.btn.confirm {
  color: #10b981;
  font-weight: 600;
}
