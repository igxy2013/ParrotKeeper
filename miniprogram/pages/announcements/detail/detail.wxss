.page-container { min-height: 100vh; background: #f8f9fa; }
.page-content { padding: 24rpx; }
.tips { color: #6b7280; }
.empty { color: #9ca3af; padding: 40rpx 0; text-align: center; }
.title { font-size: 32rpx; color: #111827; font-weight: 600; margin-bottom: 8rpx; }
.meta { font-size: 24rpx; color: #6b7280; margin-bottom: 16rpx; }
.content { font-size: 28rpx; color: #374151; line-height: 1.6; white-space: pre-wrap; }
.image-list { display: flex; flex-direction: column; gap: 12rpx; margin-top: 16rpx; }
.full-image { width: 100%; border-radius: 12rpx; }
