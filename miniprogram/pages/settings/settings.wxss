/* pages/settings/settings.wxss */
.page-container { min-height: 100vh; background: linear-gradient(180deg, #f8f9ff, #eef2ff); }
.page-content { padding: 20rpx; padding-bottom: 160rpx; }

.section-title { display: flex; align-items: center; gap: 12rpx; font-weight: 600; color: #111827; font-size: 28rpx; margin: 16rpx 8rpx 20rpx; }
.title-icon { font-size: 30rpx; }

.settings-actions { display: flex; flex-direction: column; gap: 12rpx; }
.setting-action-item { display: flex; align-items: center; padding: 20rpx; background: #ffffff; border: 1rpx solid #eef2f7; border-radius: 24rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05); transition: all 0.3s ease; }
.setting-action-item:active { background: #fafafa; transform: scale(0.98); }
.setting-action-item.logout-item { background: rgba(239, 68, 68, 0.06); border: 1rpx solid rgba(239, 68, 68, 0.18); }
.setting-action-item.logout-item:active { background: rgba(239, 68, 68, 0.12); }
.setting-icon-wrapper { width: 56rpx; height: 56rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 16rpx; flex-shrink: 0; background: #f3f4f6; }
.setting-icon { font-size: 28rpx; }
.setting-content { flex: 1; display: flex; flex-direction: column; gap: 6rpx; }
.setting-name { font-weight: 600; color: #1f2937; }
.setting-desc { color: #6b7280; font-size: 24rpx; }
.setting-arrow { font-size: 24rpx; color: #9ca3af; margin-left: auto; }
.logout-item .setting-name { color: #ef4444; }
.logout-item .setting-desc { color: #ef7a7a; }

/* （已移除主题暗色适配） */

/* 头部保存按钮（对齐参考APP） */
.header-save-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 24rpx;
  color: #ffffff;
  font-weight: 600;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255,255,255,0.45);
  background: rgba(255,255,255,0.22);
  box-shadow: none; /* 去除悬浮阴影效果 */
  backdrop-filter: none; /* 去除玻璃态悬浮效果 */
}
.header-save-btn:active { background: rgba(255,255,255,0.28); }

/* 右对齐系统控件 */
.setting-action-item switch { margin-left: auto; transform: scale(0.96); }

