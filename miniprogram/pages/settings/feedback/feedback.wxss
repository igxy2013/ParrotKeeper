.page-container { min-height: 100vh; background: linear-gradient(180deg, #f8f9ff, #eef2ff); }
.page-content { padding: 20rpx; padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); }

.form-section { background: #fff; border: 1rpx solid #eef2f7; border-radius: 24rpx; padding: 20rpx; margin-bottom: 16rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05); }
.section-title { font-weight: 600; color: #1f2937; margin-bottom: 12rpx; font-size: 28rpx; }
.form-textarea { width: 100%; min-height: 220rpx; border: 1rpx solid #e5e7eb; border-radius: 16rpx; padding: 16rpx; font-size: 28rpx; background: #fafafa; }
.form-input { width: 100%; height: 72rpx; border: 1rpx solid #e5e7eb; border-radius: 16rpx; padding: 0 16rpx; font-size: 28rpx; background: #fafafa; }
.char-count { text-align: right; color: #9ca3af; font-size: 24rpx; margin-top: 8rpx; }

.photo-upload { padding: 8rpx 0; }
.photo-list { display: flex; gap: 12rpx; flex-wrap: wrap; }
.photo-item { position: relative; width: 200rpx; height: 200rpx; border-radius: 16rpx; overflow: hidden; }
.preview-image { width: 100%; height: 100%; }
.delete-btn { position: absolute; top: 8rpx; right: 8rpx; width: 48rpx; height: 48rpx; border-radius: 50%; background: rgba(0,0,0,0.55); color: #fff; display: flex; align-items: center; justify-content: center; font-size: 28rpx; }
.upload-area { display: flex; align-items: center; justify-content: center; width: 200rpx; height: 200rpx; border: 2rpx dashed #d1d5db; border-radius: 16rpx; background: #f9fafb; flex-direction: column; }
.upload-icon { font-size: 48rpx; }
.upload-text { margin-top: 8rpx; color: #6b7280; font-size: 24rpx; }

.form-actions { margin-top: 12rpx; }
.btn-primary { width: 100%; height: 88rpx; line-height: 88rpx; text-align: center; border-radius: 16rpx; background: #10b981; color: #fff; font-size: 32rpx; }
.btn-primary.is-disabled { background: #9ca3af; }
