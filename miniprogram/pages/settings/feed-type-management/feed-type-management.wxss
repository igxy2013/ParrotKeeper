/* 页面容器 */
.page-container { 
  min-height: 100vh; 
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
}

.page-content { 
  padding: 20rpx; 
  padding-bottom: 120rpx; 
}

/* 食物列表样式 */
.feed-list { 
  background: #ffffff; 
  border-radius: 24rpx; 
  padding: 0 24rpx; 
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.feed-item { 
  display: flex; 
  justify-content: space-between; 
  align-items: flex-start; 
  padding: 32rpx 0; 
  border-bottom: 1rpx solid #f0f0f0; 
  transition: all 0.2s ease;
}

.feed-item:last-child { 
  border-bottom: none; 
}

.feed-item:active {
  background: #fafafa;
}

.feed-main { 
  flex: 1; 
}

.feed-header { 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  margin-bottom: 12rpx; 
}

.feed-name { 
  font-size: 30rpx; 
  color: #333333; 
  font-weight: 600; 
}

.feed-tag { 
  font-size: 20rpx; 
  padding: 6rpx 14rpx; 
  border-radius: 12rpx; 
  background: #f3f4f6; 
  color: #6b7280;
  font-weight: 500;
}

.feed-tag.custom { 
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%); 
  color: #4CAF50; 
  font-weight: 600;
}

.feed-details { 
  display: flex; 
  flex-wrap: wrap; 
  gap: 16rpx; 
  font-size: 24rpx; 
  color: #6b7280;
  line-height: 1.6;
}

/* 操作按钮 */
.feed-actions { 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  margin-left: 16rpx;
}

.action-icon { 
  width: 44rpx; 
  height: 44rpx; 
  padding: 8rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.action-icon:active {
  background: #f3f4f6;
  transform: scale(0.9);
}

/* 添加按钮 */
.add-btn-wrapper { 
  margin-top: 40rpx; 
  padding: 0 20rpx; 
}

.add-btn { 
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%); 
  color: #ffffff; 
  border-radius: 40rpx; 
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
  border: none;
  padding: 24rpx 0;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

/* 空状态 */
.empty-tip { 
  text-align: center; 
  color: #999999; 
  padding: 80rpx 40rpx; 
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-text {
  color: #9ca3af;
}

/* 弹窗样式 */
.modal-overlay { 
  position: fixed; 
  left: 0; 
  right: 0; 
  top: 0; 
  bottom: 0; 
  background: rgba(0, 0, 0, 0.5); 
  z-index: 2000; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  backdrop-filter: blur(8rpx);
}

.modal-content.aligned { 
  position: fixed; 
  left: 0; 
  right: 0; 
  bottom: 0; 
  background: #ffffff; 
  border-radius: 48rpx 48rpx 0 0; 
  z-index: 2001; 
  box-shadow: 0 -12rpx 40rpx rgba(0, 0, 0, 0.18); 
  display: flex; 
  flex-direction: column; 
  max-height: 85vh; 
  padding-bottom: env(safe-area-inset-bottom); 
}

/* 弹窗头部渐变区域 */
.modal-header-gradient { 
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%); 
  padding: 24rpx 32rpx; 
  position: relative; 
}

.modal-header-row { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
}

.modal-title { 
  color: #ffffff; 
  font-size: 36rpx; 
  font-weight: bold; 
}

.modal-close-btn { 
  width: 56rpx; 
  height: 56rpx; 
  border-radius: 50%; 
  background: rgba(255, 255, 255, 0.2); 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  position: absolute; 
  top: 16rpx; 
  right: 16rpx; 
  backdrop-filter: blur(10rpx);
}

.modal-close-icon-img { 
  width: 32rpx; 
  height: 32rpx; 
}

.modal-scroll { 
  flex: 1; 
  min-height: 0; 
}

.form-section { 
  padding: 32rpx; 
}

.form-item { 
  margin-bottom: 24rpx; 
}

.form-item:last-child { 
  margin-bottom: 0; 
}

.form-label { 
  display: block; 
  font-size: 26rpx; 
  color: #374151; 
  font-weight: 600; 
  margin-bottom: 12rpx; 
}

.text-input { 
  border: 2rpx solid #e5e7eb; 
  padding: 0 24rpx; 
  border-radius: 32rpx; 
  font-size: 28rpx; 
  height: 88rpx; 
  line-height: 88rpx; 
  box-sizing: border-box; 
  background: #ffffff;
  transition: all 0.2s ease;
}

.text-input:focus {
  border-color: #4CAF50;
  outline: none;
}

.amount-display { 
  display: flex; 
  align-items: center; 
  line-height: 1; 
}

.amount-display.placeholder { 
  color: #808080; 
}

/* Picker显示样式 */
.picker-display {
  width: 100%;
  padding: 0 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.picker-display:active {
  border-color: #4CAF50;
}

/* 弹窗底部 */
.modal-footer { 
  display: flex; 
  gap: 12rpx; 
  padding: 20rpx 28rpx; 
  border-top: 2rpx solid #f3f4f6; 
  background: #f9fafb; 
}

.btn-secondary { 
  flex: 1; 
  border-radius: 28rpx; 
  font-size: 26rpx; 
  background: #e5e7eb; 
  color: #374151; 
  border: none;
  font-weight: 500;
  padding: 18rpx 24rpx;
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: #d1d5db;
  transform: scale(0.98);
}

.btn-primary { 
  flex: 1; 
  border-radius: 28rpx; 
  font-size: 26rpx; 
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%); 
  color: #ffffff; 
  border: none;
  font-weight: 600;
  padding: 18rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 单位分段选择样式 */
.unit-switch-row { 
  display: flex; 
  gap: 16rpx; 
}

.unit-btn { 
  flex: 1; 
  text-align: center; 
  padding: 20rpx; 
  border-radius: 9999rpx; 
  font-size: 26rpx; 
  font-weight: 600; 
  background: #f3f4f6; 
  color: #4b5563; 
  transition: all 0.3s ease;
}

.unit-g.active { 
  background: linear-gradient(135deg, #22c55e, #10b981); 
  color: #ffffff; 
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.35); 
}

.unit-ml.active { 
  background: linear-gradient(135deg, #fb923c, #ef4444); 
  color: #ffffff; 
  box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.35); 
}
