.page-container { min-height: 100vh; background: #f8f9ff; }
.page-content { padding: 20rpx; padding-bottom: 120rpx; }

.feed-list { background: #fff; border-radius: 16rpx; padding: 0 20rpx; }
.feed-item { display: flex; justify-content: space-between; align-items: center; padding: 30rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.feed-item:last-child { border-bottom: none; }

.feed-main { flex: 1; }
.feed-header { display: flex; align-items: center; gap: 16rpx; margin-bottom: 8rpx; }
.feed-name { font-size: 30rpx; color: #333; font-weight: bold; }
.feed-tag { font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 8rpx; background: #f0f0f0; color: #999; }
.feed-tag.custom { background: #e8f5e9; color: #4CAF50; }

.feed-details { display: flex; flex-wrap: wrap; gap: 16rpx; font-size: 24rpx; color: #999; }

.action-btn { font-size: 26rpx; color: #ff4d4f; padding: 10rpx 20rpx; }
.feed-actions { display: flex; align-items: center; gap: 16rpx; }
.action-icon { width: 40rpx; height: 40rpx; }

.add-btn-wrapper { margin-top: 40rpx; padding: 0 20rpx; }
.add-btn { background: #4CAF50; color: #fff; border-radius: 40rpx; }

.empty-tip { text-align: center; color: #999; padding: 40rpx; font-size: 28rpx; }

/* Modal */
.modal { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 100; display: flex; justify-content: center; align-items: center; }
.modal-mask { position: absolute; width: 100%; height: 100%; background: rgba(0,0,0,0.5); }
.modal-overlay { position: fixed; left:0; right:0; top:0; bottom:0; background: rgba(0,0,0,0.5); z-index:2000; display:flex; align-items:center; justify-content:center; }
.modal-content.aligned { position: fixed; left:0; right:0; bottom:0; background:#fff; border-radius: 24rpx 24rpx 0 0; z-index:2001; box-shadow: 0 -12rpx 40rpx rgba(0,0,0,0.12); display:flex; flex-direction:column; max-height:85vh; padding-bottom: env(safe-area-inset-bottom); }
.modal-header-gradient { background: linear-gradient(135deg, #4CAF50, #26A69A, #00BCD4); padding: 24rpx 32rpx; position: relative; }
.modal-header-row { display:flex; align-items:center; justify-content:space-between; }
.modal-title { color:#ffffff; font-size: 32rpx; font-weight: 600; }
.modal-close-btn { width: 56rpx; height: 56rpx; border-radius: 50%; background: rgba(255,255,255,0.2); display:flex; align-items:center; justify-content:center; position:absolute; top:16rpx; right:16rpx; }
.modal-close-icon { color:#ffffff; font-size:32rpx; }
.modal-scroll { flex:1; min-height:0; }
.form-section { padding: 32rpx; }
.form-item { margin-bottom: 24rpx; }
.form-item:last-child { margin-bottom: 0; }
.form-label { display:block; font-size: 26rpx; color:#374151; font-weight:600; margin-bottom: 12rpx; }
.text-input { border: 2rpx solid #e5e7eb; padding: 0 24rpx; border-radius: 32rpx; font-size: 26rpx; height: 88rpx; box-sizing: border-box; }
.amount-display { display:flex; align-items:center; line-height:1; }
.amount-display.placeholder { color:#808080; }
.modal-footer { display:flex; gap:12rpx; padding: 20rpx 28rpx; border-top: 2rpx solid #f3f4f6; background:#f9fafb; }
.btn-secondary { flex:1; border-radius: 28rpx; font-size:26rpx; background:#e5e7eb; color:#374151; }
.btn-primary { flex:1; border-radius: 28rpx; font-size:26rpx; background: linear-gradient(135deg,#4CAF50,#26A69A,#00BCD4); color:#ffffff; }

/* 单位分段选择样式 */
.unit-switch-row { display:flex; gap:16rpx; }
.unit-btn { flex:1; text-align:center; padding:20rpx; border-radius:9999rpx; font-size:26rpx; font-weight:600; background:#f3f4f6; color:#4b5563; }
.unit-g.active { background: linear-gradient(135deg, #22c55e, #10b981); color:#ffffff; box-shadow:0 8rpx 20rpx rgba(16,185,129,0.25); }
.unit-ml.active { background: linear-gradient(135deg, #fb923c, #ef4444); color:#ffffff; box-shadow:0 8rpx 20rpx rgba(239,68,68,0.25); }
