.page-container { min-height: 100vh; background: #f8f9ff; }
.page-content { padding: 20rpx; padding-bottom: 120rpx; }

.tabs { display: flex; background: #fff; border-radius: 16rpx; margin-bottom: 20rpx; padding: 8rpx; }
.tab { flex: 1; text-align: center; padding: 20rpx; font-size: 28rpx; border-radius: 12rpx; color: #666; transition: all 0.3s; }
.tab.active { background: #4CAF50; color: #fff; font-weight: bold; }

.category-list { background: #fff; border-radius: 16rpx; padding: 0 20rpx; }
.category-item { display: flex; justify-content: space-between; align-items: center; padding: 30rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.category-item:last-child { border-bottom: none; }

.category-info { display: flex; align-items: center; gap: 16rpx; }
.category-name { font-size: 30rpx; color: #333; }
.category-tag { font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 8rpx; background: #f0f0f0; color: #999; }
.category-tag.custom { background: #e8f5e9; color: #4CAF50; }

.action-btn { font-size: 26rpx; color: #ff4d4f; padding: 10rpx 20rpx; }

.add-btn-wrapper { margin-top: 40rpx; padding: 0 20rpx; }
.add-btn { background: #4CAF50; color: #fff; border-radius: 40rpx; }

.empty-tip { text-align: center; color: #999; padding: 40rpx; font-size: 28rpx; }

/* Modal */
.modal { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 100; display: flex; justify-content: center; align-items: center; }
.modal-mask { position: absolute; width: 100%; height: 100%; background: rgba(0,0,0,0.5); }
.modal-content { position: relative; width: 80%; background: #fff; border-radius: 24rpx; overflow: hidden; z-index: 101; }
.modal-header { padding: 30rpx; text-align: center; font-size: 32rpx; font-weight: bold; border-bottom: 1rpx solid #eee; }
.modal-body { padding: 40rpx; }
.input { border: 1rpx solid #ddd; padding: 16rpx; border-radius: 8rpx; font-size: 28rpx; height: 80rpx; }
.modal-footer { display: flex; border-top: 1rpx solid #eee; }
.btn { flex: 1; border: none; background: #fff; border-radius: 0; padding: 24rpx 0; font-size: 30rpx; }
.btn::after { border: none; }
.btn.cancel { color: #666; border-right: 1rpx solid #eee; }
.btn.confirm { color: #4CAF50; font-weight: bold; }
