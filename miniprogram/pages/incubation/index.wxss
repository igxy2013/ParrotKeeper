.page-container{background:#f8f9fa;min-height:100vh}
.page-content{padding:12px}
.loading,.empty{text-align:center;color:#888;padding:24px}
.egg-list{display:flex;flex-direction:column;gap:10px}
.egg-item{background:#fff;border-radius:10px;padding:12px;box-shadow:0 2px 8px rgba(0,0,0,0.06)}
.row{display:flex;justify-content:space-between;align-items:center}
.row-right{display:flex;align-items:center;gap:10rpx}
.label{font-weight:600}
.status{font-size:12px;color:#10b981}
.header-btn{color:#10b981}
.meta-grid {
  display: flex;
  gap: 20rpx;
  margin-top: 16rpx;
}
.meta-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.meta-label {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 6rpx;
}
.meta-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}
/* 顶部导航添加按钮统一尺寸与样式（与喂食记录一致） */
.header-action{width:72rpx;height:72rpx;background:rgba(255,255,255,0.2);border-radius:50%;display:flex;align-items:center;justify-content:center;backdrop-filter:blur(10rpx)}
.header-icon{width:36rpx;height:36rpx}
.modal-overlay{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(0,0,0,0.3)}
.modal{position:fixed;left:10px;right:10px;top:20%;background:#fff;border-radius:48rpx;overflow:hidden;box-shadow:0 6px 18px rgba(0,0,0,0.15)}
.modal-header-gradient{background:linear-gradient(135deg,#4CAF50 0%,#26A69A 50%,#00BCD4 100%);padding:24rpx 32rpx;position:relative;flex-shrink:0}
.modal-header-row{display:flex;align-items:center;justify-content:space-between}
.modal-title{color:#ffffff;font-size:36rpx;font-weight:700}
.modal-close-btn{width:56rpx;height:56rpx;border-radius:50%;background:rgba(255,255,255,0.2);display:flex;align-items:center;justify-content:center;position:absolute;top:16rpx;right:16rpx}
.modal-close-icon{color:#ffffff;font-size:32rpx}
.modal-header{display:flex;justify-content:space-between;align-items:center;padding:12px}
.modal-title{font-weight:600}
.modal-close{font-size:18px;color:#999}
.modal-body{padding:12px}
.form-item{margin-bottom:12px}
.form-label{display:block;color:#333;margin-bottom:6px}
.form-input{background:#f3f4f6;border-radius:8px;height:88rpx;line-height:88rpx;padding:0 20rpx;font-size:28rpx;box-sizing:border-box}
.form-picker{background:#f3f4f6;border-radius:8px;padding:8px;color:#555}
.action-modal .picker-display{padding:8px 12px}
.form-row{display:flex;gap:8px;margin-bottom:8px;align-items:center}
.picker-group{display:flex;gap:8px}
.picker-group picker{flex:1}
.modal-footer{padding:12px}
.btn{background:#10b981;color:#fff;border-radius:8px}
/* 弹窗底部对齐与按钮尺寸，保持与项目一致 */
.modal-footer{display:flex;justify-content:flex-end;gap:12rpx;padding:20rpx 28rpx;border-top:2rpx solid #f3f4f6;background:#f9fafb}
.btn-primary{padding:18rpx 24rpx;border-radius:28rpx;font-size:26rpx;background:linear-gradient(135deg,#4CAF50,#26A69A,#00BCD4);color:#ffffff;border:none;width:80vw;align-self:flex-end}

/* 操作按钮（参考喂食记录页面） */
.action-buttons{display:flex;align-items:center;gap:12rpx;margin-left:8rpx}
.action-btn{width:60rpx;height:60rpx;border-radius:50%;display:flex;align-items:center;justify-content:center;box-shadow:0 4rpx 12rpx rgba(0,0,0,0.1)}
.edit-btn{background:linear-gradient(135deg,#3b82f6,#1d4ed8)}
.delete-btn{background:linear-gradient(135deg,#ef4444,#dc2626)}
.action-icon-img{width:32rpx;height:32rpx}
