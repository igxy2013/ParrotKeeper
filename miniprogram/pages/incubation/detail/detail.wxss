.page-container{background:#f8f9fa;min-height:100vh}
.page-content{padding:12px}
.loading{text-align:center;color:#888;padding:24px}
.egg-card{background:#fff;border-radius:10px;padding:12px;margin-bottom:10px;box-shadow:0 2px 8px rgba(0,0,0,0.06)}
.row{display:flex;justify-content:space-between;align-items:center}
.status-wrap{display:flex;gap:8px;align-items:center}
.hatch-badge{background:#fde68a;color:#92400e;border-radius:999px;font-size:12px;padding:2px 8px}
.label{font-weight:600}
.status{font-size:12px;color:#10b981}
.meta{display:grid;grid-template-columns:repeat(2,1fr);gap:12px;margin-top:6px}
.meta-item{background:#f9fafb;border:1px solid #eef2f7;border-radius:10px;padding:8px}
.meta-label{display:block;color:#6b7280;font-size:12px}
.meta-value{display:block;color:#111827;font-size:14px;font-weight:600;margin-top:2px}
.calendar{background:#fff;border-radius:10px;padding:12px;box-shadow:0 2px 8px rgba(0,0,0,0.06)}
.cal-header{font-weight:600;margin-bottom:8px}
.cal-nav{display:flex;align-items:center;justify-content:center;gap:12px}
.nav-btn{width:28px;height:28px;line-height:28px;text-align:center;border:1px solid #e5e7eb;border-radius:999px;background:#f9fafb;color:#374151}
.month-text{font-weight:700}
.cal-weekdays{display:grid;grid-template-columns:repeat(7,1fr);gap:6px;margin-bottom:6px;color:#6b7280;font-size:12px}
.weekday{background:#f9fafb;border:1px solid #eef2f7;border-radius:8px;padding:6px;text-align:center}
.cal-grid{display:grid;grid-template-columns:repeat(7,1fr);gap:6px}
.cal-cell{border:1px solid #eee;border-radius:8px;padding:6px;text-align:center}
.cal-cell.has-log{border-color:#22c55e}
.cal-cell.incubating{background:#fff7ed;border-color:#fdba74}
.cal-cell.incubating.has-log{border-color:#22c55e}
.cal-cell.today{background:#e2a059;border:none;box-shadow:none;color:#fff}
.cal-cell.today .day-index{color:#fff}
.cal-cell.hatch{background:#7c3aed;border-color:#7c3aed;color:#fff}
.cal-cell.hatch .day-index{color:#fff}
.cal-cell.selected{box-shadow:0 0 0 2px #10b981 inset}
.day{font-weight:600}
.day-index{display:block;color:#9ca3af;font-size:10px;white-space:nowrap}
.temp,.hum{display:block;color:#555;font-size:12px}
.dots-row{display:flex;align-items:center;justify-content:center;gap:4px;margin-top:6px;flex-wrap:wrap;min-height:8px}
.turning-dot{width:8px;height:8px;border-radius:50%;background:#0ea5e9}
.candling-dot{width:8px;height:8px;border-radius:50%;background:#a78bfa}
.hatch-dot{width:10px;height:10px;background:#f59e0b;transform:rotate(45deg)}
.suggest-card{background:linear-gradient(180deg,#ffffff,#fbfbfb);border-radius:14px;padding:14px;margin-top:14px;box-shadow:0 8px 20px rgba(31,41,55,0.08);border:1px solid #eef2f7}
.suggest-title{display:flex;justify-content:space-between;align-items:center;margin-bottom:12px}
.title-day{font-weight:700;font-size:16px;color:#111827}
.title-date{color:#6b7280;font-size:12px;background:#f3f4f6;padding:4px 8px;border-radius:999px}
.suggest-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:10px;margin-bottom:10px}
.hatched-info{text-align:center;color:#374151;background:#fff7ed;border:1px solid #fde68a;border-radius:10px;padding:10px;margin-bottom:10px}
.logs-section{margin-top:12px}
.logs-title{font-weight:700;margin-bottom:8px}
.logs-list{display:flex;flex-direction:column;gap:10px}
.log-card{background:#fff;border:1px solid #e5e7eb;border-radius:12px;padding:10px}
.log-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:6px}
.log-date{font-weight:600;color:#111827}
.log-candling{background:#a78bfa;color:#fff;border-radius:999px;font-size:12px;padding:2px 8px}
.log-actions{display:flex;gap:8px;align-items:center}
.log-action{font-size:12px;color:#2563eb}
.log-action.delete{color:#dc2626}
.log-meta{display:flex;gap:8px;margin-bottom:6px}
.log-chip{background:#f3f4f6;color:#374151;border-radius:999px;font-size:12px;padding:4px 8px}
.log-notes{color:#374151;font-size:14px}
.suggest-heading{font-weight:700;margin:8px 0 6px 0}
.sg-box{border-radius:12px;padding:10px 12px;background:#f9fafb;border:1px solid #eef2f7}
.sg-box.temp{background:linear-gradient(180deg,#ecfeff,#f9fafb)}
.sg-box.hum{background:linear-gradient(180deg,#f0fdf4,#f9fafb)}
.sg-label{display:block;color:#6b7280;font-size:12px}
.sg-value{display:block;color:#1f2937;font-size:18px;font-weight:700;margin-top:2px}
.suggest-meta{display:flex;gap:8px;flex-wrap:wrap}
.meta-chip{padding:8px 12px;border-radius:999px;font-size:12px;color:#111827;background:#eef2ff}
.meta-chip.turning{background:#e0f2fe;color:#0c4a6e}
.meta-chip.candling{background:#ede9fe;color:#4c1d95}
.suggest-tips{display:flex;flex-direction:column;gap:6px;margin-top:8px}
.tip-item{background:#f9fafb;border:1px solid #eef2f7;border-radius:10px;padding:8px;color:#374151;font-size:13px}
.cal-legend{display:flex;gap:8px;margin-top:8px;color:#4b5563;font-size:11px;flex-wrap:wrap;justify-content:flex-start}
.legend-item{display:flex;align-items:center;gap:4px;white-space:nowrap;flex-shrink:0}
.legend-dot{width:8px;height:8px;border-radius:50%}
.legend-swatch{width:16px;height:10px;border-radius:4px;border:1px solid #e5e7eb}
.swatch-hatch{background:#7c3aed;border-color:#7c3aed}
.swatch-today{background:#e2a059;border-color:#e2a059}
.dot-incubating{background:#fdba74}
.dot-haslog{background:#22c55e}
.dot-turning{background:#0ea5e9}
.dot-candling{background:#a78bfa}
.dot-hatch{background:#f59e0b}
.logs{margin-top:12px}
.section-title{font-weight:600;margin:10px 0}
.log-item{background:#fff;border-radius:10px;padding:10px;margin-bottom:8px;box-shadow:0 2px 6px rgba(0,0,0,0.04)}
.log-row{display:flex;justify-content:space-between;color:#333}
.advice{margin-top:6px;color:#666;font-size:12px}
.add-log{background:#fff;border-radius:10px;padding:12px;margin-top:12px;box-shadow:0 2px 8px rgba(0,0,0,0.06)}
.form-row{display:flex;gap:8px;margin-bottom:8px}
.form-input{background:#f3f4f6;border-radius:8px;padding:8px;flex:1}
.btn{background:#10b981;color:#fff;border-radius:8px}
/* 顶部导航添加按钮统一尺寸与样式（与喂食记录一致） */
.header-action{width:72rpx;height:72rpx;background:rgba(255,255,255,0.2);border-radius:50%;display:flex;align-items:center;justify-content:center;backdrop-filter:blur(10rpx)}
.header-icon{width:36rpx;height:36rpx}
.hatch-mask{position:fixed;left:0;top:0;right:0;bottom:0;background:rgba(0,0,0,0.35);display:flex;align-items:center;justify-content:center;z-index:999}
.hatch-modal{width:86vw;max-width:640rpx;background:#fff;border-radius:14px;box-shadow:0 16px 40px rgba(17,24,39,0.2);overflow:hidden}
.modal-title{font-weight:700;padding:16px 18px;border-bottom:1px solid #f1f5f9}
.modal-content{padding:18px}
.picker-display{background:#f3f4f6;border-radius:10px;padding:12px;color:#111827}
.modal-actions{display:flex;gap:10px;justify-content:flex-end;padding:12px 18px;border-top:1px solid #f1f5f9}
.btn-cancel{background:#f3f4f6;color:#111827;border-radius:10px;padding:10px 20px;font-size:14px}
.btn-primary{background:#10b981;color:#fff;border-radius:10px;padding:10px 20px;font-size:14px}
.btn-cancel.lg,.btn-primary.lg{padding:4px 32px;font-size:14px}
.plus-menu-mask{position:fixed;left:0;top:0;right:0;bottom:0;background:rgba(0,0,0,0.25);z-index:998}
.action-modal{width:86vw;max-width:640rpx;background:#fff;border-radius:14px;box-shadow:0 16px 40px rgba(17,24,39,0.2);overflow:hidden;position:fixed;left:50%;top:50%;transform:translate(-50%,-50%);z-index:999}
.action-list{display:flex;flex-direction:column;gap:10px}
.action-item{background:#f3f4f6;color:#111827;border-radius:10px;padding:12px;text-align:center}
.section{border-top:1px solid #f1f5f9;padding-top:12px;margin-top:8px}
.section:first-child{border-top:none;padding-top:0;margin-top:0}
.section-subtitle{font-weight:600;color:#374151;margin-bottom:8px}
.form-input{height:40px;line-height:40px}
.form-input.large{height:44px;line-height:44px;font-size:14px}
.switch-row{display:flex;align-items:center;justify-content:space-between}
.switch-label{color:#374151;font-size:14px}
.field-label{color:#374151;font-size:14px;line-height:32px}
.action-modal .picker-display{padding:8px 12px}
.form-row{display:flex;gap:8px;margin-bottom:8px;align-items:center}
