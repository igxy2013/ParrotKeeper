/* pages/care-guide/care-guide.wxss */
.page-container { min-height: 100vh; background: #f8f9fa; }
.page-content { padding: 20rpx; padding-bottom: calc(180rpx + env(safe-area-inset-bottom)); }

/* 物种切换 Tabs */
.species-tabs-section { margin-bottom: 16rpx; }
.chip-scroll { display: flex; gap: 12rpx; padding: 4rpx 0; white-space: nowrap; }
.chip { display: inline-flex; align-items: center; padding: 12rpx 20rpx; background: #eef2f7; color: #374151; border-radius: 999rpx; margin-right: 12rpx; border: 1rpx solid #e5e7eb; }
.chip.active { background: #1f2937; color: #fff; border-color: #1f2937; }
.option-text { font-size: 26rpx; }

.guide-section { margin-bottom: 24rpx; padding: 20rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); border: 1rpx solid #eef2f7; }
.guide-section-title { font-size: 30rpx; font-weight: 700; color: #1f2937; margin-bottom: 12rpx; }
.guide-item { display: flex; align-items: flex-start; gap: 12rpx; padding: 10rpx 0; }
.guide-item-icon-emoji { font-size: 32rpx; line-height: 36rpx; }
.guide-item-icon-img { width: 36rpx; height: 36rpx; display: block; }
.guide-item-text { display: flex; flex-direction: column; gap: 6rpx; min-width: 0; }
.guide-item-desc { font-size: 26rpx; color: #6b7280; line-height: 1.6; }
.footer-tip { margin-top: 16rpx; margin-bottom: 40rpx; font-size: 24rpx; color: #9ca3af; text-align: center; }

/* 暗色主题适配 */
.theme-dark .page-container { background: #0b0e13; }
.theme-dark .guide-section { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.12); }
.theme-dark .guide-section-title { color: #e5e7eb; }
.theme-dark .guide-item-desc, .theme-dark .footer-tip { color: #9ca3af; }
.theme-dark .chip { background: rgba(255,255,255,0.08); color: #e5e7eb; border-color: rgba(255,255,255,0.12); }
.theme-dark .chip.active { background: #e5e7eb; color: #111827; border-color: #e5e7eb; }

.loading-box { padding: 20rpx; text-align: center; color: #6b7280; }
.error-box { padding: 20rpx; text-align: center; color: #ef4444; }

/* 头部动作按钮 */
.cg-header-btn { padding: 12rpx 20rpx; background: rgba(255,255,255,0.2); border: 1rpx solid rgba(255,255,255,0.5); border-radius: 999rpx; }
.cg-header-btn-text { color: #fff; font-size: 26rpx; }

/* 智能建议弹窗 */
.advice-modal-overlay { position: fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.45); z-index: 2000; display: flex; align-items: center; justify-content: center; }
.advice-modal { width: 88%; max-width: 720rpx; background: #fff; border-radius: 20rpx; box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.25); overflow: hidden; }
.advice-modal-header { display: flex; align-items: center; justify-content: space-between; padding: 20rpx 24rpx; background: linear-gradient(90deg, #10b981 0%, #22c55e 100%); color: #fff; }
.advice-modal-title { font-size: 30rpx; font-weight: 700; }
.advice-modal-close { font-size: 36rpx; line-height: 1; }
.advice-modal-body { max-height: 60vh; padding: 12rpx 20rpx; }
.advice-error { padding: 20rpx; text-align: center; color: #ef4444; }
.advice-empty { padding: 20rpx; text-align: center; color: #6b7280; }
.advice-card { margin-bottom: 16rpx; border: 1rpx solid #eef2f7; border-radius: 16rpx; overflow: hidden; }
.advice-card-header { padding: 16rpx 20rpx; background: #f3f4f6; display: flex; gap: 6rpx; align-items: baseline; }
.advice-parrot { font-size: 28rpx; font-weight: 600; color: #111827; }
.advice-species { font-size: 24rpx; color: #6b7280; }
.advice-list { padding: 12rpx 20rpx; display: flex; flex-direction: column; gap: 10rpx; }
.advice-item { display: flex; gap: 8rpx; align-items: flex-start; }
.advice-tag { padding: 4rpx 10rpx; background: #e5f9f1; color: #065f46; border-radius: 999rpx; font-size: 22rpx; }
.advice-text { font-size: 26rpx; color: #374151; line-height: 1.6; }
.advice-modal-actions { display: flex; gap: 12rpx; padding: 16rpx 20rpx; border-top: 1rpx solid #f3f4f6; }
.btn-close { flex: 1; padding: 16rpx 24rpx; border-radius: 999rpx; background: #10b981; color: #fff; border: none; font-size: 26rpx; }
