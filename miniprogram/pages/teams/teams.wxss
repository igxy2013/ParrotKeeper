/* pages/teams/teams.wxss */
.container {
  display: block;
  width: 100%;
  max-width: none;
  margin: 0;
  box-sizing: border-box;
  padding: 0 16rpx 40rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  padding: 40rpx 0 32rpx;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #6b7280;
  opacity: 1;
}

/* 团队信息卡片 */
.team-info-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.team-info-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
}

.team-header {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
  position: relative;
  z-index: 1;
}

.team-icon-wrapper {
  position: relative;
  margin-right: 32rpx;
}

.team-icon {
  font-size: 88rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

.team-status-indicator {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid white;
}

.team-status-indicator.active {
  background-color: #4CAF50;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.3);
}

.team-details {
  flex: 1;
}

.team-name {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.team-meta {
  display: flex;
  align-items: center;
}

.create-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.create-time {
  font-size: 26rpx;
  opacity: 0.9;
}

.status-badge {
  background: rgba(255, 255, 255, 0.25);
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.status-badge.active {
  background: rgba(76, 175, 80, 0.3);
  border-color: rgba(76, 175, 80, 0.5);
}

.team-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.action-icon {
  font-size: 32rpx;
}

/* 统计数据 */
.stats-container {
  display: flex;
  gap: 16rpx; /* 减少间距从24rpx到16rpx */
  position: relative;
  z-index: 1;
}

.stat-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx; /* 减少圆角从24rpx到20rpx */
  padding: 24rpx 16rpx; /* 减少内边距从32rpx 20rpx到24rpx 16rpx */
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.25);
  display: flex;
  flex-direction: column; /* 改为垂直布局，更紧凑 */
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.stat-icon-bg {
  width: 60rpx; /* 减少图标背景尺寸从72rpx到60rpx */
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-bottom: 16rpx; /* 添加底部间距 */
}

.stat-icon-bg.members {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
}

.stat-icon-bg.records {
  background: linear-gradient(135deg, #4ECDC4, #45B7D1);
}

.stat-icon-bg.tasks {
  background: linear-gradient(135deg, #A855F7, #C084FC);
}

.stat-icon {
  font-size: 28rpx; /* 减少图标尺寸从32rpx到28rpx */
}

.stat-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx; /* 减少数字尺寸从48rpx到40rpx */
  font-weight: 700;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  line-height: 1.2;
}

.stat-label {
  font-size: 22rpx; /* 减少标签尺寸从24rpx到22rpx */
  opacity: 0.9;
  line-height: 1.2;
}

