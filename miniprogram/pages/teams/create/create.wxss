/* pages/teams/create/create.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 40rpx 30rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.4;
}

/* 表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-header {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  padding: 30rpx;
  text-align: center;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.form-content {
  padding: 40rpx 30rpx;
}

/* 输入组 */
.input-group {
  margin-bottom: 40rpx;
  position: relative;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 15rpx;
}

.input-field, .textarea-field {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #1f2937;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input-field:focus, .textarea-field:focus {
  border-color: rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.1);
}

.textarea-field {
  min-height: 120rpx;
  resize: none;
}

.input-hint {
  position: absolute;
  right: 0;
  bottom: -30rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 创建按钮 */
.create-btn {
  width: 100%;
  padding: 30rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 20rpx;
  transition: all 0.3s ease;
}

.create-btn.active {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(16, 185, 129, 0.3);
}

.create-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(16, 185, 129, 0.3);
}

.create-btn.disabled {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.5);
}

/* 信息卡片 */
.info-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.info-header {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  color: #6b7280;
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
}

.info-content {
  padding: 30rpx;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.info-text:last-child {
  margin-bottom: 0;
}