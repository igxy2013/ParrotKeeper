.container { padding: 24rpx 24rpx 40rpx; }
.page-header { margin-bottom: 24rpx; }
.header-title { font-size: 36rpx; font-weight: 600; }
.header-subtitle { color: #666; margin-top: 8rpx; }

.card { background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 24rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04); }
.card-header { margin-bottom: 16rpx; display: flex; justify-content: space-between; align-items: center; }
.card-title { font-size: 30rpx; font-weight: 500; }
.card-content { display: flex; flex-direction: column; gap: 16rpx; }

.info-row { display: flex; align-items: center; gap: 16rpx; }
.label { width: 140rpx; color: #666; }
.value { flex: 1; }
.value.code { font-family: monospace; }

.member-item { display: flex; align-items: center; gap: 16rpx; padding: 12rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background: #f5f5f5; }
.member-info { flex: 1; display: flex; flex-direction: column; }
.name { font-size: 28rpx; }
.role { color: #666; font-size: 24rpx; }
.actions { display: flex; gap: 12rpx; }

.btn { padding: 12rpx 20rpx; border-radius: 12rpx; background: #4CAF50; color: #fff; font-size: 24rpx; }
.btn-small { padding: 8rpx 16rpx; font-size: 22rpx; }
.btn-danger { background: #e53935; }
.btn.danger { background: #e53935; }

.footer { margin-top: 16rpx; }
.empty { color: #999; text-align: center; padding: 20rpx; }
