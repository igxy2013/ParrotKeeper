/* pages/teams/join/join.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 40rpx 32rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
  text-shadow: none;
}

.header-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 加入团队表单卡片 */
.join-form-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.form-header {
  padding: 48rpx 40rpx 32rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.form-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
  color: #6b7280;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.form-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

.form-content {
  padding: 40rpx;
}

.input-group {
  margin-bottom: 48rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.label-required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 24rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.invite-code-input {
  width: 100%;
  height: 96rpx;
  padding: 0 48rpx 0 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  text-align: center;
  text-transform: uppercase;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  color: #1f2937;
  transition: all 0.3s ease;
}

.invite-code-input:focus {
  border-color: rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.1);
}

.input-clear {
  position: absolute;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f4f6;
  border-radius: 50%;
  cursor: pointer;
}

.clear-icon {
  font-size: 24rpx;
  color: #6b7280;
}

.input-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 12rpx;
  text-align: center;
}

.form-actions {
  margin-top: 32rpx;
}

.join-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.join-btn.active {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.join-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.4);
}

.join-btn.disabled {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.5);
}

.btn-text {
  font-size: inherit;
  font-weight: inherit;
}

/* 帮助信息卡片 */
.help-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.help-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.help-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #6b7280;
}

.help-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.help-content {
  padding-left: 44rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.help-item:last-child {
  margin-bottom: 0;
}

.help-step {
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.help-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  flex: 1;
}

/* 创建团队卡片 */
.create-team-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.create-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.create-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #6b7280;
}

.create-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.create-content {
  padding-left: 44rpx;
}

.create-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: block;
}

.create-btn {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(16, 185, 129, 0.4);
}