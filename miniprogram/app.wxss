/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用样式 */
page {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  line-height: 1.6;
  color: #333333;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .action-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .btn {
    padding: 20rpx 36rpx;
    font-size: 26rpx;
  }
  
  .btn-large {
    padding: 28rpx 56rpx;
    font-size: 30rpx;
  }
}

@media screen and (min-width: 1200rpx) {
  .container {
    max-width: 1000rpx;
    margin: 0 auto;
  }
  
  .stats-grid {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .action-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 触摸交互反馈 */
.touchable {
  transition: all 0.2s ease;
  -webkit-tap-highlight-color: transparent;
}

.touchable:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 通用动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideIn {
  from { transform: translateX(-100%); }
  to { transform: translateX(0); }
}

.fade-in {
  animation: fadeIn 0.6s ease-out;
}

.slide-in {
  animation: slideIn 0.4s ease-out;
}

.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 50%, #e8ecff 100%);
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin: 0;
}

.card-content {
  padding: 30rpx;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  outline: none;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.btn:hover::before {
  left: 100%;
}

.btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-primary {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 50%, #81C784 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

.btn-primary:hover {
  background: linear-gradient(135deg, #45a049 0%, #5cb85c 50%, #6fbf73 100%);
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.4);
  transform: translateY(-2rpx);
}

.btn-secondary {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #495057;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
}

.btn-secondary:hover {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

.btn-danger {
  background: linear-gradient(135deg, #f44336 0%, #e53935 50%, #d32f2f 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(244, 67, 54, 0.3);
}

.btn-danger:hover {
  background: linear-gradient(135deg, #e53935 0%, #d32f2f 50%, #c62828 100%);
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.4);
  transform: translateY(-2rpx);
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-medium {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}



.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4CAF50;
  outline: none;
}

.form-textarea {
  min-height: 120rpx;
  resize: vertical;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  line-height: 1;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1;
  display: flex;
  align-items: center;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  line-height: 1;
  display: flex;
  align-items: center;
}

.form-picker-placeholder {
  color: #999999;
}

/* 列表样式 */
.list-item {
  background-color: #ffffff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 24rpx;
  color: #666666;
}

.list-item-action {
  margin-left: 20rpx;
}

/* 状态样式 */
.status-healthy {
  color: #4CAF50;
  background-color: #e8f5e8;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.status-sick {
  color: #f44336;
  background-color: #ffeaea;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.status-recovering {
  color: #ff9800;
  background-color: #fff3e0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 统计卡片 */
.stat-card {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #ffffff;
  padding: 40rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999999;
}

