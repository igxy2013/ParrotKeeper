/* Components Styles */
.plumage-selector {
  width: 100%;
  margin-bottom: 24rpx;
}

/* Display Card */
.selector-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid transparent;
  transition: all 0.2s;
  position: relative;
  overflow: hidden;
}

.selector-card:active {
  transform: scale(0.99);
}

.selector-card.male {
  border-left: 8rpx solid #3b82f6;
}

.selector-card.female {
  border-left: 8rpx solid #ec4899;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.gender-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.edit-hint {
  font-size: 24rpx;
  color: #9ca3af;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.card-content {
  margin-bottom: 8rpx;
}

.main-color {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.selector-card.compact {
  border-left: 0;
  border-color: #e5e7eb;
  border-radius: 32rpx;
}
.selector-card.compact .card-header { display: none; }
.selector-card.compact .main-color { font-size: 26rpx; font-weight: 400; }
.selector-card.compact .splits-placeholder { font-size: 22rpx; }
.selector-card.compact .option-chip { font-size: 22rpx; }

.splits-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-right: 12rpx;
  box-sizing: border-box;
}

.split-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: #eff6ff;
  color: #3b82f6;
  border-radius: 8rpx;
  border: 1rpx solid #dbeafe;
}

.female .split-tag {
  background: #fdf2f8;
  color: #db2777;
  border: 1rpx solid #fce7f3;
}

.splits-placeholder {
  font-size: 24rpx;
  color: #9ca3af;
  font-style: italic;
}

/* Popup / Bottom Sheet */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 900;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.mask.visible {
  opacity: 1;
  visibility: visible;
}

.popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 950;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  display: flex;
  flex-direction: column;
  max-height: 85vh;
  padding-bottom: env(safe-area-inset-bottom);
}

.popup.visible {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #111827;
}

.close-btn {
  font-size: 36rpx;
  color: #9ca3af;
  padding: 10rpx;
}

.popup-content {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4b5563;
  margin-bottom: 12rpx;
}

.options-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.option-chip {
  padding: 12rpx 18rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #4b5563;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.option-chip.active {
  background: #eff6ff;
  border-color: #3b82f6;
  color: #2563eb;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.15);
}

.option-chip.active-split {
  background: #fdf2f8;
  border-color: #ec4899;
  color: #db2777;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(236, 72, 153, 0.15);
}

.popup-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

.confirm-btn {
  background: #111827;
  color: #ffffff;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 0;
  width: 100%;
}

.confirm-btn:active {
  opacity: 0.9;
}
