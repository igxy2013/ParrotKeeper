/* 复用 pages/parrots 中的弹窗样式，做组件内复制以保障隔离 */
.modal-overlay {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}
.modal-overlay.no-blur { backdrop-filter: none; }

.modal-content { position: fixed; left: 0; right: 0; top: 0; bottom: 0; z-index: 2001; display: flex; align-items: center; justify-content: center; }
.modal-card {
  width: 100%;
  max-width: 700rpx;
  height: 80vh;
  background: #ffffff;
  border-radius: 48rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.18);
  font-family: 'Microsoft YaHei','PingFang SC','Hiragino Sans GB','Heiti SC','SimHei',system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Noto Sans',sans-serif;
  display: flex;
  flex-direction: column;
}

.modal-header-gradient {
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%);
  padding: 24rpx 32rpx;
  position: relative;
  flex-shrink: 0;
}
.modal-header-row { display: flex; align-items: center; justify-content: space-between; }
.modal-title { color: #ffffff; font-size: 36rpx; font-weight: bold; }
.modal-close-btn { width: 56rpx; height: 56rpx; border-radius: 50%; background: rgba(255,255,255,0.2); display:flex; align-items:center; justify-content:center; position:absolute; top:16rpx; right:16rpx; }
.modal-close-icon { color: #ffffff; font-size: 32rpx; }
/* 图片版关闭图标尺寸 */
.modal-close-icon-img { width: 32rpx; height: 32rpx; }

.modal-scroll { flex: 1; min-height: 0; padding-bottom: calc(32rpx + env(safe-area-inset-bottom)); }
.form-section { padding: 32rpx; }
.form-item { margin-bottom: 24rpx; }
.form-label { display:block; font-size:26rpx; color:#374151; font-weight:600; margin-bottom:12rpx; }
.label-icon { color:#10B981; margin-right:12rpx; }
/* 图片版标签图标尺寸 */
.label-icon-img { width: 28rpx; height: 28rpx; margin-right: 12rpx; }

/* 添加方式切换 */
.mode-switch-row { display:flex; gap:12rpx; padding: 16rpx 24rpx; background:#f9fafb; border-bottom:2rpx solid #f3f4f6; flex-shrink: 0; }
.mode-btn { flex:1; text-align:center; padding:16rpx; border-radius:9999rpx; font-size:26rpx; background:#e5e7eb; color:#374151; }
.mode-btn.active { background: linear-gradient(135deg,#4CAF50,#26A69A,#00BCD4); color:#ffffff; }

.claim-section { padding: 32rpx; }
.tip-text { margin-top: 8rpx; font-size: 22rpx; color: #6b7280; }

.text-input { width:100%; box-sizing:border-box; padding: 0 24rpx; border:2rpx solid #e5e7eb; border-radius:32rpx; font-size:26rpx; height:88rpx; }
.text-input:focus { border-color:#26A69A; background:#ffffff; }
.textarea-input { width:100%; box-sizing:border-box; padding:24rpx; border:2rpx solid #e5e7eb; border-radius:32rpx; font-size:26rpx; min-height:160rpx; }

.form-grid { display:grid; grid-template-columns:1fr 1fr; gap:24rpx; }
.picker-wrapper { position:relative; }
.picker-display { display:flex; align-items:center; justify-content:space-between; padding:24rpx; border:2rpx solid #e5e7eb; border-radius:32rpx; font-size:26rpx; background:#ffffff; }
.picker-arrow { color:#9CA3AF; }
/* 图片版下拉箭头尺寸 */
.picker-arrow-img { width: 28rpx; height: 28rpx; }

.gender-row { display:flex; gap:16rpx; }
.gender-btn { flex:1; text-align:center; padding:20rpx; border-radius:24rpx; font-size:26rpx; border:2rpx solid transparent; }
.gender-male { background:#f1f5ff; color:#1e40af; }
.gender-male.active { background:#dbeafe; border-color:#93c5fd; color:#1e3a8a; }
.gender-female { background:#fff1f5; color:#9d174d; }
.gender-female.active { background:#ffe4e6; border-color:#f9a8d4; color:#831843; }

.modal-footer { display:flex; gap:12rpx; padding:20rpx 28rpx; border-top:2rpx solid #f3f4f6; background:#f9fafb; flex-shrink: 0; }
.btn-secondary, .btn-primary { flex:1; padding:18rpx 24rpx; border-radius:28rpx; font-size:26rpx; }
.btn-secondary { background:#e5e7eb; color:#374151; }
.btn-primary { background: linear-gradient(135deg,#4CAF50,#26A69A,#00BCD4); color:#ffffff; }
.btn-primary.is-disabled { opacity:0.5; }

.photo-upload { padding:16rpx 0; }
.photo-preview { position:relative; width:220rpx; height:220rpx; border-radius:24rpx; overflow:hidden; }
.preview-image { width:100%; height:100%; }
.photo-actions { position:absolute; top:12rpx; right:12rpx; display:flex; gap:12rpx; }
.action-btn { width:60rpx; height:60rpx; background:rgba(0,0,0,0.55); border-radius:50%; display:flex; align-items:center; justify-content:center; }

/* Host-level Plumage Popup */
.plumage-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 5000;
  opacity: 0;
  transition: opacity 0.3s ease;
}
.plumage-mask.visible { opacity: 1; }
.plumage-popup {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 5001;
  display: flex;
  flex-direction: column;
  max-height: 85vh;
  width: 100vw;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}
.plumage-popup.visible { transform: translateY(0); }
.popup-header { display:flex; align-items:center; justify-content:space-between; padding:32rpx; border-bottom:2rpx solid #f3f4f6; }
.popup-title { font-size:32rpx; font-weight:bold; color:#111827; }
.close-btn { font-size:36rpx; color:#9ca3af; padding:10rpx; }
.popup-content { flex:1; overflow-y:auto; padding:24rpx; box-sizing:border-box; }
.section { margin-bottom:24rpx; }
.section-title { font-size:28rpx; font-weight:600; color:#4b5563; margin-bottom:12rpx; }
.options-grid { display:flex; flex-wrap:wrap; gap:12rpx; padding-right:20rpx; box-sizing:border-box; }
.option-chip { padding:12rpx 18rpx; background:#f3f4f6; border-radius:10rpx; font-size:24rpx; color:#4b5563; border:2rpx solid transparent; transition:all 0.2s; }
.option-chip.active { background:#eff6ff; border-color:#3b82f6; color:#2563eb; font-weight:600; box-shadow:0 2rpx 8rpx rgba(59,130,246,0.15); }
.option-chip.active-split { background:#fdf2f8; border-color:#ec4899; color:#db2777; font-weight:600; box-shadow:0 2rpx 8rpx rgba(236,72,153,0.15); }
.popup-footer { padding:24rpx 32rpx; border-top:2rpx solid #f3f4f6; }
.confirm-btn { background:#111827; color:#ffffff; border-radius:100rpx; font-size:30rpx; font-weight:600; padding:24rpx 0; width:100%; }
.action-icon { color:#fff; font-size:28rpx; }
/* 图片版操作图标尺寸 */
.action-icon-img { width: 28rpx; height: 28rpx; }
.upload-area { display:flex; flex-direction:column; align-items:center; justify-content:center; width:220rpx; height:220rpx; border:2rpx dashed #d1d5db; border-radius:24rpx; background:#f9fafb; }
.upload-icon { font-size:48rpx; }
.upload-text { margin-top:12rpx; color:#6b7280; font-size:24rpx; }
/* 图片版上传图标尺寸 */
.upload-icon-img { width: 48rpx; height: 48rpx; }

/* 下拉与搜索样式（复用 expense-modal 的风格） */
.dropdown-menu {
  margin-top: 8rpx;
  background: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.08);
}
.dropdown-panel { padding: 12rpx; }
.dropdown-scroll { max-height: 360rpx; }
.dropdown-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f3f4f6;
}
.dropdown-item:last-child { border-bottom: none; }
.item-text { font-size: 26rpx; color: #374151; }
.item-line { display: flex; align-items: baseline; gap: 8rpx; }
.item-name { font-size: 26rpx; color: #374151; }
.item-meta { font-size: 24rpx; color: #6b7280; }
.check-icon { font-size: 26rpx; color: #10b981; }

.search-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin: 8rpx 8rpx 16rpx 8rpx;
}
.search-input {
  flex: 1;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 100rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #374151;
}
.clear-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #6b7280;
  background: #f3f4f6;
  border-radius: 20rpx;
}
