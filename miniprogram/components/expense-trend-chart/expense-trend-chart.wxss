.chart-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.chart-header-row { display: flex; align-items: center; justify-content: space-between; gap: 16rpx; margin-bottom: 16rpx; }
.chart-header { font-size: 32rpx; font-weight: 600; color: #333; }
.trend-nav { display: inline-flex; align-items: center; gap: 12rpx; background: #ffffff; border-radius: 9999rpx; padding: 8rpx 12rpx; }
.trend-nav .nav-btn { width: 44rpx; height: 44rpx; display: flex; align-items: center; justify-content: center; color: #10b981; font-size: 32rpx; }
.trend-nav .nav-display { min-width: 120rpx; text-align: center; background: #f5f7fa; border-radius: 9999rpx; padding: 8rpx 16rpx; color: #374151; font-size: 26rpx; }

.chart-canvas {
  width: 100%;
  height: 400rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
  gap: 32rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.dot.income {
  background-color: #064e3b;
}

.dot.expense {
  background-color: #a3e635;
}

.dot.net {
  background-color: #10b981;
  border-radius: 999rpx;
  height: 4rpx;
  width: 24rpx;
}
