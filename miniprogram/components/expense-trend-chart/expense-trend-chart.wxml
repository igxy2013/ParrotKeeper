<view class="chart-container">
  <view class="chart-header-row">
    <view class="chart-header">收支趋势</view>
    <view class="trend-nav">
      <view class="nav-btn" bindtap="onPrevTap">‹</view>
      <view class="nav-display">{{headerDate}}</view>
      <view class="nav-btn" bindtap="onNextTap">›</view>
    </view>
  </view>
  <canvas
    type="2d"
    id="trendChartCanvas"
    class="chart-canvas"
    bindtouchstart="onTouchStart"
    bindtouchmove="onTouchMove"
  ></canvas>
  <view class="chart-legend">
    <view class="legend-item">
      <view class="dot income"></view>
      <text>收入</text>
    </view>
    <view class="legend-item">
      <view class="dot expense"></view>
      <text>支出</text>
    </view>
    <view class="legend-item">
      <view class="dot net"></view>
      <text>净收益</text>
    </view>
  </view>
</view>
