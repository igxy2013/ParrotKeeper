/* 覆盖层 */
.nc-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.2);
  z-index: 2000;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}

/* 面板（靠右上，略低于自定义导航） */
.nc-panel {
  margin-top: 120rpx; /* 兼容不同机型的状态栏高度，位于导航下方 */
  margin-right: 20rpx;
  width: 640rpx;
  max-width: 90vw;
  border-radius: 32rpx;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.16);
  overflow: hidden;
}

.nc-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
}

.nc-title { font-size: 32rpx; font-weight: 600; color: #333; }

.nc-actions { display: flex; align-items: center; gap: 20rpx; }
.nc-action { font-size: 26rpx; color: #4CAF50; }
.nc-action.danger { color: #f44336; }
.nc-close { font-size: 40rpx; color: #999; margin-left: 8rpx; }

.nc-list { max-height: 60vh; overflow-y: auto; padding: 16rpx 0; }

.nc-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.04);
  position: relative;
}

.nc-icon { width: 64rpx; height: 64rpx; border-radius: 24rpx; display:flex; align-items:center; justify-content:center; margin-right: 20rpx; }
.nc-icon.health { background: rgba(76,175,80,0.1); }
.nc-icon.feeding { background: rgba(255,152,0,0.1); }
.nc-icon.system { background: rgba(33,150,243,0.1); }

.nc-icon-text { font-size: 32rpx; }

.nc-content { flex: 1; display:flex; flex-direction:column; gap: 6rpx; }
.nc-item-title { font-size: 30rpx; color: #333; font-weight: 600; }
.nc-item-sub { font-size: 24rpx; color: #666; }

.nc-dot { position: absolute; right: 24rpx; top: 24rpx; width: 16rpx; height: 16rpx; border-radius: 50%; background: #ff4757; }

.nc-empty { padding: 60rpx 0; display:flex; flex-direction:column; align-items:center; gap: 16rpx; }
.nc-empty-icon { font-size: 56rpx; color: #bbb; }
.nc-empty-text { font-size: 26rpx; color: #999; }
