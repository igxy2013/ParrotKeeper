.keyboard-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 6000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
}

.keyboard-mask.visible {
  opacity: 1;
  visibility: visible;
}

.keyboard-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f0f2f5;
  z-index: 6001;
  transform: translateY(100%);
  transition: transform 0.2s ease;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.keyboard-container.visible {
  transform: translateY(0);
}

.keyboard-preview {
  margin: 12rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 0 rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.preview-value {
  font-size: 48rpx;
  font-weight: 500;
  color: #333333;
}

.preview-clear {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: #f5f6f7;
  color: #666666;
  font-size: 24rpx;
  border: 1rpx solid #e5e7eb;
}

.preview-clear-hover {
  background: #e5e7eb;
}

.keyboard-grid {
  display: flex;
  padding: 12rpx;
  gap: 12rpx;
  height: 440rpx;
}

.number-keys {
  flex: 3;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.key-row {
  flex: 1;
  display: flex;
  gap: 12rpx;
}

.key-cell {
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 500;
  color: #333;
  box-shadow: 0 2rpx 0 rgba(0, 0, 0, 0.05);
  transition: background 0.1s;
  position: relative;
}

.number-key {
  flex: 1;
}

.key-hover {
  background: #e5e7eb;
}

.hide-key {
  flex: 1;
  background: transparent;
  box-shadow: none;
}

.action-keys {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-key {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
}

.delete-key {
  flex: 1;
  background: #ffffff;
  font-size: 48rpx;
  color: #333;
}

.action-hover {
  background: #e5e7eb;
}

.done-key {
  flex: 3;
  background: #07c160;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
}

.done-hover {
  background: #06ad56;
}

.key-icon-sm {
  width: 60rpx;
  height: 60rpx;
}

.delete-text {
  font-family: monospace;
  font-weight: 300;
}

/* Safe Area Support */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
