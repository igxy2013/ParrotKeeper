.chart-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.chart-header-row {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.segment-control {
  display: flex;
  background: #f3f4f6;
  padding: 6rpx;
  border-radius: 16rpx;
}

.segment-item {
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  color: #6b7280;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.segment-item.active {
  background: #ffffff;
  color: #10b981;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.date-picker-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 32rpx;
}

.nav-btn {
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.8;
}

.nav-btn:active {
  opacity: 0.5;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  /* Green tint approximation */
  filter: invert(56%) sepia(82%) saturate(452%) hue-rotate(106deg) brightness(91%) contrast(92%);
}

.nav-icon.left {
  transform: rotate(180deg);
}

.current-date {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f2937;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.dropdown-icon {
  width: 28rpx;
  height: 28rpx;
  margin-top: 4rpx;
  filter: invert(56%) sepia(82%) saturate(452%) hue-rotate(106deg) brightness(91%) contrast(92%);
}

.chart-canvas {
  width: 100%;
  height: 420rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
  gap: 48rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #4b5563;
  font-weight: 500;
}

.dot {
  width: 24rpx;
  height: 4rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.dot.new {
  background: #10b981;
}

.dot.bar {
  width: 24rpx;
  height: 16rpx;
  border-radius: 4rpx;
  background: rgba(16, 185, 129, 0.3);
}

.dot.total {
  background-color: #10b981;
  border-radius: 999rpx;
  height: 6rpx;
  width: 32rpx;
  box-shadow: 0 2rpx 4rpx rgba(16, 185, 129, 0.4);
}
