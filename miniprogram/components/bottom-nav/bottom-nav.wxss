/* 方案二：流体凹陷风格 (Liquid Curve) */
.bn-tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  /* 背景透明，由伪元素绘制凹陷形状 */
  background: transparent;
  display: flex;
  align-items: flex-end; /* 底部对齐，给上方留出凹陷空间 */
  justify-content: space-around;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: none; /* 移除外层阴影 */
  pointer-events: none; /* 让透明区域穿透点击 */
}

/* 凹陷背景层 */
.bn-tabbar::before {
  display: block;
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 20rpx; /* 凹槽起始线，也是凹槽圆心的Y坐标 */
  bottom: 0;
  /* 按钮半径55rpx + 间隙10rpx = 凹槽半径65rpx */
  background: radial-gradient(circle at 50% 0, transparent 65rpx, #ffffff 66rpx);
  /* 使用 drop-shadow 让阴影贴合凹陷边缘 */
  filter: drop-shadow(0 -4rpx 16rpx rgba(0, 0, 0, 0.08));
  z-index: -1;
  pointer-events: auto; /* 恢复背景区域的点击 */
  padding-bottom: env(safe-area-inset-bottom); /* 延伸背景到底部 */
}

/* 修复底部安全区背景 */
.bn-tabbar::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: env(safe-area-inset-bottom);
  background: #ffffff;
  z-index: -1;
}

.bn-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  height: 100rpx; /* 高度减小，适应下移的背景 */
  position: relative;
  transition: all 0.3s ease;
  pointer-events: auto; /* 恢复点击 */
}

.bn-item.active {
  background: transparent;
}

.bn-icon-wrap {
  position: relative;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  background: #fff; /* 确保图标背景不透 */
  z-index: 2;
}

.bn-item.active .bn-icon-wrap {
  transform: translateY(-8rpx);
}

.bn-icon {
  width: 48rpx;
  height: 48rpx;
  display: block;
}

.bn-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #9CA3AF;
  transition: all 0.3s;
  opacity: 0.8;
}

.bn-item.active .bn-text {
  color: #10B981;
  font-weight: 600;
  opacity: 1;
}

.bn-dot {
  position: absolute;
  right: -4rpx;
  top: -4rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #ef4444;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(239, 68, 68, 0.3);
}

/* 移除之前的底部指示器，改用图标跳动 */
.bn-item::after {
  display: none;
}

/* 中间异形按钮容器 */
.bn-center {
  position: relative;
  width: 130rpx; /* 稍微加宽 */
  height: 100%;
  flex-shrink: 0;
  display: flex;
  align-items: flex-start; /* 顶部对齐 */
  justify-content: center;
  pointer-events: auto;
}

/* 中间悬浮球 */
.bn-plus-icon {
  width: 110rpx;
  height: 110rpx;
  /* 计算公式：圆心Y(20rpx) - 半径(55rpx) = -35rpx */
  /* 这样按钮圆心与凹槽圆心完全重合 */
  position: absolute;
  top: -35rpx;
  z-index: 1001;
  border-radius: 50%;
  /* 移除强制背景色，保留原图标 */
  background: #fff; 
  /* 更加柔和自然的阴影，突出悬浮感 */
  box-shadow: 0 -6rpx 12rpx rgba(0,0,0,0.03), 0 12rpx 24rpx rgba(16, 185, 129, 0.3);
  /* 移除内边距，让图片填满 */
  padding: 0;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 移除滤镜，显示原图色彩 */
/* .bn-plus-icon { filter: brightness(0) invert(1); } */

.bn-plus-icon:active {
  transform: scale(0.92);
  box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.25);
}
