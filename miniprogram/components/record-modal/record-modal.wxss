/* components/record-modal/record-modal.wxss */

/* 弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* 底部对齐 */
  backdrop-filter: blur(8rpx);
}

/* 弹窗内容容器 - 底部弹窗样式 */
.modal-content {
  width: 100%;
  height: 85vh; /* 固定高度，或者 max-height */
  background: #f8f9fa; /* 与原页面背景一致 */
  border-radius: 48rpx 48rpx 0 0;
  overflow: hidden;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

/* 弹窗头部渐变区域 */
.modal-header-gradient {
  background: linear-gradient(135deg, #4CAF50 0%, #26A69A 50%, #00BCD4 100%);
  padding: 24rpx 32rpx;
  position: relative;
  flex-shrink: 0;
}

.modal-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.modal-close-icon-img { 
  width: 32rpx; 
  height: 32rpx; 
}

/* 弹窗滚动区域 */
.modal-scroll {
  flex: 1;
  overflow-y: auto;
}

/* 表单内容区域 */
.form-content {
  padding: 20rpx;
}

/* 表单区域 - 复用 add-record.wxss */
.form-section {
  background: #ffffff;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  padding: 24rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  border-bottom: 1rpx solid #f3f4f6;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 记录类型选择器 */
.type-selector {
  display: flex;
  position: relative;
  background: #f1f5f9;
  border-radius: 24rpx;
  padding: 8rpx;
  margin: 20rpx;
}

/* 动态滑块 */
.type-cursor {
  position: absolute;
  top: 8rpx;
  bottom: 8rpx;
  width: 21%;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  z-index: 1;
}

/* 滑块颜色根据类型变化 */
.type-cursor.feeding { background: linear-gradient(135deg, #FF9F1C, #FF7043); }
.type-cursor.cleaning { background: linear-gradient(135deg, #42A5F5, #1E88E5); }
.type-cursor.health { background: linear-gradient(135deg, #AB47BC, #8E24AA); }
.type-cursor.breeding { background: linear-gradient(135deg, #22c55e, #10b981); }

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  border-radius: 20rpx;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.type-item:active { transform: scale(0.96); }

.type-item.active .type-text {
  color: #ffffff;
  font-weight: 600;
}

.type-item.active .type-icon-img {
  filter: brightness(0) invert(1);
}

.type-icon-img {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
  transition: all 0.3s ease;
}

.type-text {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
  transition: all 0.3s ease;
}

/* 表单项 */
.form-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.form-item:last-child { border-bottom: none; }

.form-label {
  display: block;
  font-size: 28rpx;
  color: #1f2937;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #ef4444;
  margin-left: 8rpx;
}

.form-input, .form-picker, .picker-item {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #111827;
  background: #ffffff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.form-input:focus, .form-picker:active, .picker-item:active {
  border-color: #26A69A;
}

.input-view.placeholder, .picker-text.placeholder {
  color: #9ca3af;
}

.form-picker {
  justify-content: space-between;
}

.picker-text {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.picker-arrow-img {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #111827;
  background: #ffffff;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 10rpx;
}

/* 日期时间选择器 */
.datetime-picker {
  display: flex;
  gap: 20rpx;
}

/* 照片上传 */
.photo-upload {
  padding: 24rpx 30rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.photo-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-delete-icon {
  width: 24rpx;
  height: 24rpx;
}

.add-photo-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d1d5db;
}

.add-photo-icon {
  width: 48rpx;
  height: 48rpx;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: #f9fafb;
  border: 2rpx dashed #d1d5db;
  border-radius: 24rpx;
}

.upload-icon-img {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 8rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 底部按钮 */
.modal-footer {
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  border-top: 1rpx solid #f3f4f6;
  display: flex;
  gap: 24rpx;
  flex-shrink: 0;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  background: #f3f4f6;
  color: #4b5563;
}

.btn-primary {
  background: #FF9F1C;
  color: #ffffff;
}

.btn-primary[disabled] {
  opacity: 0.5;
  background: #cccccc !important;
}

.btn.loading {
  opacity: 0.8;
}
