.modal-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.modal-content {
  width: 100%;
  max-width: 700rpx;
  max-height: 82vh;
  background: #ffffff;
  border-radius: 48rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.18);
  font-family: 'Microsoft YaHei','PingFang SC','Hiragino Sans GB','Heiti SC','SimHei',system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Noto Sans',sans-serif;
}

.modal-header {
  padding: 32rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.modal-close {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 0 40rpx 40rpx;
}

.limit-modal { padding: 0 0 32rpx; background: #ffffff; }

.limit-message {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 40rpx;
  white-space: pre-line;
}

.limit-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
}

.upgrade-btn { background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%); color: #7B3F00; box-shadow: 0 8rpx 20rpx rgba(255, 165, 0, 0.25); }
.primary-btn { background: linear-gradient(135deg, #4CAF50 0%, #26A69A 100%); color: #ffffff; box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.25); }

.divider-text { text-align: center; font-size: 24rpx; color: #9CA3AF; margin: 32rpx 0; position: relative; }
.divider-text::before, .divider-text::after { content: ''; position: absolute; top: 50%; width: 35%; height: 1rpx; background: #E5E7EB; }
.divider-text::before { left: 0; }
.divider-text::after { right: 0; }

.redeem-input-row { display: flex; gap: 16rpx; }
.modal-input { flex: 1; height: 80rpx; background: #F3F4F6; border-radius: 40rpx; padding: 0 32rpx; font-size: 28rpx; color: #374151; }
.redeem-btn { width: 160rpx !important; height: 80rpx; background: #10B981; color: white; border-radius: 40rpx; font-size: 28rpx; padding: 0; margin: 0; }
.redeem-btn[disabled] { background: #E5E7EB; color: #9CA3AF; }

